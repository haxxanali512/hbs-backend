<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 text-gray-600">System-wide statistics and management overview</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <!-- Organizations -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-indigo-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Organizations</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @organizations_count %></p>
          <p class="text-sm text-green-600">+<%= @organizations_growth %>% this month</p>
        </div>
      </div>
    </div>

    <!-- Active Organizations -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-green-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Active Organizations</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @active_organizations %></p>
          <p class="text-sm text-gray-500"><%= ((@active_organizations.to_f / @organizations_count) * 100).round(1) %>% of total</p>
        </div>
      </div>
    </div>

    <!-- Total Users -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20v-1a4 4 0 00-4-4H7a4 4 0 00-4 4v1M13 7a4 4 0 11-8 0 4 4 0 018 0zm7 13v-1a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Users</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @total_users %></p>
          <p class="text-sm text-green-600">+<%= @users_growth %>% this month</p>
        </div>
      </div>
    </div>

    <!-- Pending Billings -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-amber-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Pending Billings</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @pending_billings %></p>
          <p class="text-sm text-amber-600">Requires review</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Organizations -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Recent Organizations</h3>
      <div class="space-y-3">
        <% @recent_organizations.each do |org| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="h-8 w-8 rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center text-xs font-semibold">
                <%= org.name.first.upcase %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900"><%= org.name %></p>
                <p class="text-xs text-gray-500"><%= org.owner.email %></p>
              </div>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case org.activation_status
                    when 'activated' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-gray-100 text-gray-800'
                    else 'bg-amber-100 text-amber-800'
                    end %>">
                <%= org.activation_status.humanize %>
              </span>
              <p class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(org.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Users -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Recent Users</h3>
      <div class="space-y-3">
        <% @recent_users.each do |user| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="h-8 w-8 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-xs font-semibold">
                <%= user.display_name.first.upcase %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900"><%= user.display_name %></p>
                <p class="text-xs text-gray-500"><%= user.email %></p>
              </div>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= user.super_admin? ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %>">
                <%= user.role&.role_name || 'No Role' %>
              </span>
              <p class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(user.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
