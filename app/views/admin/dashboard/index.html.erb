<div class="w-full py-8 px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 text-gray-600">System-wide statistics and management overview</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <!-- Organizations -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-indigo-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Organizations</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @organizations_count %></p>
          <p class="text-sm text-green-600">+<%= @organizations_growth %>% this month</p>
        </div>
      </div>
    </div>

    <!-- Active Organizations -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-green-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Active Organizations</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @active_organizations %></p>
          <p class="text-sm text-gray-500"><%= ((@active_organizations.to_f / @organizations_count) * 100).round(1) %>% of total</p>
        </div>
      </div>
    </div>

    <!-- Total Users -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-blue-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20v-1a4 4 0 00-4-4H7a4 4 0 00-4 4v1M13 7a4 4 0 11-8 0 4 4 0 018 0zm7 13v-1a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Users</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @total_users %></p>
          <p class="text-sm text-green-600">+<%= @users_growth %>% this month</p>
        </div>
      </div>
    </div>

    <!-- Pending Billings -->
    <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 rounded-lg bg-amber-100 flex items-center justify-center">
            <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Pending Billings</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @pending_billings %></p>
          <p class="text-sm text-amber-600">Requires review</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Active Organizations: Onboarding Checklist Status -->
  <% if @activated_organizations.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Active Organizations - Onboarding Checklist Status</h2>
      <p class="text-sm text-gray-600 mb-4">Track tenant completion status and HBS tasks across all active organizations.</p>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organization</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Form Completion</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Organization Setup</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Internal System Setup</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Initial Encounter</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Enrollment Completion</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @activated_organizations.each do |org| %>
                <% steps = @organizations_onboarding_status[org.id] || [] %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center">
                        <span class="text-indigo-700 font-semibold text-xs"><%= org.name.first.upcase %></span>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to org.name, admin_organization_path(org), class: "text-indigo-600 hover:text-indigo-800" %>
                        </div>
                        <div class="text-xs text-gray-500"><%= org.owner&.email %></div>
                      </div>
                    </div>
                  </td>
                  <% steps.each do |step| %>
                    <td class="px-4 py-3 whitespace-nowrap text-center">
                      <% if step[:status] == :completed %>
                        <svg class="w-5 h-5 text-green-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      <% elsif step[:status] == :in_progress %>
                        <span class="text-gray-500 text-lg">â€”</span>
                      <% else %>
                        <svg class="w-5 h-5 text-red-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      <% end %>
                      <div class="text-xs text-gray-500 mt-1"><%= step[:completed_items] %>/<%= step[:total_items] %></div>
                    </td>
                  <% end %>
                  <td class="px-4 py-3 whitespace-nowrap text-center">
                    <%= link_to "View Details", admin_organization_path(org), class: "text-xs text-indigo-600 hover:text-indigo-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Latest Organizations: Activation Steps -->
  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Latest Organizations</h2>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Org Name</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Pending</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Compliance</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Billing</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Terms</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Activated</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% steps = [
              { key: :pending, label: "Pending" },
              { key: :compliance_setup, label: "Compliance Setup" },
              { key: :billing_setup, label: "Billing Setup" },
              { key: :terms_agreement, label: "Terms & Agreement" },
              { key: :activated, label: "Activated" }
            ] %>
            <% @recent_organizations.each do |org| %>
              <% current_status = org.activation_status.to_sym %>
              <% current_order = Organization.activation_statuses[current_status] || 0 %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to org.name, admin_organization_path(org), class: "text-indigo-600 hover:text-indigo-800" %>
                </td>
                <% steps.each do |step| %>
                  <% step_order = Organization.activation_statuses[step[:key]] %>
                  <% is_completed = step_order.present? && (step_order < current_order || (step_order == current_order && current_status == :activated)) %>
                  <td class="px-4 py-2 whitespace-nowrap text-center">
                    <% if is_completed %>
                      <svg class="w-4 h-4 text-green-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    <% else %>
                      <svg class="w-4 h-4 text-red-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
