<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Encounter</h1>
          <p class="mt-2 text-gray-600">Update encounter details</p>
        </div>
        <div>
          <%= link_to "Back to Encounters", admin_encounters_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <%= render "form", encounter: @encounter %>
    </div>

    <!-- Clinical Documentation Section -->
    <div class="mt-6">
      <%= render "shared/clinical_documentation", encounter: @encounter, clinical_documentations: @clinical_documentations, clinical_documentation: @clinical_documentation, namespace: "admin" %>
    </div>
  </div>
</div>

