<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Fee Schedule Item Details</h1>
          <p class="mt-2 text-gray-600">Item in <%= @fee_schedule.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Items", admin_fee_schedule_fee_schedule_items_path(@fee_schedule), 
              class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Status Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @fee_schedule_item.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @fee_schedule_item.active? ? 'Active' : 'Inactive' %>
          </span>
          <% if @fee_schedule_item.locked? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              Locked
            </span>
          <% end %>
        </div>
        
        <div class="flex space-x-2">
          <% if @fee_schedule_item.active? %>
            <%= link_to "Deactivate", deactivate_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                method: :post, 
                class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to deactivate this item?" } %>
          <% else %>
            <%= link_to "Activate", activate_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                method: :post, 
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to activate this item?" } %>
          <% end %>
          
          <% if @fee_schedule_item.locked? %>
            <%= link_to "Unlock", unlock_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                method: :post, 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to unlock this item?" } %>
          <% else %>
            <%= link_to "Lock", lock_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                method: :post, 
                class: "bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to lock this item?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Item Information -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Item Details</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="text-sm font-medium text-gray-500">Procedure Code</label>
              <p class="text-sm text-gray-900"><%= @fee_schedule_item.procedure_code.code %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Description</label>
              <p class="text-sm text-gray-900"><%= @fee_schedule_item.procedure_code.description %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Unit Price</label>
              <p class="text-sm text-gray-900">$<%= number_with_precision(@fee_schedule_item.unit_price, precision: 2) %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Pricing Rule</label>
              <p class="text-sm text-gray-900"><%= @fee_schedule_item.pricing_rule.humanize %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Status</label>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @fee_schedule_item.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @fee_schedule_item.active? ? 'Active' : 'Inactive' %>
                </span>
              </p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Locked</label>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @fee_schedule_item.locked? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= @fee_schedule_item.locked? ? 'Locked' : 'Unlocked' %>
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- System Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">System</h2>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Item ID</span>
              <span class="text-gray-900"><%= @fee_schedule_item.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Fee Schedule ID</span>
              <span class="text-gray-900"><%= @fee_schedule.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Procedure Code ID</span>
              <span class="text-gray-900"><%= @fee_schedule_item.procedure_code_id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Created</span>
              <span class="text-gray-900"><%= @fee_schedule_item.created_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Updated</span>
              <span class="text-gray-900"><%= @fee_schedule_item.updated_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div class="space-y-2">
            <%= link_to "Edit Item", edit_admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-md" %>
            <%= link_to "Delete Item", admin_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item), 
                method: :delete, 
                class: "block w-full text-left px-3 py-2 text-sm text-red-600 hover:bg-red-50 rounded-md", 
                data: { confirm: "Are you sure you want to delete this item? This action cannot be undone." } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
