<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @support_ticket.subject %></h1>
          <p class="mt-2 text-gray-600">Ticket #<%= @support_ticket.id %> · <%= @support_ticket.organization&.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Tickets", admin_support_tickets_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Status Badge -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Current Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
            <%= @support_ticket.status.humanize %>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            <%= @support_ticket.priority.humanize %> Priority
          </span>
          <span class="text-sm font-medium text-gray-700 ml-4">Assigned to:</span>
          <span class="text-sm text-gray-900"><%= @support_ticket.assigned_to_user&.display_name || "Unassigned" %></span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Ticket Details -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Ticket Details</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Category</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.category.humanize %></p>
              <% if @support_ticket.claims_issue? && @support_ticket.sub_category.present? %>
                <p class="mt-1 text-sm text-gray-700">Subcategory: <%= @support_ticket.sub_category.humanize %></p>
              <% end %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Status</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.status.humanize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Priority</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.priority.humanize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Assigned To</label>
              <div class="mt-1 flex items-center gap-2">
                <p class="text-sm text-gray-900"><%= @support_ticket.assigned_to_user&.display_name || "Unassigned" %></p>
                <% if @support_ticket.assigned_to_user && policy(@support_ticket.assigned_to_user).masquerade? %>
                  <%= link_to masquerade_path(@support_ticket.assigned_to_user), 
                      title: "Impersonate #{@support_ticket.assigned_to_user.display_name}",
                      target: '_blank',
                      rel: 'noopener noreferrer',
                      class: "inline-flex items-center text-purple-600 hover:text-purple-800 text-xs" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                    <span class="ml-1">Impersonate</span>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Created</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.created_at, format: :long) %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Created By</label>
              <div class="mt-1 flex items-center gap-2">
                <p class="text-sm text-gray-900"><%= @support_ticket.created_by_user&.display_name %></p>
                <% if @support_ticket.created_by_user && policy(@support_ticket.created_by_user).masquerade? %>
                  <%= link_to masquerade_path(@support_ticket.created_by_user), 
                      title: "Impersonate #{@support_ticket.created_by_user.display_name}",
                      target: '_blank',
                      rel: 'noopener noreferrer',
                      class: "inline-flex items-center text-purple-600 hover:text-purple-800 text-xs" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-4 w-4"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                    <span class="ml-1">Impersonate</span>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="mt-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <p class="text-sm text-gray-900 whitespace-pre-line"><%= @support_ticket.description %></p>
          </div>
        </div>

        <!-- Conversation -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Conversation</h2>
            <span class="text-xs text-gray-500">Public + internal</span>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @comments.any? %>
              <% @comments.each do |comment| %>
                <div class="py-4">
                  <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-medium text-gray-900"><%= comment.author_user.display_name %></span>
                      <% if comment.internal? %>
                        <span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-0.5 text-xs font-semibold text-yellow-800 uppercase">Internal</span>
                      <% end %>
                    </div>
                    <span class="text-xs text-gray-500"><%= l(comment.created_at, format: :short) %></span>
                  </div>
                  <p class="text-sm text-gray-700 whitespace-pre-line"><%= comment.body %></p>
                </div>
              <% end %>
            <% else %>
              <div class="py-4 text-sm text-gray-500">No comments yet.</div>
            <% end %>
          </div>
          <div class="border-t border-gray-200 pt-6 mt-6">
            <%= form_with url: admin_support_ticket_comments_path(@support_ticket), scope: :support_ticket_comment, local: true, class: "space-y-4" do |f| %>
              <div>
                <%= f.label :visibility, "Visibility", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :visibility,
                             SupportTicketComment.visibilities.keys.map { |k| [k.humanize, k] },
                             {},
                             class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
              <div>
                <%= f.label :body, "Comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :body, rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
              <div class="flex justify-end">
                <%= f.submit "Post Comment", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Attach Document -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Attach Document</h2>
          <%= form_with url: attach_document_admin_support_ticket_path(@support_ticket), method: :post, local: true, multipart: true, class: "space-y-4" do |f| %>
            <div>
              <%= label_tag "document[title]", "Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= text_field_tag "document[title]", nil, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Document title" %>
            </div>
            <div>
              <%= label_tag "document[file]", "File", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= file_field_tag "document[file]", required: true, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <p class="mt-1 text-xs text-gray-500">PDF, images, or office docs. Max 25MB.</p>
            </div>
            <div class="flex justify-end">
              <%= f.submit "Attach Document", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Triage Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">Triage Actions</h3>
          <%= form_with model: @support_ticket, url: admin_support_ticket_path(@support_ticket), method: :patch, local: true, class: "space-y-4" do |f| %>
            <div>
              <%= f.label :assigned_to_user_id, "Assign to", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.collection_select :assigned_to_user_id,
                                      User.joins(:role).where(roles: { scope: Role.scopes[:global] }).order(:first_name),
                                      :id,
                                      :display_name,
                                      { include_blank: "Unassigned" },
                                      class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
            <div>
              <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :priority,
                           SupportTicket.priorities.keys.map { |k| [k.humanize, k] },
                           {},
                           class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
            <div>
              <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.select :status,
                           SupportTicket.statuses.keys.map { |k| [k.humanize, k] },
                           {},
                           class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
            <div>
              <%= f.label :linked_resource_type, "Linked Resource", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="grid grid-cols-2 gap-2">
                <%= f.select :linked_resource_type,
                             [["None", ""]] + SupportTicket::LINKED_RESOURCE_TYPES.keys.map { |k| [k, k] },
                             {},
                             class: "border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                <%= f.text_field :linked_resource_id,
                                 placeholder: "Reference ID",
                                 class: "border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
            </div>
            <div class="flex justify-end gap-2 pt-2 border-t border-gray-200">
              <%= link_to "Close",
                          close_admin_support_ticket_path(@support_ticket),
                          method: :patch,
                          data: { turbo: false },
                          class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
              <%= link_to "Reopen",
                          reopen_admin_support_ticket_path(@support_ticket),
                          method: :patch,
                          data: { turbo: false },
                          class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" unless @support_ticket.open? %>
              <%= f.submit "Save Changes", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>

        <!-- Internal Notes -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">Internal Notes</h3>
          <div class="space-y-3 max-h-64 overflow-y-auto mb-4">
            <% if (@support_ticket.internal_notes || []).any? %>
              <% (@support_ticket.internal_notes || []).reverse.each do |note| %>
                <div class="border border-gray-200 rounded-md p-3">
                  <p class="text-xs text-gray-500 mb-1"><%= note["author_name"] %> · <%= Time.zone.parse(note["created_at"].to_s).strftime("%b %d %I:%M%p") rescue note["created_at"] %></p>
                  <p class="text-sm text-gray-700"><%= note["body"] %></p>
                </div>
              <% end %>
            <% else %>
              <p class="text-sm text-gray-500">No notes yet.</p>
            <% end %>
          </div>
          <%= form_with url: add_internal_note_admin_support_ticket_path(@support_ticket), scope: :note, method: :post, local: true, class: "space-y-3 border-t border-gray-200 pt-4" do |f| %>
            <%= f.text_area :body, rows: 3, placeholder: "Add note", class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <div class="flex justify-end">
              <%= f.submit "Save Note", class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>

        <!-- Documents -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">Documents</h3>
          <% if @support_ticket.documents.attached? %>
            <div class="space-y-2">
              <% @support_ticket.documents.each do |attachment| %>
                <div class="flex items-center justify-between p-2 border border-gray-200 rounded-md hover:bg-gray-50">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= attachment.filename %></p>
                    <p class="text-xs text-gray-500"><%= number_to_human_size(attachment.byte_size) %> · <%= attachment.content_type %></p>
                  </div>
                  <%= link_to "View", rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "ml-2 text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No documents attached.</p>
          <% end %>
        </div>

        <!-- SLA Timers -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">SLA Timers</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">First Response Due</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.first_response_due_at, format: :long) %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Resolution Target</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.resolution_due_at, format: :long) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Document Modal -->
<div id="documentModal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!-- Background overlay -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="closeDocumentModal()"></div>

    <!-- Modal panel -->
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900" id="modal-title">Document Viewer</h3>
          <button type="button" onclick="closeDocumentModal()" class="text-gray-400 hover:text-gray-500">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div id="modalContent" class="mt-4">
          <!-- Content will be inserted here -->
        </div>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button type="button" onclick="closeDocumentModal()" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 sm:ml-3 sm:w-auto sm:text-sm">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
function openDocumentModal(button) {
  const filePath = button.getAttribute('data-file-path');
  const title = button.getAttribute('data-title');
  const fileName = button.getAttribute('data-file-name');
  const isImage = button.getAttribute('data-is-image') === 'true';
  
  const modal = document.getElementById('documentModal');
  const modalContent = document.getElementById('modalContent');
  const modalTitle = document.getElementById('modal-title');
  
  modalTitle.textContent = title || fileName;
  
  if (isImage) {
    modalContent.innerHTML = '<img src="' + escapeHtml(filePath) + '" alt="' + escapeHtml(fileName) + '" class="max-w-full h-auto mx-auto" />';
  } else {
    modalContent.innerHTML = '<div class="text-center">' +
      '<p class="text-sm text-gray-600 mb-4">Preview not available for this file type.</p>' +
      '<a href="' + escapeHtml(filePath) + '" target="_blank" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">' +
      '<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
      '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />' +
      '</svg>Download File</a></div>';
  }
  
  modal.classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

function closeDocumentModal() {
  const modal = document.getElementById('documentModal');
  modal.classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Close modal on Escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeDocumentModal();
  }
});
</script>
