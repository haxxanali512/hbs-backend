<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Diagnosis Codes</h1>
  <%= link_to "New Code", new_admin_diagnosis_code_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md" %>
  </div>

<div class="mb-4 grid grid-cols-1 md:grid-cols-3 gap-3">
  <div>
    <%= form_with url: admin_diagnosis_codes_path, method: :get, local: true do |f| %>
      <div class="flex space-x-2">
        <%= text_field_tag :search, params[:search], placeholder: "Search code or description", class: "w-full border rounded px-3 py-2" %>
        <%= select_tag :status, options_for_select([["All", ""], ["Active", "active"], ["Retired", "retired"]], params[:status]), class: "border rounded px-3 py-2" %>
        <%= submit_tag "Filter", class: "bg-gray-100 px-3 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>

<div class="bg-white shadow rounded-md overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @diagnosis_codes.each do |dx| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= dx.code %></td>
          <td class="px-6 py-4"><%= dx.description %></td>
          <td class="px-6 py-4">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= dx.status_badge_color %>"><%= dx.status.humanize %></span>
          </td>
          <td class="px-6 py-4 text-right space-x-2">
            <%= link_to "Show", admin_diagnosis_code_path(dx), class: "text-blue-600 hover:text-blue-900" %>
            <%= link_to "Edit", edit_admin_diagnosis_code_path(dx), class: "text-gray-600 hover:text-gray-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


