<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @diagnosis_code.code %></h1>
          <p class="mt-2 text-gray-600"><%= @diagnosis_code.description %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Edit", edit_admin_diagnosis_code_path(@diagnosis_code), 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          
          <% if @diagnosis_code.can_be_retired? %>
            <%= link_to "Retire", retire_admin_diagnosis_code_path(@diagnosis_code), 
                method: :post,
                class: "bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure you want to retire this diagnosis code?" } %>
          <% elsif @diagnosis_code.can_be_activated? %>
            <%= link_to "Activate", activate_admin_diagnosis_code_path(@diagnosis_code), 
                method: :post,
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure you want to activate this diagnosis code?" } %>
          <% end %>
          
          <%= link_to "Back to List", admin_diagnosis_codes_path, 
              class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Basic Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>
          <dl class="grid grid-cols-1 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Code</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @diagnosis_code.code %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @diagnosis_code.description %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @diagnosis_code.status_badge_color %>">
                  <%= @diagnosis_code.status.humanize %>
                </span>
              </dd>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Effective From</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @diagnosis_code.effective_from ? @diagnosis_code.effective_from.strftime("%B %d, %Y") : "Not set" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Effective To</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @diagnosis_code.effective_to ? @diagnosis_code.effective_to.strftime("%B %d, %Y") : "Not set" %>
                </dd>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @diagnosis_code.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @diagnosis_code.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
              </div>
            </div>
          </dl>
        </div>

        <!-- Associated Encounters -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Associated Encounters</h2>
          <% if @diagnosis_code.encounters.any? %>
            <div class="text-sm text-gray-700">
              <p>This diagnosis code is used in <strong><%= pluralize(@diagnosis_code.encounters.count, "encounter") %></strong>.</p>
              <p class="mt-2 text-gray-500">Retired codes remain valid for historical encounters but cannot be newly assigned.</p>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No encounters use this diagnosis code yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <%= link_to "Edit Details", edit_admin_diagnosis_code_path(@diagnosis_code), 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
            
            <% if @diagnosis_code.can_be_retired? %>
              <%= link_to "Retire Code", retire_admin_diagnosis_code_path(@diagnosis_code), 
                  method: :post,
                  class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block",
                  data: { confirm: "Are you sure you want to retire this diagnosis code?" } %>
            <% elsif @diagnosis_code.can_be_activated? %>
              <%= link_to "Activate Code", activate_admin_diagnosis_code_path(@diagnosis_code), 
                  method: :post,
                  class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block",
                  data: { confirm: "Are you sure you want to activate this diagnosis code?" } %>
            <% end %>
          </div>
        </div>

        <!-- Status Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Status Information</h3>
          <div class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Current Status</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @diagnosis_code.status_badge_color %>">
                  <%= @diagnosis_code.status.humanize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Can be retired?</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @diagnosis_code.can_be_retired? ? "Yes" : "No" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">In use?</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @diagnosis_code.in_use? ? "Yes" : "No" %>
              </dd>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
