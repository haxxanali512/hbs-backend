<%# Procedure Code form %>
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <% if @procedure_code.errors.any? %>
    <div class="mb-6 bg-red-50 border border-red-200 text-red-800 rounded-md p-4">
      <div class="font-semibold mb-2"><%= pluralize(@procedure_code.errors.count, "error") %> prohibited this procedure code from being saved:</div>
      <ul class="list-disc ml-6 text-sm">
        <% @procedure_code.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @procedure_code, url: (@procedure_code.persisted? ? admin_procedure_code_path(@procedure_code) : admin_procedure_codes_path), local: true, class: "space-y-6") do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :code, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :code, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "e.g., 99213" %>
        <p class="mt-1 text-sm text-gray-500">Unique procedure code identifier</p>
      </div>
      <div>
        <%= f.label :code_type, "Code Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :code_type, 
            options_for_select([
              ["CPT", "cpt"],
              ["HCPCS", "hcpcs"],
              ["ICD-10", "icd10"],
              ["Custom", "custom"]
            ], @procedure_code.code_type),
            { prompt: "Select Code Type" },
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>
    </div>

    <!-- Pricing Rule & Clinical Rules (admin-only) -->
    <div class="border-t border-gray-200 pt-4 mt-4">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Pricing Rule & Clinical Rules</h3>
      <p class="text-sm text-gray-500 mb-4">
        These settings control how this CPT is priced and validated across all tenants. Tenants can only edit the rate per unit.
      </p>

      <%= f.fields_for :procedure_code_rule do |rf| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= rf.label :time_based, "Time-based (units from duration)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="flex items-center mt-1">
              <%= rf.check_box :time_based, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <span class="ml-2 text-xs text-gray-600">
                If checked, units for this code will be derived from encounter duration (e.g., 1 unit per 15 minutes).
              </span>
            </div>
          </div>

          <div>
            <%= rf.label :pricing_type, "Pricing Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= rf.select :pricing_type,
                  options_for_select(
                    [
                      ["Per Unit (time/units-based)", "per_unit"],
                      ["Per Procedure (flat)", "per_procedure"]
                    ],
                    rf.object&.pricing_type
                  ),
                  { prompt: "Select pricing type" },
                  class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <p class="mt-1 text-xs text-gray-500">
              Per Unit: amount is rate Ã— units (often time-based). Per Procedure: flat amount, units usually forced to 1.
            </p>
          </div>
        </div>

        <div class="mt-4">
          <%= rf.label :special_rules_text, "Special Rules (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= rf.text_area :special_rules_text,
                rows: 6,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm font-mono",
                placeholder: "One rule per line, e.g.\nLimit 4 units\nCannot be billed w. 97124\nRequires 96360" %>
          <p class="mt-1 text-xs text-gray-500">
            Optional. These free-text rules drive validator behavior (unit limits, conflicts, documentation, frequency, etc.). One rule per line.
          </p>
        </div>
      <% end %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Detailed description of the procedure" %>
      <p class="mt-1 text-sm text-gray-500">Provide a clear, detailed description of what this procedure code represents</p>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, 
          options_for_select([
            ["Active", "active"],
            ["Retired", "retired"]
          ], @procedure_code.status),
          {},
          { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      <p class="mt-1 text-sm text-gray-500">Active codes can be used in encounters and claims</p>
    </div>

    <!-- EZClaim Integration (only for new records) -->
    <% if @procedure_code.new_record? %>
      <div class="space-y-4 pt-4 border-t border-gray-200">
        <div class="flex items-center">
          <%= f.check_box :push_to_ezclaim, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :push_to_ezclaim, "Push To EZClaim", class: "ml-2 block text-sm font-medium text-gray-700" %>
        </div>
        <p class="text-sm text-gray-500">If checked, this procedure code will be automatically pushed to EZClaim after creation.</p>
      </div>
    <% end %>

    <div class="flex items-center space-x-3">
      <%= f.submit (@procedure_code.new_record? ? "Create Procedure Code" : "Update Procedure Code"), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
      <%= link_to "Cancel", (@procedure_code.new_record? ? admin_procedure_codes_path : admin_procedure_code_path(@procedure_code)), class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
</div>
