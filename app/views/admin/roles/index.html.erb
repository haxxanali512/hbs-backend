<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Roles</h1>
    <%= link_to "New Role", new_admin_role_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-md" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <% @roles.each do |role| %>
        <li class="px-4 py-4 sm:px-6 flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-indigo-600 truncate"><%= role.role_name %></p>
            <p class="mt-1 text-sm text-gray-500">Updated <%= time_ago_in_words(role.updated_at) %> ago</p>
          </div>
          <div class="flex items-center space-x-3">
            <%= link_to "Edit", edit_admin_role_path(role), class: "text-sm text-indigo-700 hover:text-indigo-900" %>
            <button type="button" onclick="window.HBSConfirm && window.HBSConfirm.open('<%= admin_role_path(role) %>')" class="text-sm text-red-600 hover:text-red-800 cursor-pointer">Delete</button>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

