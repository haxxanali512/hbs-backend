<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Specialties</h1>
          <p class="mt-2 text-gray-600">Manage medical specialties and their allowed CPT codes</p>
        </div>
        <div>
          <%= link_to "New Specialty", new_admin_specialty_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <% 
      @search_placeholder = "Specialty name, description..."
      @status_options = [["Active", "active"], ["Retired", "retired"]]
    %>
    <%= render "shared/filters" %>

    <!-- Specialties Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Providers</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CPT Codes</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @specialties.each do |specialty| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to specialty.name, admin_specialty_path(specialty), 
                        class: "text-blue-600 hover:text-blue-800" %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 max-w-xs truncate">
                    <%= specialty.description %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_colors = {
                    "active" => "bg-green-100 text-green-800",
                    "retired" => "bg-gray-100 text-gray-800"
                  } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[specialty.status] %>">
                    <%= specialty.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= link_to specialty.provider_count, list_providers_admin_specialty_path(specialty), 
                      class: "text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= specialty.procedure_code_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", admin_specialty_path(specialty), 
                        class: "text-blue-600 hover:text-blue-800" %>
                    
                    <% if specialty.can_be_edited? %>
                      <%= link_to "Edit", edit_admin_specialty_path(specialty), 
                          class: "text-indigo-600 hover:text-indigo-800" %>
                    <% end %>
                    
                    <% if specialty.can_be_retired? %>
                      <%= link_to "Retire", retire_admin_specialty_path(specialty), 
                          method: :post,
                          class: "text-orange-600 hover:text-orange-800",
                          data: { confirm: "Are you sure you want to retire this specialty?" } %>
                    <% end %>
                    
                    <% if specialty.can_be_deleted? %>
                      <%= link_to "Delete", admin_specialty_path(specialty), 
                          method: :delete,
                          class: "text-red-600 hover:text-red-800",
                          data: { confirm: "Are you sure you want to delete this specialty?" } %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @specialties.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No specialties found</div>
          <div class="text-gray-400 text-sm mt-2">Try adjusting your filters or create a new specialty</div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
