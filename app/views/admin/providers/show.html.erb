<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @provider.full_name %></h1>
          <p class="mt-2 text-gray-600">Provider Details</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Providers", admin_providers_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_admin_provider_path(@provider), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Status Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Current Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @provider.status_badge_color %>">
            <%= @provider.status.humanize %>
          </span>
        </div>
        
        <div class="flex space-x-2">
          <% if @provider.can_be_approved? %>
            <%= link_to "Approve", approve_admin_provider_path(@provider), method: :post, 
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to approve this provider?" } %>
          <% end %>
          
          <% if @provider.can_be_rejected? %>
            <%= link_to "Reject", reject_admin_provider_path(@provider), method: :post, 
                class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to reject this provider?" } %>
          <% end %>
          
          <% if @provider.can_be_suspended? %>
            <%= link_to "Suspend", suspend_admin_provider_path(@provider), method: :post, 
                class: "bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to suspend this provider?" } %>
          <% end %>
          
          <% if @provider.can_be_reactivated? %>
            <%= link_to "Reactivate", reactivate_admin_provider_path(@provider), method: :post, 
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to reactivate this provider?" } %>
          <% end %>
          
          <% if @provider.can_be_resubmitted? %>
            <%= link_to "Resubmit", resubmit_admin_provider_path(@provider), method: :post, 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
                data: { confirm: "Are you sure you want to resubmit this provider?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Provider Information -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Provider Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="text-sm font-medium text-gray-500">First Name</label>
              <p class="text-sm text-gray-900"><%= @provider.first_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Last Name</label>
              <p class="text-sm text-gray-900"><%= @provider.last_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">NPI</label>
              <p class="text-sm text-gray-900"><%= @provider.npi.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License Number</label>
              <p class="text-sm text-gray-900"><%= @provider.license_number.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License State</label>
              <p class="text-sm text-gray-900"><%= @provider.license_state.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Specialty</label>
              <p class="text-sm text-gray-900"><%= @provider.specialty.name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Status</label>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @provider.status_badge_color %>">
                  <%= @provider.status.humanize %>
                </span>
              </p>
            </div>
          </div>
          
        </div>

        <!-- Organization Assignments -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Organization Assignments</h2>
          <% if @provider.organizations.any? %>
            <div class="space-y-3">
              <% @provider.provider_assignments.includes(:organization).each do |assignment| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= assignment.organization.name %></p>
                    <p class="text-xs text-gray-500">Role: <%= assignment.role.humanize %></p>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= assignment.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= assignment.active? ? 'Active' : 'Inactive' %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No organization assignments.</p>
          <% end %>
        </div>

        <!-- Documents -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Documents</h2>
          <% if @documents.any? %>
            <div class="space-y-3">
              <% @documents.each do |document| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= document.title %></p>
                      <p class="text-xs text-gray-500"><%= document.document_type.humanize if document.document_type.present? %></p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%= document.status.humanize %>
                    </span>
                    <%= link_to "View", "#", class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No documents uploaded yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- System Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">System</h2>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Provider ID</span>
              <span class="text-gray-900"><%= @provider.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Specialty ID</span>
              <span class="text-gray-900"><%= @provider.specialty_id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Created</span>
              <span class="text-gray-900"><%= @provider.created_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Updated</span>
              <span class="text-gray-900"><%= @provider.updated_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <div class="space-y-2">
            <%= link_to "Delete Provider", admin_provider_path(@provider), method: :delete, 
                class: "block w-full text-left px-3 py-2 text-sm text-red-600 hover:bg-red-50 rounded-md", 
                data: { confirm: "Are you sure you want to delete this provider? This action cannot be undone." } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
