<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Organization Accepted Plans</h1>
          <p class="mt-2 text-gray-600">Manage organization insurance plan acceptances</p>
        </div>
        <div>
          <%= link_to "New Accepted Plan", new_admin_org_accepted_plan_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <%= render "shared/filters" %>

    <!-- Organization Accepted Plans Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organization</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Insurance Plan</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Network Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Enrollment Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Effective Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @org_accepted_plans.present? && @org_accepted_plans.any? %>
              <% @org_accepted_plans.each do |plan| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= plan.organization.name %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= plan.insurance_plan.name %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= plan.network_type_badge_class %>">
                      <%= plan.network_type.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= plan.status_badge_class %>">
                      <%= plan.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= plan.enrollment_status_badge_class %>">
                      <%= plan.enrollment_status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= plan.effective_date&.strftime("%b %d, %Y") || "â€”" %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", admin_org_accepted_plan_path(plan), class: "text-blue-600 hover:text-blue-800" %>
                      <%= link_to "Edit", edit_admin_org_accepted_plan_path(plan), class: "text-indigo-600 hover:text-indigo-800" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @org_accepted_plans.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No organization accepted plans found</div>
          <div class="text-gray-400 text-sm mt-2">Try adjusting your filters or create a new accepted plan</div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>

