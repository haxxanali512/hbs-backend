<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Payer Enrollments</h1>
        <p class="mt-2 text-gray-600">Track payer enrollment records</p>
      </div>
      <%= link_to "New Enrollment", new_admin_payer_enrollment_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
    </div>

    <!-- Filters -->
    <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <%= form_with url: admin_payer_enrollments_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-5 gap-4" do |f| %>
        <div>
          <%= f.label :organization_id, "Organization", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :organization_id, options_from_collection_for_select(@organizations, :id, :name, params[:organization_id]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div>
          <%= f.label :payer_id, "Payer", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :payer_id, options_from_collection_for_select(@payers, :id, :name, params[:payer_id]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status, options_for_select(PayerEnrollment.statuses.keys.map { |k| [k.humanize, k] }, params[:status]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div>
          <%= f.label :enrollment_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :enrollment_type, options_for_select(PayerEnrollment.enrollment_types.keys.map { |k| [k.humanize, k] }, params[:enrollment_type]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div class="flex items-end">
          <%= f.submit "Filter", class: "w-full bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
          <%= link_to "Clear", admin_payer_enrollments_path, class: "ml-2 w-full bg-gray-300 hover:bg-gray-400 text-gray-700 text-sm font-medium px-4 py-2 rounded-md text-center" %>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Organization</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Provider</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">External ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payer_enrollments.each do |enrollment| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900"><%= enrollment.organization.name %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= enrollment.payer.name %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= enrollment.enrollment_type.humanize %></td>
                <td class="px-6 py-4 text-sm">
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= enrollment.status_badge_class %>">
                    <%= enrollment.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= enrollment.provider&.full_name || '—' %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= enrollment.organization_location&.name || '—' %></td>
                <td class="px-6 py-4 text-sm text-gray-900 font-mono"><%= enrollment.external_enrollment_id || '—' %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= enrollment.created_at.strftime("%m/%d/%Y") %></td>
                <td class="px-6 py-4 text-right text-sm">
                  <%= link_to "View", admin_payer_enrollment_path(enrollment), class: "text-blue-600 hover:text-blue-800" %>
                  <%= link_to "Edit", edit_admin_payer_enrollment_path(enrollment), class: "ml-3 text-indigo-600 hover:text-indigo-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%== pagination_info(@pagy) %>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>

