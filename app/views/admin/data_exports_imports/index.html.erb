<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Data Export & Import</h1>
        <p class="mt-2 text-gray-600">Export data to CSV/Excel or import data from files</p>
      </div>
    </div>

    <!-- Action Type Selection -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="mb-4">
        <label for="action_type" class="block text-sm font-medium text-gray-700 mb-2">
          Select Action Type
        </label>
        <select id="action_type" 
                name="action_type" 
                class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                onchange="window.location.href='<%= admin_data_exports_imports_path %>?action_type=' + this.value">
          <option value="export" <%= 'selected' if @action_type == 'export' %>>Export Data</option>
          <option value="import" <%= 'selected' if @action_type == 'import' %>>Import Data</option>
        </select>
      </div>
    </div>

    <!-- Export Section -->
    <% if @action_type == "export" %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Export Data</h2>
        
        <%= form_with url: export_admin_data_exports_imports_path, method: :post, local: true, class: "space-y-6" do |f| %>
          <!-- Model Selection -->
          <div>
            <label for="export_model_name" class="block text-sm font-medium text-gray-700 mb-2">
              Select Model <span class="text-red-500">*</span>
            </label>
            <select id="export_model_name" 
                    name="model_name" 
                    required
                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="">Select a model...</option>
              <% @available_models.each do |model| %>
                <option value="<%= model[:class] %>"><%= model[:name] %> - <%= model[:description] %></option>
              <% end %>
            </select>
          </div>

          <!-- Format Selection -->
          <div>
            <label for="export_format" class="block text-sm font-medium text-gray-700 mb-2">
              Export Format
            </label>
            <select id="export_format" 
                    name="format" 
                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="csv" selected>CSV (Recommended)</option>
              <option value="xlsx">CSV (Excel Compatible)</option>
            </select>
            <p class="mt-1 text-sm text-gray-500">CSV files can be opened in Excel. Full Excel format support coming soon.</p>
          </div>

          <!-- Filters -->
          <div class="border-t border-gray-200 pt-4">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Filters (Optional)</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- Organization Filter -->
              <div>
                <label for="export_organization_id" class="block text-sm font-medium text-gray-700 mb-2">
                  Organization
                </label>
                <select id="export_organization_id" 
                        name="organization_id" 
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="">All Organizations</option>
                  <% Organization.kept.order(:name).each do |org| %>
                    <option value="<%= org.id %>"><%= org.name %></option>
                  <% end %>
                </select>
              </div>

              <!-- Status Filter -->
              <div>
                <label for="export_status" class="block text-sm font-medium text-gray-700 mb-2">
                  Status
                </label>
                <select id="export_status" 
                        name="status" 
                        class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="">All Statuses</option>
                </select>
              </div>

              <!-- Date Range -->
              <div>
                <label for="export_date_from" class="block text-sm font-medium text-gray-700 mb-2">
                  Date From
                </label>
                <input type="date" 
                       id="export_date_from" 
                       name="date_from" 
                       class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <div>
                <label for="export_date_to" class="block text-sm font-medium text-gray-700 mb-2">
                  Date To
                </label>
                <input type="date" 
                       id="export_date_to" 
                       name="date_to" 
                       class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-end pt-4 border-t border-gray-200">
            <button type="submit" 
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors">
              Export Data
            </button>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Import Section -->
    <% if @action_type == "import" %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Import Data</h2>
        
        <%= form_with url: import_admin_data_exports_imports_path, method: :post, local: true, multipart: true, class: "space-y-6" do |f| %>
          <!-- Model Selection -->
          <div>
            <label for="import_model_name" class="block text-sm font-medium text-gray-700 mb-2">
              Select Model <span class="text-red-500">*</span>
            </label>
            <select id="import_model_name" 
                    name="model_name" 
                    required
                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    onchange="updateSampleDownloadLink(this.value)">
              <option value="">Select a model...</option>
              <% @available_models.each do |model| %>
                <option value="<%= model[:class] %>"><%= model[:name] %> - <%= model[:description] %></option>
              <% end %>
            </select>
          </div>

          <!-- Download Sample -->
          <div id="sample_download_section" class="hidden">
            <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-blue-900">Download Sample File</p>
                  <p class="text-sm text-blue-700 mt-1">Download a sample file with headers to see the required format</p>
                </div>
                <div class="flex space-x-2">
                  <a href="#" 
                     id="download_csv_sample"
                     onclick="downloadSample('csv'); return false;"
                     class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-md transition-colors">
                    Download CSV Sample
                  </a>
                  <a href="#" 
                     id="download_xlsx_sample"
                     onclick="downloadSample('csv'); return false;"
                     class="bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-2 px-4 rounded-md transition-colors">
                    Download CSV Sample (Excel Compatible)
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- File Upload -->
          <div>
            <label for="import_file" class="block text-sm font-medium text-gray-700 mb-2">
              Upload File <span class="text-red-500">*</span>
            </label>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-blue-400 transition-colors">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-4h-4m-4 0h4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <div class="flex text-sm text-gray-600">
                  <label for="import_file" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                    <span>Upload a file</span>
                    <input id="import_file" 
                           name="file" 
                           type="file" 
                           accept=".csv,.xlsx,.xls"
                           required
                           class="sr-only"
                           onchange="updateFileName(this)">
                  </label>
                  <p class="pl-1">or drag and drop</p>
                </div>
                <p class="text-xs text-gray-500" id="file_name">CSV or Excel files up to 10MB</p>
              </div>
            </div>
          </div>

          <!-- Organization Filter (for import) -->
          <div>
            <label for="import_organization_id" class="block text-sm font-medium text-gray-700 mb-2">
              Organization (if required)
            </label>
            <select id="import_organization_id" 
                    name="organization_id" 
                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="">Select organization (if required)...</option>
              <% Organization.kept.order(:name).each do |org| %>
                <option value="<%= org.id %>"><%= org.name %></option>
              <% end %>
            </select>
            <p class="mt-1 text-sm text-gray-500">Some models require an organization. Select one if needed.</p>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-end pt-4 border-t border-gray-200">
            <button type="submit" 
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors">
              Import Data
            </button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function updateSampleDownloadLink(modelName) {
    const sampleSection = document.getElementById('sample_download_section');
    
    if (modelName) {
      sampleSection.classList.remove('hidden');
      window.currentModelName = modelName;
    } else {
      sampleSection.classList.add('hidden');
      window.currentModelName = null;
    }
  }

  function downloadSample(format) {
    const modelName = window.currentModelName;
    if (!modelName) {
      alert('Please select a model first.');
      return;
    }
    window.location.href = '<%= download_sample_admin_data_exports_imports_path(format: :csv) %>?model_name=' + encodeURIComponent(modelName) + '&format=' + format;
  }

  function updateFileName(input) {
    const fileName = input.files[0]?.name || 'CSV or Excel files up to 10MB';
    document.getElementById('file_name').textContent = fileName;
  }
</script>

