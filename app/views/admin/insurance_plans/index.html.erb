<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Insurance Plans</h1>
        <p class="mt-2 text-gray-600">Global catalog of insurance plans</p>
      </div>
      <%= link_to "New Plan", new_admin_insurance_plan_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
    </div>

    <!-- Filters -->
    <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <%= form_with url: admin_insurance_plans_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
        <div>
          <%= f.label :payer_id, "Payer", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :payer_id, options_from_collection_for_select(@payers, :id, :name, params[:payer_id]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status, options_for_select(InsurancePlan.statuses.keys.map { |k| [k.humanize, k] }, params[:status]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div>
          <%= f.label :plan_type, "Plan Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :plan_type, options_for_select(InsurancePlan.plan_types.keys.map { |k| [k.humanize, k] }, params[:plan_type]), { include_blank: "All" }, class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
        </div>
        <div class="flex items-end">
          <%= f.submit "Filter", class: "w-full bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
          <%= link_to "Clear", admin_insurance_plans_path, class: "ml-2 w-full bg-gray-300 hover:bg-gray-400 text-gray-700 text-sm font-medium px-4 py-2 rounded-md text-center" %>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Plan Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">State Scope</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @insurance_plans.each do |plan| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900"><%= plan.name %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= plan.payer.name %></td>
                <td class="px-6 py-4 text-sm text-gray-900 font-mono"><%= plan.plan_code %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= plan.plan_type.humanize %></td>
                <td class="px-6 py-4 text-sm">
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= plan.status_badge_class %>">
                    <%= plan.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= (plan.state_scope || []).join(', ').presence || 'National' %></td>
                <td class="px-6 py-4 text-right text-sm">
                  <%= link_to "View", admin_insurance_plan_path(plan), class: "text-blue-600 hover:text-blue-800" %>
                  <%= link_to "Edit", edit_admin_insurance_plan_path(plan), class: "ml-3 text-indigo-600 hover:text-indigo-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%== pagination_info(@pagy) %>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>

