<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Claim Details</h1>
          <p class="mt-2 text-gray-600">Claim #<%= @claim.id %></p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Back to Claims", admin_claims_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% if (@claim.generated? || @claim.validated?) && current_user.permissions_for("admin", "claims", "update") %>
            <%= link_to "Edit", edit_admin_claim_path(@claim), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Status Badge -->
    <div class="mb-6">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @claim.status_badge_color %>">
        <%= @claim.status&.humanize || "—" %>
      </span>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column - Claim Header -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Claim Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Claim Information</h2>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Organization</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.organization.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Patient</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.patient.full_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Provider</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.provider.full_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Specialty</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.specialty.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Date of Service</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.encounter.date_of_service.strftime("%B %d, %Y") if @claim.encounter&.date_of_service %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Place of Service</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.place_of_service_code %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">External Claim Key</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.external_claim_key || "N/A" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Generated At</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @claim.generated_at&.strftime("%B %d, %Y %I:%M %p") || "N/A" %></dd>
            </div>
            <% if @claim.submitted_at %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Submitted At</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @claim.submitted_at.strftime("%B %d, %Y %I:%M %p") %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Claim Lines -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Claim Lines</h2>
          <% if @claim.claim_lines.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Procedure</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Units</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Modifiers</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">DX Pointers</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @claim.claim_lines.each do |line| %>
                    <tr>
                      <td class="px-4 py-3 text-sm text-gray-900">
                        <%= line.procedure_code.code %> - <%= line.procedure_code.description %>
                      </td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= line.units %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= number_to_currency(line.amount_billed) %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= line.modifiers.join(", ") || "N/A" %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= line.dx_pointers_numeric.join(", ") || "N/A" %></td>
                      <td class="px-4 py-3 text-sm">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          <%= line.status.humanize %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No claim lines yet.</p>
          <% end %>
        </div>

        <!-- Submissions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Submissions</h2>
          <% if @claim.claim_submissions.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Submitted At</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Method</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ACK Status</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ACK Code</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">External Key</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Error</th>
                    <th class="px-4 py-3"></th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @claim.claim_submissions.latest_first.each do |sub| %>
                    <tr>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= sub.submitted_at&.strftime("%b %d, %Y %I:%M %p") || "—" %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= sub.submission_method&.humanize %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= sub.status&.to_s&.humanize %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= sub.ack_status&.humanize %></td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= sub.ack_code || "—" %></td>
                      <td class="px-4 py-3 text-sm text-gray-900 font-mono"><%= sub.external_submission_key %></td>
                      <td class="px-4 py-3 text-sm text-red-700"><%= sub.error_message || "" %></td>
                      <td class="px-4 py-3 text-right text-sm">
                        <% if current_user.permissions_for("admin", "claims", "submit") %>
                          <%= button_to "Resubmit", resubmit_admin_claim_claim_submission_path(@claim, sub), method: :post, class: "inline-flex items-center px-2.5 py-1.5 rounded-md text-xs text-white bg-indigo-600 hover:bg-indigo-700" %>
                        <% end %>
                        <% if current_user.permissions_for("admin", "claims", "void") %>
                          <%= button_to "Void", void_admin_claim_claim_submission_path(@claim, sub), method: :post, class: "ml-2 inline-flex items-center px-2.5 py-1.5 rounded-md text-xs text-white bg-red-600 hover:bg-red-700" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No submissions yet.</p>
          <% end %>
          <div class="mt-4">
            <% if current_user.permissions_for("admin", "claim_submissions", "create") && @claim.validated? %>
              <%= button_to "Create Submission", admin_claim_claim_submissions_path(@claim), method: :post, params: { claim_submission: { submission_method: :api } }, class: "inline-flex items-center px-3 py-2 rounded-md text-sm text-white bg-green-600 hover:bg-green-700" %>
            <% end %>
          </div>
        </div>

        <!-- Denials -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <% if @claim.denials.any? %>
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xl font-semibold text-gray-900">Denials</h2>
              <div class="flex items-center gap-3">
                <%= link_to "View All Denials", admin_claim_denials_path(@claim), class: "text-sm text-blue-600 hover:text-blue-800" %>
                <% if current_user.permissions_for("admin", "denials", "create") && @claim.denials.any? %>
                  <button type="button" id="toggle-denial-form-btn" class="text-sm text-red-600 hover:text-red-700 font-medium">Add Denial</button>
                <% end %>
              </div>
            </div>
            <% latest_denial = @claim.denials.order(denial_date: :desc).first %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <% status_colors = {
                    "open" => "bg-red-100 text-red-800",
                    "under_review" => "bg-yellow-100 text-yellow-800",
                    "resubmitted" => "bg-blue-100 text-blue-800",
                    "resolved" => "bg-green-100 text-green-800",
                    "closed" => "bg-gray-100 text-gray-800"
                  } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[latest_denial.status] %>">
                    <%= latest_denial.status.humanize %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Denial Date</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= latest_denial.denial_date.strftime("%B %d, %Y") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Amount Denied</dt>
                <dd class="mt-1 text-sm font-semibold text-gray-900"><%= number_to_currency(latest_denial.amount_denied) %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">CARC / RARC</dt>
                <dd class="mt-1 text-sm text-gray-900 font-mono"><%= latest_denial.carc_codes.join(', ') %><% if latest_denial.rarc_codes.any? %> / <%= latest_denial.rarc_codes.join(', ') %><% end %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Attempts</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= latest_denial.attempt_count %>/2</dd>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <%= link_to "View Details", admin_claim_denial_path(@claim, latest_denial), class: "text-sm text-indigo-600 hover:text-indigo-800" %>
            </div>

            <% if latest_denial.denial_items.any? %>
              <div class="mt-6 overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Line</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">CARC</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">RARC</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% latest_denial.denial_items.each do |item| %>
                      <tr>
                        <td class="px-4 py-3 text-sm text-gray-900">#<%= item.claim_line_id %></td>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= number_to_currency(item.amount_denied) %></td>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= item.carc_codes.join(', ') %></td>
                        <td class="px-4 py-3 text-sm text-gray-900"><%= item.rarc_codes.join(', ') %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% end %>
          <% else %>
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xl font-semibold text-gray-900">Denials</h2>
            </div>
            <p class="text-sm text-gray-700 mb-4">
              No denials yet.
              <% if current_user.permissions_for("admin", "denials", "create") %>
                <button type="button" id="toggle-denial-form-link" class="text-red-600 hover:text-red-700 font-medium">Click to create a new denial</button>.
              <% end %>
            </p>
          <% end %>

          <% if current_user.permissions_for("admin", "denials", "create") %>
            <% has_submissions = @claim.claim_submissions.exists? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <% unless has_submissions %>
                <p class="text-xs text-yellow-700 bg-yellow-50 border border-yellow-200 rounded-md px-3 py-2 mb-3">
                  This claim has no submissions yet. Create a submission before recording a denial.
                </p>
              <% end %>
              <div id="denial-form-container" style="display:none;">
              <%= form_with url: admin_claim_denials_path(@claim), method: :post, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-3" do |f| %>
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">Submission</label>
                  <%= select_tag 'denial[source_submission_id]', options_from_collection_for_select(@claim.claim_submissions.order(submitted_at: :desc), 'id', 'external_submission_key'), include_blank: 'Select submission', class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">Denial Date</label>
                  <%= date_field_tag 'denial[denial_date]', Date.current, class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">Amount Denied</label>
                  <%= number_field_tag 'denial[amount_denied]', nil, step: 0.01, min: 0, placeholder: '0.00', class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div class="md:col-span-2">
                  <label class="block text-xs font-medium text-gray-700 mb-1">CARC Codes (comma-separated)</label>
                  <%= text_field_tag 'denial[carc_codes]', nil, placeholder: 'e.g., CO-50, PR-1', class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">RARC Codes (optional)</label>
                  <%= text_field_tag 'denial[rarc_codes]', nil, placeholder: 'e.g., N290', class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div class="md:col-span-3">
                  <label class="block text-xs font-medium text-gray-700 mb-1">Notes (internal)</label>
                  <%= text_area_tag 'denial[notes_internal]', nil, rows: 2, class: 'w-full border border-gray-300 rounded-md px-3 py-2 text-sm', disabled: !has_submissions %>
                </div>
                <div class="md:col-span-3 flex justify-end">
                  <%= f.submit 'Create Denial', class: 'bg-red-600 hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed text-white text-sm font-medium px-4 py-2 rounded-md', disabled: !has_submissions %>
                </div>
              <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Right Column - Totals & Actions -->
      <div class="space-y-6">
        <!-- Totals -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Totals</h2>
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Total Units</dt>
              <dd class="text-sm text-gray-900"><%= @claim.total_units || 0 %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Total Billed</dt>
              <dd class="text-sm font-semibold text-gray-900"><%= number_to_currency(@claim.total_billed || 0) %></dd>
            </div>
          </dl>
        </div>

        <!-- Actions -->
        <% if current_user.permissions_for("admin", "claims", "validate") && @claim.generated? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Actions</h2>
            <div class="space-y-2">
                <%= button_to "Validate", validate_admin_claim_path(@claim), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          </div>
        <% end %>

        <% if current_user.permissions_for("admin", "claims", "void") && @claim.can_be_voided? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Void</h2>
            <%= button_to "Void Claim", void_admin_claim_path(@claim), method: :post, data: { confirm: "Are you sure you want to void this claim?" }, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700" %>
          </div>
        <% end %>

        <% if current_user.permissions_for("admin", "claims", "close") && @claim.can_be_closed? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Close</h2>
            <%= button_to "Close Claim", close_admin_claim_path(@claim), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-gray-600 hover:bg-gray-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    var toggleBtn = document.getElementById('toggle-denial-form-btn');
    var toggleLink = document.getElementById('toggle-denial-form-link');
    var container = document.getElementById('denial-form-container');
    function toggleForm(el) {
      if (!container) return;
      if (container.style.display === 'none' || container.style.display === '') {
        container.style.display = 'block';
        if (el && el.id === 'toggle-denial-form-btn') el.textContent = 'Hide Form';
      } else {
        container.style.display = 'none';
        if (el && el.id === 'toggle-denial-form-btn') el.textContent = 'Add Denial';
      }
    }

    if (toggleBtn) {
      toggleBtn.addEventListener('click', function() {
        toggleForm(toggleBtn);
      });
    }
    if (toggleLink) {
      toggleLink.addEventListener('click', function(e) {
        e.preventDefault();
        toggleForm(toggleLink);
      });
    }
  });

</script>

