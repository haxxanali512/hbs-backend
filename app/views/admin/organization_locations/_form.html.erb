<%= form_with(model: @organization_location, url: admin_organization_location_path(@organization_location), method: :patch, local: true, class: "space-y-6") do |f| %>
  <% if @organization_location.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@organization_location.errors.count, "error") %> prohibited this location from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @organization_location.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Basic Information -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-gray-900">Basic Information</h3>
      
      <div>
        <%= f.label :name, "Location Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :organization_id, "Organization", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :organization_id, 
            options_from_collection_for_select(@organizations, :id, :name, @organization_location.organization_id),
            { prompt: "Select Organization" },
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div>
        <%= f.label :place_of_service_code, "Place of Service Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :place_of_service_code, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "e.g., 11, 02, 10" %>
        <p class="mt-1 text-sm text-gray-500">2-digit code (e.g., 11=Office, 02=Telehealth, 10=Telehealth)</p>
      </div>

      <div class="flex items-center">
        <%= f.check_box :is_virtual, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500", id: "is_virtual_checkbox" %>
        <%= f.label :is_virtual, "Virtual Location", class: "ml-2 text-sm text-gray-900" %>
      </div>
    </div>

    <!-- Address Information -->
    <div class="space-y-4" id="address_section">
      <h3 class="text-lg font-medium text-gray-900">Address Information</h3>
      
      <div>
        <%= f.label :address_line_1, "Address Line 1", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address_line_1, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :address_line_2, "Address Line 2", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address_line_2, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="mt-1 text-sm text-gray-500">Required unless virtual or telehealth (POS codes 02, 10)</p>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :city, "City", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :city, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :state, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "e.g., CA" %>
        </div>
      </div>

      <div>
        <%= f.label :postal_code, "ZIP Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :postal_code, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Contact Information</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :phone_number, "Phone", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.telephone_field :phone_number, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Billing Information -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Billing Information</h3>
    
    <div>
      <%= f.label :billing_npi, "Billing NPI", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :billing_npi, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "10-digit NPI" %>
      <p class="mt-1 text-sm text-gray-500">Optional. If provided, overrides organization billing NPI for this location.</p>
    </div>
  </div>

  <!-- Status and Notes -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Status and Notes</h3>
    
    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, 
          options_for_select([
            ["Active", "active"],
            ["Inactive", "inactive"],
            ["Retired", "retired"]
          ], @organization_location.status),
          { prompt: "Select Status" },
          { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div>
      <%= f.label :notes_internal, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :notes_internal, rows: 3, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_organization_location_path(@organization_location), class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors" %>
    <%= f.submit "Update Location", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const virtualCheckbox = document.getElementById('is_virtual_checkbox');
    const addressSection = document.getElementById('address_section');
    
    function toggleAddressFields() {
      if (virtualCheckbox.checked) {
        addressSection.style.display = 'none';
      } else {
        addressSection.style.display = 'block';
      }
    }
    
    // Set initial state
    toggleAddressFields();
    
    // Add event listener
    virtualCheckbox.addEventListener('change', toggleAddressFields);
  });
</script>
