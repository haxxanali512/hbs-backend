<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Invoice <%= @invoice.invoice_number || "Draft" %></h1>
          <p class="mt-2 text-gray-600"><%= @invoice.organization.name %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Invoices", admin_invoices_path, 
              class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          
          <% if @invoice.draft? %>
            <%= link_to "Edit", edit_admin_invoice_path(@invoice), 
                class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            <%= link_to "Issue Invoice", issue_admin_invoice_path(@invoice), 
                method: :post,
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure you want to issue this invoice?" } %>
          <% end %>
          
          <% if @invoice.issued? || @invoice.partially_paid? %>
            <%= link_to "Void Invoice", void_admin_invoice_path(@invoice), 
                method: :post,
                class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure you want to void this invoice?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Invoice Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Invoice Info -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Invoice Details</h2>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-500">Invoice Number</label>
              <p class="text-sm text-gray-900"><%= @invoice.invoice_number || "Draft" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Status</label>
              <% status_colors = {
                "draft" => "bg-gray-100 text-gray-800",
                "issued" => "bg-yellow-100 text-yellow-800",
                "partially_paid" => "bg-blue-100 text-blue-800",
                "paid" => "bg-green-100 text-green-800",
                "voided" => "bg-red-100 text-red-800"
              } %>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[@invoice.status] %>">
                  <%= @invoice.status.humanize %>
                </span>
              </p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Type</label>
              <p class="text-sm text-gray-900"><%= @invoice.invoice_type.humanize %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Currency</label>
              <p class="text-sm text-gray-900"><%= @invoice.currency %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Issue Date</label>
              <p class="text-sm text-gray-900"><%= @invoice.issue_date&.strftime("%B %d, %Y") || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Due Date</label>
              <p class="text-sm text-gray-900">
                <%= @invoice.due_date&.strftime("%B %d, %Y") || "—" %>
                <% if @invoice.past_due? %>
                  <span class="text-red-600 text-xs ml-1">(Past Due)</span>
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <!-- Line Items -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Line Items</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @invoice.invoice_line_items.each do |item| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.description %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.quantity || "—" %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= item.unit_price ? "$#{number_with_precision(item.unit_price, precision: 2)}" : "—" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      $<%= number_with_precision(item.amount, precision: 2) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Payments -->
        <% if @payments.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Payments</h2>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @payments.each do |payment| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= payment.paid_at&.strftime("%b %d, %Y %I:%M %p") || payment.created_at.strftime("%b %d, %Y %I:%M %p") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= payment.payment_method.humanize %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        $<%= number_with_precision(payment.amount, precision: 2) %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% payment_status_colors = {
                          "pending" => "bg-yellow-100 text-yellow-800",
                          "succeeded" => "bg-green-100 text-green-800",
                          "failed" => "bg-red-100 text-red-800",
                          "refunded" => "bg-gray-100 text-gray-800"
                        } %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= payment_status_colors[payment.payment_status] %>">
                          <%= payment.payment_status.humanize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= payment.payment_provider_id || "—" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Payment Summary -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Payment Summary</h2>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Subtotal</span>
              <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(@invoice.subtotal, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Total</span>
              <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(@invoice.total, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Amount Paid</span>
              <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(@invoice.amount_paid, precision: 2) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Amount Credited</span>
              <span class="text-sm font-medium text-gray-900">$<%= number_with_precision(@invoice.amount_credited, precision: 2) %></span>
            </div>
            <hr class="border-gray-200">
            <div class="flex justify-between">
              <span class="text-sm font-semibold text-gray-900">Amount Due</span>
              <span class="text-sm font-semibold <%= @invoice.amount_due > 0 ? 'text-red-600' : 'text-green-600' %>">
                $<%= number_with_precision(@invoice.amount_due, precision: 2) %>
              </span>
            </div>
          </div>
        </div>

        <!-- Apply Payment -->
        <% if @invoice.amount_due > 0 && (@invoice.issued? || @invoice.partially_paid?) %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Apply Payment</h2>
            <%= form_with url: apply_payment_admin_invoice_path(@invoice), method: :post, local: true, class: "space-y-4" do |f| %>
              <div>
                <%= f.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.number_field :amount, 
                    step: 0.01,
                    max: @invoice.amount_due,
                    class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
              
              <div>
                <%= f.label :payment_method, "Payment Method", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :payment_method, 
                    options_for_select([
                      ["Manual", "manual"],
                      ["Check", "check"],
                      ["Wire Transfer", "wire"]
                    ]),
                    {},
                    { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
              </div>
              
              <div>
                <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :notes, 
                    rows: 3,
                    class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
              
              <%= f.submit "Apply Payment", 
                  class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
            <% end %>
          </div>
        <% end %>

        <!-- Organization Info -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Organization</h2>
          <div class="space-y-2">
            <div>
              <span class="text-sm font-medium text-gray-500">Name</span>
              <p class="text-sm text-gray-900"><%= @invoice.organization.name %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Subdomain</span>
              <p class="text-sm text-gray-900"><%= @invoice.organization.subdomain %></p>
            </div>
            <div>
              <span class="text-sm font-medium text-gray-500">Owner</span>
              <p class="text-sm text-gray-900"><%= @invoice.organization.owner.email %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
