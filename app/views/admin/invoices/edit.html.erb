<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Invoice</h1>
          <p class="mt-2 text-gray-600">Update invoice details</p>
        </div>
        <%= link_to "Back to Invoice", admin_invoice_path(@invoice), 
            class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      </div>
    </div>

    <%= render "form", 
        form_url: admin_invoice_path(@invoice), 
        cancel_url: admin_invoice_path(@invoice),
        submit_label: "Update Invoice" %>
  </div>
</div>


