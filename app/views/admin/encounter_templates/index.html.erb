<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Encounter Templates</h1>
          <p class="mt-2 text-gray-600">Curated templates organized by specialty</p>
        </div>
        <div>
          <%= link_to "New Template", new_admin_encounter_template_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <%
      @use_status_for_action_type = true
    %>
    <%= render "shared/filters" %>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specialty</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lines</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @encounter_templates.any? %>
              <% @encounter_templates.each do |template| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= template.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= template.specialty&.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= template.encounter_template_lines.count %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= template.active? ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800" %>">
                      <%= template.active? ? "Active" : "Inactive" %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end space-x-2">
                      <%= link_to "View", admin_encounter_template_path(template), class: "text-blue-600 hover:text-blue-800" %>
                      <%= link_to "Edit", edit_admin_encounter_template_path(template), class: "text-indigo-600 hover:text-indigo-800" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @encounter_templates.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No templates found</div>
          <div class="text-gray-400 text-sm mt-2">Try adjusting your filters or create a new template</div>
        </div>
      <% end %>
    </div>

    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
