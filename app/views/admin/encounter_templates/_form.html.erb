<%= form_with model: [:admin, @encounter_template], local: true, class: "space-y-6" do |f| %>
  <% if @encounter_template.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@encounter_template.errors.count, "error") %> prohibited this template from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @encounter_template.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, "Template Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
    </div>
    <div>
      <%= f.label :specialty_id, "Specialty", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :specialty_id,
                   options_from_collection_for_select(@specialties, :id, :name, @encounter_template.specialty_id),
                   { prompt: "Select Specialty" },
                   class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
                   required: true %>
    </div>
    <div>
      <%= f.label :active, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :active,
                   [["Active", true], ["Inactive", false]],
                   {},
                   class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-4">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-gray-900">Service Lines</h3>
      <button type="button" id="add-template-line-btn" class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-3 py-1.5 rounded-md">
        Add Line
      </button>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Procedure Code</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Modifiers</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Units</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody id="template-lines-body" class="bg-white divide-y divide-gray-200">
          <%= f.fields_for :encounter_template_lines do |line_fields| %>
            <tr class="template-line-row">
              <td class="px-4 py-2">
                <%= line_fields.select :procedure_code_id,
                      options_from_collection_for_select(@procedure_codes, :id, :code_with_description, line_fields.object.procedure_code_id),
                      { prompt: "Select Procedure" },
                      class: "w-full border border-gray-300 rounded-md px-2 py-1 text-sm" %>
              </td>
              <td class="px-4 py-2">
                <%= line_fields.text_field :modifiers_text, placeholder: "e.g., GP, 59", class: "w-full border border-gray-300 rounded-md px-2 py-1 text-sm" %>
              </td>
              <td class="px-4 py-2">
                <%= line_fields.number_field :units, min: 1, step: 1, class: "w-full border border-gray-300 rounded-md px-2 py-1 text-sm" %>
              </td>
              <td class="px-4 py-2 text-right">
                <%= line_fields.hidden_field :_destroy, class: "destroy-flag" %>
                <button type="button" class="remove-template-line text-red-600 hover:text-red-800 text-sm">Remove</button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_encounter_templates_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors" %>
    <%= f.submit @encounter_template.persisted? ? "Update Template" : "Create Template", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
  </div>
<% end %>

<template id="template-line-template">
  <tr class="template-line-row">
    <td class="px-4 py-2">
      <select name="encounter_template[encounter_template_lines_attributes][NEW_RECORD][procedure_code_id]" class="w-full border border-gray-300 rounded-md px-2 py-1 text-sm">
        <option value="">Select Procedure</option>
        <% @procedure_codes.each do |pc| %>
          <option value="<%= pc.id %>"><%= pc.code_with_description %></option>
        <% end %>
      </select>
    </td>
    <td class="px-4 py-2">
      <input type="text" name="encounter_template[encounter_template_lines_attributes][NEW_RECORD][modifiers_text]" placeholder="e.g., GP, 59" class="w-full border border-gray-300 rounded-md px-2 py-1 text-sm" />
    </td>
    <td class="px-4 py-2">
      <input type="number" name="encounter_template[encounter_template_lines_attributes][NEW_RECORD][units]" min="1" step="1" value="1" class="w-full border border-gray-300 rounded-md px-2 py-1 text-sm" />
    </td>
    <td class="px-4 py-2 text-right">
      <input type="hidden" name="encounter_template[encounter_template_lines_attributes][NEW_RECORD][_destroy]" value="false" class="destroy-flag" />
      <button type="button" class="remove-template-line text-red-600 hover:text-red-800 text-sm">Remove</button>
    </td>
  </tr>
</template>

<script>
  document.addEventListener("turbo:load", function() {
    const addBtn = document.getElementById("add-template-line-btn");
    const tbody = document.getElementById("template-lines-body");
    const template = document.getElementById("template-line-template");

    if (!addBtn || !tbody || !template) return;

    addBtn.addEventListener("click", function() {
      const content = template.innerHTML.replace(/NEW_RECORD/g, new Date().getTime());
      tbody.insertAdjacentHTML("beforeend", content);
    });

    tbody.addEventListener("click", function(event) {
      if (!event.target.classList.contains("remove-template-line")) return;
      const row = event.target.closest(".template-line-row");
      if (!row) return;
      const destroyField = row.querySelector(".destroy-flag");
      if (destroyField) {
        destroyField.value = "1";
      }
      row.style.display = "none";
    });
  });
</script>
