<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @encounter_template.name %></h1>
        <p class="mt-2 text-gray-600">Template details</p>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_encounter_template_path(@encounter_template), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        <%= link_to "Back", admin_encounter_templates_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Template Details</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Specialty</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @encounter_template.specialty&.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @encounter_template.active? ? "Active" : "Inactive" %></dd>
            </div>
          </dl>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Service Lines</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Procedure Code</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Modifiers</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Units</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% if @encounter_template.encounter_template_lines.any? %>
                  <% @encounter_template.encounter_template_lines.each do |line| %>
                    <tr>
                      <td class="px-4 py-2 text-sm text-gray-900"><%= line.procedure_code&.code_with_description %></td>
                      <td class="px-4 py-2 text-sm text-gray-900"><%= line.modifiers&.join(", ").presence || "â€”" %></td>
                      <td class="px-4 py-2 text-sm text-gray-900"><%= line.units %></td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="3" class="px-4 py-4 text-sm text-gray-500 text-center">No lines defined.</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
