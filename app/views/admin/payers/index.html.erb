<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Payers</h1>
        <p class="mt-2 text-gray-600">Global catalog of insurance payers</p>
      </div>
      <%= link_to "New Payer", new_admin_payer_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">HBS Key</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payers.each do |payer| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900"><%= payer.name %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= payer.payer_type.humanize %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= payer.status.humanize %></td>
                <td class="px-6 py-4 text-sm text-gray-900 font-mono"><%= payer.hbs_payer_key %></td>
                <td class="px-6 py-4 text-right text-sm">
                  <%= link_to "View", admin_payer_path(payer), class: "text-blue-600 hover:text-blue-800" %>
                  <%= link_to "Edit", edit_admin_payer_path(payer), class: "ml-3 text-indigo-600 hover:text-indigo-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>


