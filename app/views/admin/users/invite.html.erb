<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Invite User</h1>

  <% if @user && @user.errors.any? %>
    <div class="mb-4 rounded-md border border-red-300 bg-red-50 p-3 text-sm text-red-800">
      <ul class="list-disc pl-5">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rounded-2xl border border-gray-200 bg-white shadow-sm">
    <div class="px-5 py-4 sm:px-6 sm:py-5">
      <h3 class="text-base font-medium text-gray-800">User Details</h3>
    </div>
    <div class="space-y-6 border-t border-gray-100 p-5 sm:p-6">
      <%= form_with url: send_invitation_admin_users_path, scope: :user, method: :post, local: true do |f| %>
        <div class="-mx-2.5 flex flex-wrap gap-y-5">
          <div class="w-full px-2.5 xl:w-1/2">
            <%= f.email_field :first_name, placeholder: "First Name", required: true, autocomplete: "first_name", class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>
          <div class="w-full px-2.5 xl:w-1/2">
            <%= f.email_field :last_name, placeholder: "Last Name", required: true, autocomplete: "last_name", class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>
          <div class="w-full px-2.5 xl:w-1/2">
            <%= f.email_field :username, placeholder: "Username", required: true, autocomplete: "username", class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>
          <div class="w-full px-2.5 xl:w-1/2">
            <%= f.email_field :email, placeholder: "Email address", required: true, autocomplete: "email", class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>
          <div class="w-full px-2.5 xl:w-1/2">
            <%= f.collection_select :role_id, @roles, :id, :role_name, { prompt: "Select Role" }, class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>

          <!-- Organization Invitation Options -->
          <div class="w-full px-2.5">
            <label class="block text-sm font-medium text-gray-700 mb-1">Organization Invitation</label>
            <select name="user[invite_organization_mode]" id="invite_organization_mode"
                    class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10">
              <option value="existing" selected>Invite into existing organization</option>
              <option value="new">Invite into new organization</option>
            </select>
          </div>

          <!-- Existing Organization Select -->
          <div class="w-full px-2.5 xl:w-1/2" id="existing_organization_wrapper">
            <label class="block text-sm font-medium text-gray-700 mb-1">Existing Organization</label>
            <%= f.collection_select :organization_id, @organizations, :id, :name,
                  { prompt: "Select Organization" },
                  class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
          </div>

          <!-- New Organization Fields -->
          <%= f.fields_for :organizations_attributes do |of| %>
            <div class="w-full px-2.5 xl:w-1/2" id="new_org_name_wrapper" style="display:none;">
              <label class="block text-sm font-medium text-gray-700 mb-1">Organization Name</label>
              <%= of.text_field :name, placeholder: "Enter Organization Name",
                    class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
            </div>
            <div class="w-full px-2.5 xl:w-1/2" id="new_org_subdomain_wrapper" style="display:none;">
              <label class="block text-sm font-medium text-gray-700 mb-1">Organization Subdomain</label>
              <%= of.text_field :subdomain, placeholder: "Enter Organization Subdomain",
                    class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10" %>
            </div>
          <% end %>

          <div class="w-full px-2.5">
            <%= f.submit "Send Invitation", class: "w-full rounded-lg bg-indigo-600 p-3 text-sm font-medium text-white transition-colors hover:bg-indigo-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var modeSelect = document.getElementById('invite_organization_mode');
    var existingWrapper = document.getElementById('existing_organization_wrapper');
    var newNameWrapper = document.getElementById('new_org_name_wrapper');
    var newSubdomainWrapper = document.getElementById('new_org_subdomain_wrapper');

    function toggleOrganizationMode() {
      var mode = modeSelect.value;
      if (mode === 'existing') {
        if (existingWrapper) existingWrapper.style.display = 'block';
        if (newNameWrapper) newNameWrapper.style.display = 'none';
        if (newSubdomainWrapper) newSubdomainWrapper.style.display = 'none';
      } else {
        if (existingWrapper) existingWrapper.style.display = 'none';
        if (newNameWrapper) newNameWrapper.style.display = 'block';
        if (newSubdomainWrapper) newSubdomainWrapper.style.display = 'block';
      }
    }

    if (modeSelect) {
      modeSelect.addEventListener('change', toggleOrganizationMode);
      toggleOrganizationMode();
    }
  });
</script>

