<div class="w-full py-8 px-4 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Users</h1>
    <div class="flex items-center gap-3">
      <%= link_to "New User", new_admin_user_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 rounded-md" %>
    </div>
  </div>

  <!-- Filters -->
  <% 
    @search_placeholder = "Email, name..."
    @status_options = [["active", "active"], ["pending", "pending"], ["inactive", "inactive"]]
    @role_options = @roles.map { |r| [r.role_name, r.id] }
  %>
  <%= render "shared/filters" %>

  <% columns = [
    {
      label: 'User',
      render: ->(u) { capture do
        concat(content_tag(:div, class: 'flex items-center gap-3') do
          concat content_tag(:div, (u.display_name.to_s.first.presence || u.email.to_s.first), class: 'h-8 w-8 rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center text-xs font-semibold')
          concat content_tag(:div, u.display_name, class: 'font-medium text-gray-900')
        end)
      end }
    },
    { label: 'Email', render: ->(u){ u.email } },
    { label: 'Role',  render: ->(u){ u.role&.role_name } },
    {
      label: 'Status',
      render: ->(u){
        if u.access_locked?
          raw '<span class="inline-flex items-center gap-1 rounded bg-amber-50 px-2 py-0.5 text-xs font-medium text-amber-700"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 11V7a4 4 0 10-8 0v4m-1 0h10v10H3V11z"/></svg>Locked</span>'
        elsif u.status == "pending"
          raw '<span class="inline-flex items-center gap-1 rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2"/></svg>Pending acceptance</span>'
        elsif u.status == "active"
          raw '<span class="inline-flex items-center gap-1 rounded bg-emerald-50 px-2 py-0.5 text-xs font-medium text-emerald-700"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 12l5 5L20 7"/></svg>Active</span>'
        else
          raw '<span class="inline-flex items-center gap-1 rounded bg-red-50 px-2 py-0.5 text-xs font-medium text-red-700"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="h-3.5 w-3.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l4 2"/></svg>Inactive</span>'
        end
      }
    },
    {
      label: 'Actions', td_class: 'text-left',
      render: ->(u){ capture do
        concat(link_to('Edit', edit_admin_user_path(u), class: 'text-indigo-600 hover:text-indigo-800 font-medium text-sm mr-4'))
        concat(link_to('Reset Password', reset_password_admin_user_path(u), data: { turbo_method: :post }, class: 'text-gray-600 hover:text-gray-900 font-medium text-sm mr-4'))
        concat(link_to('Reinvite', '#', data: { confirm_url: reinvite_admin_user_path(u), confirm_message: 'Re-send invitation to this user?', confirm_label: 'Reinvite' }, class: 'text-gray-600 hover:text-gray-900 font-medium text-sm mr-4'))
        if current_user.permissions_for("admin", "users", "masquerade")
          concat(link_to('Impersonate', masquerade_path(u), class: 'text-purple-600 hover:text-purple-800 font-medium text-sm'))
        end
        # Lock/Unlock moved to edit page
      end }
    }
  ] %>

  <%= render 'shared/table', title: 'Users', columns: columns, collection: @users %>

  <!-- Pagination -->
  <% if @pagy %>
    <div class="mt-6 flex items-center justify-between">
      <div class="text-sm text-gray-700">
        <%= pagination_info(@pagy) %>
      </div>
      <div>
        <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    </div>
  <% end %>
</div>

