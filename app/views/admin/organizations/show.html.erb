<div class="w-full mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= @organization.name %></h1>
    <div class="flex items-center gap-3">
      <%= link_to "Edit Organization", edit_admin_organization_path(@organization), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 rounded-md" %>
      <%= link_to "Back to Organizations", admin_organizations_path, class: "text-sm text-gray-700 hover:text-gray-900" %>
    </div>
  </div>

  <div class="space-y-6">
    <!-- Organization Information -->
    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Organization Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Organization Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @organization.name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Subdomain</label>
          <p class="mt-1 text-sm text-gray-900">
            <% tenant_url = "#{request.protocol}#{organization_subdomain_url(@organization.subdomain)}" %>
            <%= link_to organization_subdomain_display(@organization.subdomain), 
                tenant_url, 
                target: '_blank',
                class: 'text-indigo-600 hover:text-indigo-800' %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Tier</label>
          <span class="mt-1 inline-flex items-center gap-1 rounded px-2 py-0.5 text-xs font-medium
            <%= case @organization.tier
                when '9%' then 'bg-purple-50 text-purple-700'
                when '8%' then 'bg-indigo-50 text-indigo-700'
                when '7%' then 'bg-blue-50 text-blue-700'
                when '6%' then 'bg-gray-50 text-gray-700'
                else 'bg-gray-50 text-gray-700'
                end %>">
            <%= @organization.tier || 'N/A' %>
          </span>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Activation Status</label>
          <span class="mt-1 inline-flex items-center gap-1 rounded px-2 py-0.5 text-xs font-medium
            <%= case @organization.activation_status
                when 'activated' then 'bg-emerald-50 text-emerald-700'
                when 'pending' then 'bg-gray-50 text-gray-700'
                when 'billing_setup' then 'bg-amber-50 text-amber-700'
                when 'compliance_setup' then 'bg-blue-50 text-blue-700'
                when 'document_signing' then 'bg-purple-50 text-purple-700'
                else 'bg-gray-50 text-gray-700'
                end %>">
            <%= @organization.activation_status.humanize %>
          </span>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Created At</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @organization.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Last Updated</label>
          <p class="mt-1 text-sm text-gray-900">
            <%= @organization.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
      </div>
    </div>

    <!-- Owner Information -->
    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Owner Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Owner Name</label>
          <p class="mt-1 text-sm text-gray-900"><%= @organization.owner.display_name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Owner Email</label>
          <p class="mt-1 text-sm text-gray-900"><%= @organization.owner.email %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Owner Role</label>
          <p class="mt-1 text-sm text-gray-900"><%= @organization.owner.role&.role_name || 'No Role' %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Account Status</label>
          <span class="mt-1 inline-flex items-center gap-1 rounded px-2 py-0.5 text-xs font-medium
            <%= @organization.owner.locked_at ? 'bg-red-50 text-red-700' : 'bg-emerald-50 text-emerald-700' %>">
            <%= @organization.owner.locked_at ? 'Locked' : 'Active' %>
          </span>
        </div>
      </div>
    </div>

    <!-- Team Members -->
    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Team Members (<%= @organization.active_members.count %>)</h3>
      <% if @organization.active_members.any? %>
        <div class="space-y-3">
          <% @organization.active_members.each do |member| %>
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex items-center">
                <div class="h-8 w-8 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-xs font-semibold">
                  <%= member.display_name.first.upcase %>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= member.display_name %></p>
                  <p class="text-xs text-gray-500"><%= member.email %></p>
                </div>
              </div>
              <div class="text-right">
                <span class="inline-flex items-center gap-1 rounded px-2 py-0.5 text-xs font-medium bg-gray-50 text-gray-700">
                  <%= member.organization_memberships.find_by(organization: @organization)&.organization_role&.role_name || 'Member' %>
                </span>
                <% if member == @organization.owner %>
                  <span class="ml-2 inline-flex items-center gap-1 rounded px-2 py-0.5 text-xs font-medium bg-purple-50 text-purple-700">
                    Owner
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No team members found.</p>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Actions</h3>
      <div class="flex items-center space-x-3">
        <% if @organization.activated? %>
          <%= button_to "Suspend Organization", suspend_tenant_admin_organization_path(@organization),
              method: :post,
              class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 rounded-md border-0",
              form: { data: { turbo_confirm: "Are you sure you want to suspend this organization?" } } %>
        <% else %>
          <%= button_to "Activate Organization (Direct)", activate_tenant_admin_organization_path(@organization),
              method: :post,
              class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-md border-0",
              form: { data: { turbo_confirm: "Are you sure you want to activate this organization? This will bypass all activation steps and activate immediately." } } %>
        <% end %>
        
        <% if @organization.owner && policy([:admin, @organization.owner]).masquerade? %>
          <%= link_to "Visit Organization Portal", masquerade_path(@organization.owner),
              target: '_blank',
              rel: 'noopener noreferrer',
              class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-md",
              title: "Impersonate #{@organization.owner.display_name}" %>
        <% else %>
          <% tenant_portal_url = "#{request.protocol}#{organization_subdomain_url(@organization.subdomain)}" %>
          <%= link_to "Visit Organization Portal", tenant_portal_url,
              target: '_blank',
              class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-md" %>
        <% end %>
        
        <%= link_to "Delete Organization", admin_organization_path(@organization),
            method: :delete,
            class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-md",
            data: { confirm: "Are you sure you want to delete this organization? This action cannot be undone." } %>
      </div>
    </div>

    <!-- Onboarding Progress Tracker (for activated organizations) -->
    <% if @organization.activated? && @onboarding_steps.present? %>
      <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
        <h3 class="text-base font-semibold text-gray-900 mb-2">Onboarding Progress Tracker</h3>
        <p class="text-sm text-gray-600 mb-4">View what the tenant has completed and what Holistic Business Solutions needs to do for this organization.</p>
        <div class="mb-4 flex items-center gap-4 text-xs">
          <div class="flex items-center gap-2">
            <span class="text-blue-600 font-medium">(Tenant Task)</span>
            <span class="text-gray-500">- Completed by tenant</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-amber-600 font-medium">(Holistic Business Solutions Task)</span>
            <span class="text-gray-500">- To be completed by Holistic Business Solutions</span>
          </div>
        </div>
        <%= render "shared/activation_tracker", steps: @onboarding_steps, admin_view: true %>
      </div>
    <% end %>

    <!-- Activation Checklist (HBS Tasks Management) -->
    <% checklist = @organization.activation_checklist || @organization.build_activation_checklist %>
    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-2">Holistic Business Solutions Tasks Checklist</h3>
      <p class="text-sm text-gray-600 mb-4">Mark Holistic Business Solutions tasks as complete when finished. These are manual tasks that require HBS admin action.</p>
      <div class="space-y-4">
        <!-- Manual Steps -->
        <div class="space-y-3">
          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center gap-3">
              <% if checklist.waystar_child_account_completed? %>
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
              <span class="text-sm font-medium text-gray-900">Create Waystar Child Account</span>
            </div>
            <%= button_to checklist.waystar_child_account_completed? ? "Mark Incomplete" : "Mark Complete",
                toggle_checklist_step_admin_organization_path(@organization, step: 'waystar_child_account'),
                method: :patch,
                class: "text-xs px-3 py-1 rounded #{checklist.waystar_child_account_completed? ? 'bg-gray-200 text-gray-700 hover:bg-gray-300' : 'bg-green-600 text-white hover:bg-green-700'}" %>
          </div>

          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center gap-3">
              <% if checklist.ezclaim_record_completed? %>
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
              <span class="text-sm font-medium text-gray-900">Create EZClaim Record</span>
            </div>
            <%= button_to checklist.ezclaim_record_completed? ? "Mark Incomplete" : "Mark Complete",
                toggle_checklist_step_admin_organization_path(@organization, step: 'ezclaim_record'),
                method: :patch,
                class: "text-xs px-3 py-1 rounded #{checklist.ezclaim_record_completed? ? 'bg-gray-200 text-gray-700 hover:bg-gray-300' : 'bg-green-600 text-white hover:bg-green-700'}" %>
          </div>

          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center gap-3">
              <% if checklist.initial_encounter_billed_completed? %>
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
              <span class="text-sm font-medium text-gray-900">Holistic Business Solutions bills initial encounter</span>
            </div>
            <%= button_to checklist.initial_encounter_billed_completed? ? "Mark Incomplete" : "Mark Complete",
                toggle_checklist_step_admin_organization_path(@organization, step: 'initial_encounter_billed'),
                method: :patch,
                class: "text-xs px-3 py-1 rounded #{checklist.initial_encounter_billed_completed? ? 'bg-gray-200 text-gray-700 hover:bg-gray-300' : 'bg-green-600 text-white hover:bg-green-700'}" %>
          </div>

          <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center gap-3">
              <% if checklist.name_match_completed? %>
                <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
              <span class="text-sm font-medium text-gray-900">Holistic Business Solutions executes a name match in Waystar</span>
            </div>
            <%= button_to checklist.name_match_completed? ? "Mark Incomplete" : "Mark Complete",
                toggle_checklist_step_admin_organization_path(@organization, step: 'name_match'),
                method: :patch,
                class: "text-xs px-3 py-1 rounded #{checklist.name_match_completed? ? 'bg-gray-200 text-gray-700 hover:bg-gray-300' : 'bg-green-600 text-white hover:bg-green-700'}" %>
          </div>
        </div>

        <!-- Plan-based Steps -->
        <% accepted_plans = @organization.org_accepted_plans.active_only.current.includes(:insurance_plan) %>
        <% if accepted_plans.any? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h4 class="text-sm font-semibold text-gray-900 mb-4">Plan Enrollment Steps</h4>
            <div class="space-y-4">
              <% accepted_plans.each do |plan| %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <h5 class="text-sm font-medium text-gray-900 mb-3"><%= plan.insurance_plan&.name || "Plan ##{plan.id}" %></h5>
                  <div class="space-y-2">
                    <% OrganizationActivationPlanStep.step_types.keys.each do |step_type| %>
                      <% step = OrganizationActivationPlanStep.find_or_initialize_by(
                            org_accepted_plan_id: plan.id,
                            step_type: step_type
                          ) %>
                      <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                        <div class="flex items-center gap-2">
                          <% if step.completed? %>
                            <svg class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                          <% else %>
                            <svg class="h-4 w-4 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                          <% end %>
                          <span class="text-xs text-gray-700"><%= step_type.humanize %></span>
                        </div>
                        <%= button_to step.completed? ? "Mark Incomplete" : "Mark Complete",
                            toggle_plan_step_admin_organization_path(@organization, plan_id: plan.id, step_type: step_type),
                            method: :patch,
                            class: "text-xs px-2 py-1 rounded #{step.completed? ? 'bg-gray-200 text-gray-700 hover:bg-gray-300' : 'bg-green-600 text-white hover:bg-green-700'}" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Activation Notice -->
    <% unless @organization.activated? %>
      <div class="rounded-2xl border border-amber-200 bg-amber-50 p-6 shadow-sm">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-amber-800">Activation Required</h3>
            <div class="mt-2 text-sm text-amber-700">
              <p>This organization needs to complete the activation process. The owner (<%= @organization.owner.email %>) must visit their organization portal to complete:</p>
              <ul class="mt-2 list-disc pl-5 space-y-1">
                <li>Billing setup</li>
                <li>Compliance verification</li>
                <li>Document signing</li>
              </ul>
              <p class="mt-2">
                <strong>Organization Portal:</strong> 
                <% tenant_url = "#{request.protocol}#{organization_subdomain_url(@organization.subdomain)}" %>
                <%= link_to organization_subdomain_display(@organization.subdomain), 
                    tenant_url, 
                    target: '_blank',
                    class: 'text-amber-800 underline hover:text-amber-900' %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>