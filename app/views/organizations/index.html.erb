<div class="w-full py-8 px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">My Organizations</h1>
      <p class="mt-2 text-gray-600">Manage your organizations and their settings</p>
    </div>
    <% if policy(Organization).create? %>
      <%= link_to "New Organization", new_organization_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 rounded-md" %>
    <% end %>
  </div>

  <!-- Organizations Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @organizations.each do |organization| %>
      <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-5 py-4 sm:px-6 sm:py-5">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900"><%= organization.name %></h3>
            <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= organization.activated? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= organization.activation_status.humanize %>
            </span>
          </div>
          <p class="mt-1 text-sm text-gray-500">Subdomain: <%= organization_subdomain_display(organization.subdomain) %></p>
          <p class="mt-1 text-sm text-gray-500">Tier: <%= organization.tier || 'N/A' %></p>
        </div>
        
        <div class="border-t border-gray-100 px-5 py-4 sm:px-6 sm:py-5">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-500">
              <p>Created: <%= organization.created_at.strftime("%B %d, %Y") %></p>
              <% if organization.activation_state_changed_at %>
                <p>Last Updated: <%= organization.activation_state_changed_at.strftime("%B %d, %Y") %></p>
              <% end %>
            </div>
            <div class="flex space-x-2">
              <% if policy(organization).show? %>
                <%= link_to "View", organization_path(organization), 
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% end %>
              <% if policy(organization).update? %>
                <%= link_to "Edit", edit_organization_path(organization), 
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% end %>
              <% if policy(organization).activate? && !organization.activated? %>
                <%= link_to "Activate", activation_path, 
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @organizations.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No organizations</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new organization.</p>
      <div class="mt-6">
        <% if policy(Organization).create? %>
          <%= link_to "New Organization", new_organization_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
