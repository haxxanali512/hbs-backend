<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Organization</h1>
    <p class="mt-2 text-gray-600">Update your organization details</p>
  </div>

  <!-- Form -->
  <%= form_with model: @organization, local: true, class: "space-y-6" do |f| %>
    <% if @organization.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% @organization.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
      <h3 class="text-base font-semibold text-gray-900 mb-4">Organization Details</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Organization Name -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700">Organization Name</label>
          <%= f.text_field :name, 
              placeholder: "Enter organization name",
              class: "mt-2 block w-full h-11 rounded-lg border border-gray-200 bg-white px-4 text-sm placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Subdomain -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700">Subdomain</label>
          <div class="mt-2 flex rounded-md shadow-sm">
            <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-200 bg-gray-50 text-gray-500 text-sm">
              https://
            </span>
            <%= f.text_field :subdomain, 
                placeholder: "your-organization",
                class: "flex-1 rounded-none border border-gray-200 bg-white px-4 h-11 text-sm placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-200 bg-gray-50 text-gray-500 text-sm">
              .yourdomain.com
            </span>
          </div>
          <p class="mt-1 text-xs text-gray-500">This will be your organization's unique subdomain</p>
        </div>

        <!-- Tier -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700">Plan Tier</label>
          <%= f.select :tier, 
              options_for_select([
                ['Basic', 'basic'],
                ['Professional', 'professional'],
                ['Enterprise', 'enterprise'],
                ['Premium', 'premium']
              ], @organization.tier), 
              { prompt: 'Select a plan tier' },
              { class: "mt-2 block w-full h-11 rounded-lg border border-gray-200 bg-white px-4 text-sm placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="mt-6 flex items-center justify-end gap-4">
        <%= link_to "Cancel", organization_path(@organization), class: "text-sm text-gray-700 hover:text-gray-900" %>
        <%= f.submit "Update Organization", class: "inline-flex items-center rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>
