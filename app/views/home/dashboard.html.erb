<!-- TailAdmin-like Dashboard -->
<div class="space-y-6">
  <!-- Welcome / Notification Banner -->
  <div class="rounded-md border border-gray-200 bg-white p-4 md:p-6">
    <div class="flex items-start justify-between gap-4">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">Welcome back, Super Admin!</h2>
      </div>
      <div class="hidden sm:flex items-center gap-2">
        <a href="#" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-700">View More</a>
        <button class="inline-flex items-center rounded-md border border-gray-200 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Delete</button>
      </div>
    </div>
  </div>

  <!-- Stat Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div class="rounded-md border border-gray-200 bg-white p-5">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm text-gray-500">Users</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900"><%= @users_count %></p>
        </div>
        <span class="inline-flex items-center rounded bg-emerald-50 px-2 py-1 text-xs font-medium text-emerald-600">11.01%</span>
      </div>
    </div>
    <div class="rounded-md border border-gray-200 bg-white p-5">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm text-gray-500">Roles</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900"><%= @roles_count %></p>
        </div>
      </div>
    </div>
  </div>
  
</div>