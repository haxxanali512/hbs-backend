<%
  # This partial can be used in both admin and tenant views
  # Variables needed: @encounter, current_user, namespace (admin or tenant)
  namespace ||= "admin"
  provider_notes = @encounter.provider_notes.includes(:provider).recent
  
  # Check if encounter is finalized (cascaded)
  encounter_finalized = @encounter.cascaded?
  
  # Check if user can create/edit notes
  current_provider = Provider.find_by(user_id: current_user&.id) if current_user
  can_create = !encounter_finalized && (namespace == "tenant" && current_provider.present?)
  can_edit = !encounter_finalized && (namespace == "tenant" && current_provider.present?)
%>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold text-gray-900">
      Provider Notes
      <% if provider_notes.any? %>
        <span class="ml-2 text-sm font-normal text-gray-500">(<%= provider_notes.count %>)</span>
      <% end %>
    </h3>
    <% if encounter_finalized && namespace == "tenant" %>
      <span class="text-xs text-gray-500 italic">Read-only (encounter finalized)</span>
    <% end %>
  </div>

  <!-- Provider Notes List -->
  <div class="space-y-4 mb-6 max-h-96 overflow-y-auto">
    <% if provider_notes.any? %>
      <% provider_notes.each do |note| %>
        <% 
          is_own_note = current_provider&.id == note.provider_id
          can_edit_note = can_edit && is_own_note && !encounter_finalized
        %>
        <div class="border-l-4 border-blue-300 pl-4 py-3 bg-gray-50 rounded-r">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-sm font-medium text-gray-900"><%= note.provider.full_name %></span>
                <span class="text-xs text-gray-500"><%= note.created_at.strftime("%m/%d/%Y %I:%M %p") %></span>
                <% if note.updated_at != note.created_at %>
                  <span class="text-xs text-gray-400 italic">(edited)</span>
                <% end %>
              </div>
              <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= note.note_text %></p>
            </div>
            <% if can_edit_note && namespace == "tenant" %>
              <div class="ml-4 flex gap-2">
                <%= link_to "Edit", edit_tenant_encounter_provider_note_path(@encounter, note), 
                    class: "text-xs text-indigo-600 hover:text-indigo-800" %>
                <%= link_to "Delete", tenant_encounter_provider_note_path(@encounter, note), 
                    method: :delete,
                    class: "text-xs text-red-600 hover:text-red-800",
                    data: { confirm: "Are you sure you want to delete this note?" } %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-sm text-gray-500 text-center py-4">No provider notes yet.</p>
    <% end %>
  </div>

  <!-- Provider Note Form -->
  <% if can_create && namespace == "tenant" %>
    <div class="border-t border-gray-200 pt-4">
      <h4 class="text-sm font-medium text-gray-900 mb-2">Add Provider Note</h4>
      <%= form_with url: tenant_encounter_provider_notes_path(@encounter),
          local: true, 
          class: "space-y-3" do |f| %>
        <% if defined?(@provider_note) && @provider_note&.errors&.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @provider_note.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <%= text_area_tag "provider_note[note_text]", (defined?(@provider_note) ? @provider_note.note_text : nil), 
              rows: 4, 
              class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500", 
              placeholder: "Enter your provider note (SOAP-style notes, quick observations, etc.)", 
              required: true %>
          <p class="mt-1 text-xs text-gray-500">Note: Provider notes are not legal clinical records and cannot substitute for Clinical Documentation.</p>
        </div>
        <div class="flex justify-end">
          <%= submit_tag "Add Note", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  <% elsif encounter_finalized && namespace == "tenant" %>
    <div class="border-t border-gray-200 pt-4">
      <p class="text-sm text-gray-500 text-center py-2">Provider notes cannot be added or edited after encounter finalization.</p>
    </div>
  <% end %>
</div>

