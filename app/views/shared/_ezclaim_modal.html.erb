    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
    
    submitButton.disabled = true;
    submitButton.textContent = 'Submitting...';
    
    const formData = new FormData(form);
    const data = {};
    
    // Build the claim data object
    data.ClaPatFID = formData.get('claim[ClaPatFID]') || '';
    data.claRenderingPhyFID = formData.get('claim[claRenderingPhyFID]') || '';
    data.ClaDiagnosis1 = formData.get('claim[ClaDiagnosis1]') || '';
    data.ClaSubmissionMethod = formData.get('claim[ClaSubmissionMethod]') || '';
    data.claBillingPhyFID = formData.get('claim[claBillingPhyFID]') || '';
    data.SrvDateFrom = formData.get('claim[SrvDateFrom]') || '';
    data.SrvDateTo = formData.get('claim[SrvDateTo]') || '';
    
    // Build service lines array
    const serviceLinesMap = new Map();
    formData.forEach((value, key) => {
      const match = key.match(/^claim\[service_LinesObjectWithoutID\]\[(\d+)\]\[(\w+)\]$/);
      if (match) {
        const index = parseInt(match[1]);
        const field = match[2];
        if (!serviceLinesMap.has(index)) {
          serviceLinesMap.set(index, {});
        }
        const line = serviceLinesMap.get(index);
        line[field] = value;
      }
    });
    
    // Convert map to array and filter out empty service lines
    data.service_LinesObjectWithoutID = Array.from(serviceLinesMap.values())
      .filter(line => line.SrvProcedureCode || line.SrvDateFrom || line.SrvDateTo || line.SrvProcedureUnits)
      .map(line => ({
        SrvDateFrom: line.SrvDateFrom || '',
        SrvDateTo: line.SrvDateTo || '',
        SrvProcedureCode: line.SrvProcedureCode || '',
        SrvProcedureUnits: line.SrvProcedureUnits || ''
      }));
    
    fetch(submitUrl, {
      method: 'POST',
      headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken
      },
      body: JSON.stringify({ claim: data }),
      credentials: 'same-origin'
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(data => {
          throw new Error(data.error || 'Failed to submit to EZClaim');
        });
      }
      return response.json();
    })
    .then(data => {
      if (data.success) {
        alert('Claim successfully submitted to EZClaim!');
        closeEzclaimModal(modalId);
        window.location.reload();
      } else {
        alert('Error: ' + (data.error || 'Failed to submit to EZClaim'));
      }
    })
    .catch(error => {
      alert('Error: ' + error.message);
    })
    .finally(() => {
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    });
  }

