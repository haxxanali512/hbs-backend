<% 
  # Default values
  modal_id = local_assigns[:modal_id] || 'ezclaimModal'
  claim_id = local_assigns[:claim_id] || @claim&.id
  test_url = local_assigns[:test_url] || "/admin/claims/#{claim_id}/test_ezclaim_connection"
  submit_url = local_assigns[:submit_url] || "/admin/claims/#{claim_id}/submit"
  title = local_assigns[:title] || 'Send to EZClaim'
  modal_type = local_assigns[:modal_type] || 'claim' # 'claim' or 'claim_insured'
  data_url = local_assigns[:data_url] || nil
  search_url = local_assigns[:search_url] || nil # URL for procedure code search
%>

<!-- EZClaim Modal -->
<div id="<%= modal_id %>" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="<%= modal_id %>-title" role="dialog" aria-modal="true" data-search-url="<%= search_url || '' %>">
  <div class="relative flex min-h-full items-center justify-center p-4">
    <!-- Background overlay -->
    <div id="<%= modal_id %>Overlay" class="absolute inset-0 bg-black/40 transition-opacity duration-300 ease-in-out opacity-0" onclick="closeEzclaimModal('<%= modal_id %>')"></div>

    <!-- Modal panel -->
    <div id="<%= modal_id %>Content" class="relative z-10 w-full max-w-4xl rounded-lg bg-white shadow-xl transform transition-all duration-300 ease-in-out scale-95 opacity-0">
      <div class="bg-white px-6 py-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900" id="<%= modal_id %>-title"><%= title %></h3>
          <button type="button" onclick="closeEzclaimModal('<%= modal_id %>')" class="text-gray-400 hover:text-gray-500">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Loading State -->
        <div id="<%= modal_id %>Loading" class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-purple-600"></div>
          <p class="mt-4 text-sm text-gray-600">Testing EZClaim connection...</p>
        </div>

        <!-- Connection Success State / Editable Form -->
        <div id="<%= modal_id %>Success" class="hidden">
          <% if modal_type == 'claim' %>
            <!-- Editable Form for Claim -->
            <form id="<%= modal_id %>Form" onsubmit="event.preventDefault(); submitClaim('<%= modal_id %>', '<%= submit_url %>');">
              <div class="mb-4">
                <h4 class="text-sm font-semibold text-gray-900 mb-2">Request Details</h4>
                <div class="bg-gray-50 rounded-md p-4 mb-4">
                  <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                      <span class="text-gray-600">API URL:</span>
                      <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiUrl"></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">API Version:</span>
                      <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiVersion"></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Endpoint:</span>
                      <span class="text-gray-900 font-mono">POST /Claims</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <h4 class="text-sm font-semibold text-gray-900 mb-3">Claim Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Patient FID</label>
                    <input type="text" name="claim[ClaPatFID]" id="<%= modal_id %>ClaPatFID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Rendering Physician FID</label>
                    <input type="text" name="claim[claRenderingPhyFID]" id="<%= modal_id %>claRenderingPhyFID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Diagnosis 1</label>
                    <input type="text" name="claim[ClaDiagnosis1]" id="<%= modal_id %>ClaDiagnosis1" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Submission Method</label>
                    <input type="text" name="claim[ClaSubmissionMethod]" id="<%= modal_id %>ClaSubmissionMethod" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Billing Physician FID</label>
                    <input type="text" name="claim[claBillingPhyFID]" id="<%= modal_id %>claBillingPhyFID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Service Date From</label>
                    <input type="date" name="claim[SrvDateFrom]" id="<%= modal_id %>SrvDateFrom" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Service Date To</label>
                    <input type="date" name="claim[SrvDateTo]" id="<%= modal_id %>SrvDateTo" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="text-sm font-semibold text-gray-900">Service Lines</h4>
                  <button type="button" onclick="addServiceLine('<%= modal_id %>')" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                    + Add Service Line
                  </button>
                </div>
                <div id="<%= modal_id %>ServiceLines" class="space-y-3">
                  <!-- Service lines will be added here dynamically -->
                </div>
              </div>

              <div class="flex justify-end space-x-3 mt-6">
                <button type="button" onclick="closeEzclaimModal('<%= modal_id %>')" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                  Cancel
                </button>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700">
                  Send to EZClaim
                </button>
              </div>
            </form>
          <% elsif modal_type == 'claim_insured' %>
            <!-- Editable Form for Claim Insured -->
            <form id="<%= modal_id %>Form" onsubmit="event.preventDefault(); submitClaimInsured('<%= modal_id %>', '<%= submit_url %>');">
              <div class="mb-4">
                <h4 class="text-sm font-semibold text-gray-900 mb-2">Request Details</h4>
                <div class="bg-gray-50 rounded-md p-4 mb-4">
                  <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                      <span class="text-gray-600">API URL:</span>
                      <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiUrl"></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">API Version:</span>
                      <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiVersion"></span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Endpoint:</span>
                      <span class="text-gray-900 font-mono">POST /Claim_Insureds</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <h4 class="text-sm font-semibold text-gray-900 mb-3">Claim Insured Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                    <input type="text" name="claim_insured[ClaInsFirstName]" id="<%= modal_id %>ClaInsFirstName" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                    <input type="text" name="claim_insured[ClaInsLastName]" id="<%= modal_id %>ClaInsLastName" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Birth Date</label>
                    <input type="date" name="claim_insured[ClaInsBirthDate]" id="<%= modal_id %>ClaInsBirthDate" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Sex</label>
                    <select name="claim_insured[ClaInsSex]" id="<%= modal_id %>ClaInsSex" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                      <option value="">Select</option>
                      <option value="M">Male</option>
                      <option value="F">Female</option>
                      <option value="O">Other</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                    <input type="text" name="claim_insured[ClaInsAddress1]" id="<%= modal_id %>ClaInsAddress1" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                    <input type="text" name="claim_insured[ClaInsCity]" id="<%= modal_id %>ClaInsCity" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                    <input type="text" name="claim_insured[ClaInsState]" id="<%= modal_id %>ClaInsState" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm" maxlength="2">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Zip</label>
                    <input type="text" name="claim_insured[ClaInsZip]" id="<%= modal_id %>ClaInsZip" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                    <input type="tel" name="claim_insured[ClaInsPhone]" id="<%= modal_id %>ClaInsPhone" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Employer</label>
                    <input type="text" name="claim_insured[ClaInsEmployer]" id="<%= modal_id %>ClaInsEmployer" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                    <input type="text" name="claim_insured[ClaInsCompanyName]" id="<%= modal_id %>ClaInsCompanyName" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Insurance ID</label>
                    <input type="text" name="claim_insured[ClaInsInsuranceID]" id="<%= modal_id %>ClaInsInsuranceID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Group Number</label>
                    <input type="text" name="claim_insured[ClaInsGroupNumber]" id="<%= modal_id %>ClaInsGroupNumber" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Plan Name</label>
                    <input type="text" name="claim_insured[ClaInsPlanName]" id="<%= modal_id %>ClaInsPlanName" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Relation to Insured</label>
                    <select name="claim_insured[ClaInsRelationToInsured]" id="<%= modal_id %>ClaInsRelationToInsured" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                      <option value="S">Self</option>
                      <option value="C">Child</option>
                      <option value="O">Other</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Sequence</label>
                    <select name="claim_insured[ClaInsSequence]" id="<%= modal_id %>ClaInsSequence" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                      <option value="1">Primary</option>
                      <option value="2">Secondary</option>
                      <option value="3">Tertiary</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Accept Assignment</label>
                    <input type="text" name="claim_insured[ClaInsAcceptAssignment]" id="<%= modal_id %>ClaInsAcceptAssignment" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Filing Indicator</label>
                    <input type="text" name="claim_insured[ClaInsFilingIndicator]" id="<%= modal_id %>ClaInsFilingIndicator" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">SSN</label>
                    <input type="text" name="claim_insured[ClaInsSSN]" id="<%= modal_id %>ClaInsSSN" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Claim FID</label>
                    <input type="text" name="claim_insured[ClaInsClaFID]" id="<%= modal_id %>ClaInsClaFID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Patient FID</label>
                    <input type="text" name="claim_insured[ClaInsPatFID]" id="<%= modal_id %>ClaInsPatFID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">GUID</label>
                    <input type="text" name="claim_insured[ClaInsGUID]" id="<%= modal_id %>ClaInsGUID" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm">
                  </div>
                </div>
              </div>

              <div class="flex justify-end space-x-3 mt-6">
                <button type="button" onclick="closeEzclaimModal('<%= modal_id %>')" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                  Cancel
                </button>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700">
                  Send to EZClaim
                </button>
              </div>
            </form>
          <% else %>
            <!-- Original Payload Preview for Regular Claims -->
            <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-md">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <p class="text-sm font-medium text-green-800">Connection successful!</p>
              </div>
            </div>

            <div class="mb-4">
              <h4 class="text-sm font-semibold text-gray-900 mb-2">Request Details</h4>
              <div class="bg-gray-50 rounded-md p-4 mb-4">
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">API URL:</span>
                    <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiUrl"></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">API Version:</span>
                    <span class="text-gray-900 font-mono" id="<%= modal_id %>ApiVersion"></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Endpoint:</span>
                    <span class="text-gray-900 font-mono">POST /claims</span>
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <h4 class="text-sm font-semibold text-gray-900 mb-2">Payload Preview</h4>
              <div class="bg-gray-900 rounded-md p-4 overflow-x-auto">
                <pre id="<%= modal_id %>Payload" class="text-xs text-green-400 font-mono"></pre>
              </div>
            </div>

            <div class="flex justify-end space-x-3">
              <button type="button" onclick="closeEzclaimModal('<%= modal_id %>')" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                Cancel
              </button>
              <button type="button" onclick="submitToEzclaim('<%= modal_id %>', '<%= submit_url %>')" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700">
                Send to EZClaim
              </button>
            </div>
          <% end %>
        </div>

        <!-- Connection Error State -->
        <div id="<%= modal_id %>Error" class="hidden">
          <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-md">
            <div class="flex items-center">
              <svg class="h-5 w-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <p class="text-sm font-medium text-red-800">Connection failed</p>
            </div>
          </div>

          <div class="mb-4">
            <h4 class="text-sm font-semibold text-gray-900 mb-2">Error Details</h4>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <p class="text-sm text-red-800" id="<%= modal_id %>ErrorMessage"></p>
            </div>
          </div>

          <div class="flex justify-end">
            <button type="button" onclick="closeEzclaimModal('<%= modal_id %>')" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // EZClaim Modal Functions - Global functions that work with any modal ID
  function openEzclaimModal(modalId, dataUrl, modalType) {
    modalId = modalId || 'ezclaimModal';
    modalType = modalType || 'claim';
    const modal = document.getElementById(modalId);
    const overlay = document.getElementById(modalId + 'Overlay');
    const content = document.getElementById(modalId + 'Content');
    
    if (!modal || !overlay || !content) return;
    
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    // Reset states
    const loading = document.getElementById(modalId + 'Loading');
    const success = document.getElementById(modalId + 'Success');
    const error = document.getElementById(modalId + 'Error');
    
    if (loading) {
      loading.classList.remove('hidden');
      if (modalType === 'claim_insured') {
        loading.querySelector('p').textContent = 'Loading claim insured data...';
      }
    }
    if (success) success.classList.add('hidden');
    if (error) error.classList.add('hidden');
    
    // Trigger fade in animation
    requestAnimationFrame(() => {
      overlay.classList.remove('opacity-0');
      overlay.classList.add('opacity-100');
      content.classList.remove('scale-95', 'opacity-0');
      content.classList.add('scale-100', 'opacity-100');
    });
    
    // Load data based on modal type
    if (dataUrl) {
      if (modalType === 'claim_insured') {
        loadClaimInsuredData(modalId, dataUrl);
      } else if (modalType === 'claim') {
        loadClaimData(modalId, dataUrl);
      } else {
        testEzclaimConnection(modalId, dataUrl);
      }
    }
  }

  function closeEzclaimModal(modalId) {
    modalId = modalId || 'ezclaimModal';
    const modal = document.getElementById(modalId);
    const overlay = document.getElementById(modalId + 'Overlay');
    const content = document.getElementById(modalId + 'Content');
    
    if (!modal || !overlay || !content) return;
    
    // Trigger fade out animation
    overlay.classList.remove('opacity-100');
    overlay.classList.add('opacity-0');
    content.classList.remove('scale-100', 'opacity-100');
    content.classList.add('scale-95', 'opacity-0');
    
    // Hide modal after animation completes
    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }, 300);
  }

  function testEzclaimConnection(modalId, testUrl) {
    modalId = modalId || 'ezclaimModal';
    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
    
    fetch(testUrl, {
      method: 'GET',
      headers: {
        'Accept': 'application/json',
        'X-CSRF-Token': csrfToken
      },
      credentials: 'same-origin'
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(data => {
          throw new Error(data.error || 'Connection test failed');
        });
      }
      return response.json();
    })
    .then(data => {
      const loading = document.getElementById(modalId + 'Loading');
      const success = document.getElementById(modalId + 'Success');
      const error = document.getElementById(modalId + 'Error');
      
      if (loading) loading.classList.add('hidden');
      
      if (data.success) {
        // Show success state
        if (success) success.classList.remove('hidden');
        const apiUrl = document.getElementById(modalId + 'ApiUrl');
        const apiVersion = document.getElementById(modalId + 'ApiVersion');
        const payload = document.getElementById(modalId + 'Payload');
        
        if (apiUrl) apiUrl.textContent = data.api_url;
        if (apiVersion) apiVersion.textContent = data.api_version;
        if (payload) payload.textContent = JSON.stringify(data.payload, null, 2);
      } else {
        // Show error state
        if (error) error.classList.remove('hidden');
        const errorMessage = document.getElementById(modalId + 'ErrorMessage');
        if (errorMessage) errorMessage.textContent = data.error || 'Connection failed';
      }
    })
    .catch(error => {
      const loading = document.getElementById(modalId + 'Loading');
      const errorDiv = document.getElementById(modalId + 'Error');
      const errorMessage = document.getElementById(modalId + 'ErrorMessage');
      
      if (loading) loading.classList.add('hidden');
      if (errorDiv) errorDiv.classList.remove('hidden');
      if (errorMessage) errorMessage.textContent = 'Error: ' + error.message;
    });
  }

  function loadClaimInsuredData(modalId, dataUrl) {
    modalId = modalId || 'ezclaimModal';
    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
    
    fetch(dataUrl, {
      method: 'GET',
      headers: {
        'Accept': 'application/json',
        'X-CSRF-Token': csrfToken
      },
      credentials: 'same-origin'
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(data => {
          throw new Error(data.error || 'Failed to load claim insured data');
        });
      }
      return response.json();
    })
    .then(data => {
      const loading = document.getElementById(modalId + 'Loading');
      const success = document.getElementById(modalId + 'Success');
      const error = document.getElementById(modalId + 'Error');
      
      if (loading) loading.classList.add('hidden');
      
