  function searchProcedureCodes(lineId, searchUrl, query) {
    const resultsDiv = document.getElementById('procedure_code_' + lineId + '_results');
    if (!resultsDiv || !searchUrl) return;
    
    // Clear previous timeout
    if (searchTimeouts[lineId]) {
      clearTimeout(searchTimeouts[lineId]);
    }
    
    // Debounce search
    searchTimeouts[lineId] = setTimeout(() => {
      // Show loading state
      resultsDiv.classList.remove('hidden');
      resultsDiv.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">Searching...</div>';
      
      // Use Turbo Stream for search
      const url = searchUrl + '?q=' + encodeURIComponent(query) + '&line_id=' + encodeURIComponent(lineId);
      
      fetch(url, {
        method: 'GET',
        headers: {
          'Accept': 'text/vnd.turbo-stream.html',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
        },
        credentials: 'same-origin'
      })
      .then(response => {
        if (response.headers.get('Content-Type')?.includes('turbo-stream')) {
          return response.text();
        } else {
          return response.json().then(data => {
            // Fallback to JSON if Turbo Stream not available
            if (data.success && data.results) {
              displayProcedureCodeResultsJSON(resultsDiv, data.results, lineId, searchUrl);
            }
            return null;
          });
        }
      })
      .then(html => {
        if (html) {
          // Turbo will handle the stream update automatically
          Turbo.renderStreamMessage(html);
        }
      })
      .catch(error => {
        console.error('Error searching procedure codes:', error);
        resultsDiv.innerHTML = '<div class="p-3 text-sm text-red-500">Error searching procedure codes</div>';
      });
    }, query.length > 0 ? 300 : 0);
  }

