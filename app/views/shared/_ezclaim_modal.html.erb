        'Accept': 'application/json',
        'Content-Type': 'application/json',
        'X-CSRF-Token': csrfToken
      },
      credentials: 'same-origin'
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(data => {
          throw new Error(data.error || 'Failed to submit to EZClaim');
        });
      }
      return response.json();
    })
    .then(data => {
      if (data.success) {
        // Show success message and reload page
        window.location.href = data.redirect_url || window.location.href;
      } else {
        // Show error
        alert('Failed to submit to EZClaim: ' + (data.error || 'Unknown error'));
        submitButton.disabled = false;
        submitButton.textContent = originalText;
      }
    })
    .catch(error => {
      alert('Error: ' + error.message);
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    });
  }

  // Close modal on Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      // Close any visible EZClaim modal
      const modals = document.querySelectorAll('[id$="ezclaimModal"]:not(.hidden)');
      modals.forEach(modal => {
        const modalId = modal.id;
        closeEzclaimModal(modalId);
      });
      
      // Close any open procedure code dropdowns
      document.querySelectorAll('[id^="procedure_code_"][id$="_results"]:not(.hidden)').forEach(dropdown => {
        dropdown.classList.add('hidden');
      });
    }
  });

  // Close procedure code dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('.procedure-code-search') && !event.target.closest('[id^="procedure_code_"][id$="_results"]')) {
      document.querySelectorAll('[id^="procedure_code_"][id$="_results"]:not(.hidden)').forEach(dropdown => {
        dropdown.classList.add('hidden');
      });
    }
  });
</script>

