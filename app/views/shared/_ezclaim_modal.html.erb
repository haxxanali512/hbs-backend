  function calculateTotalCharges(lineId) {
    const unitPriceInput = document.getElementById(lineId + 'UnitPrice');
    const unitsInput = document.getElementById(lineId + 'Units');
    const totalChargesInput = document.getElementById(lineId + 'TotalCharges');
    
    if (unitPriceInput && unitsInput && totalChargesInput) {
      const unitPrice = parseFloat(unitPriceInput.value) || 0;
      const units = parseFloat(unitsInput.value) || 0;
      const pricingRule = unitPriceInput.getAttribute('data-pricing-rule') || 'per_unit';
      
      let total = 0;
      
      // Calculate based on pricing rule
      switch(pricingRule) {
        case 'per_hour':
        case 'hourly':
          // If unit_price is per hour, convert units (15-min increments) to hours
          // 1 unit = 15 minutes = 0.25 hours
          // So: units * 0.25 = hours, then hours * unit_price = total
          const hours = units * 0.25; // Convert 15-min units to hours
          total = unitPrice * hours;
          break;
        case 'per_minute':
          // If unit_price is per minute, multiply by minutes
          total = unitPrice * units;
          break;
        case 'per_visit':
        case 'per_procedure':
          // Flat rate per visit/procedure
          total = unitPrice * units;
          break;
        case 'per_unit':
        default:
          // Standard calculation: unit_price * units
          // If unit_price is per 15-min unit, multiply directly
          total = unitPrice * units;
          break;
      }
      
      totalChargesInput.value = total > 0 ? total.toFixed(2) : '';
    }
  }

