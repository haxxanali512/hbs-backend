<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @support_ticket.subject %></h1>
          <p class="mt-2 text-gray-600">Ticket #<%= @support_ticket.id %> · Submitted <%= time_ago_in_words(@support_ticket.created_at) %> ago</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Tickets", tenant_support_tickets_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Status Badge -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Current Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
            <%= @support_ticket.status.humanize %>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            <%= @support_ticket.priority.humanize %> Priority
          </span>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Ticket Details -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Ticket Details</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Category</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.category.humanize %></p>
              <% if @support_ticket.claims_issue? && @support_ticket.sub_category.present? %>
                <p class="mt-1 text-sm text-gray-700">Subcategory: <%= @support_ticket.sub_category.humanize %></p>
              <% end %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Status</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.status.humanize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Priority</label>
              <p class="mt-1 text-sm text-gray-900"><%= @support_ticket.priority.humanize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Created</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.created_at, format: :long) %></p>
            </div>
          </div>
          <div class="mt-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
            <p class="text-sm text-gray-900 whitespace-pre-line"><%= @support_ticket.description %></p>
          </div>
        </div>

        <!-- Conversation -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Conversation</h2>
            <p class="text-xs text-gray-500">No PHI in public comments.</p>
          </div>
          <div class="divide-y divide-gray-200">
            <% if @comments.any? { |c| !c.internal? } %>
              <% @comments.each do |comment| %>
                <% next if comment.internal? %>
                <div class="py-4">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-900"><%= comment.author_user.display_name %></span>
                    <span class="text-xs text-gray-500"><%= l(comment.created_at, format: :short) %></span>
                  </div>
                  <p class="text-sm text-gray-700 whitespace-pre-line"><%= comment.body %></p>
                </div>
              <% end %>
            <% else %>
              <div class="py-4 text-sm text-gray-500">No comments yet.</div>
            <% end %>
          </div>
          <div class="border-t border-gray-200 pt-6 mt-6">
            <%= form_with(url: tenant_support_ticket_comments_path(@support_ticket), scope: :support_ticket_comment, local: true, class: "space-y-4") do |f| %>
              <div>
                <%= f.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :body, rows: 4, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                <p class="mt-1 text-xs text-gray-500">Describe updates without PHI. Attachments should only use approved uploader IDs.</p>
              </div>
              <div class="flex justify-end">
                <%= f.submit "Post Comment", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- SLA Timers -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">SLA Timers</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">First Response Due</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.first_response_due_at, format: :long) %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Resolution Target</label>
              <p class="mt-1 text-sm text-gray-900"><%= l(@support_ticket.resolution_due_at, format: :long) %></p>
            </div>
          </div>
        </div>

        <!-- Documents -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-base font-semibold text-gray-900 mb-4">Documents</h3>
          <% if @support_ticket.documents.attached? %>
            <div class="space-y-2 mb-4">
              <% @support_ticket.documents.each do |attachment| %>
                <div class="flex items-center justify-between p-2 border border-gray-200 rounded-md hover:bg-gray-50">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= attachment.filename %></p>
                    <p class="text-xs text-gray-500"><%= number_to_human_size(attachment.byte_size) %> · <%= attachment.content_type %></p>
                  </div>
                  <%= link_to "View", rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "ml-2 text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 mb-4">No documents attached.</p>
          <% end %>

          <!-- Document Upload Form -->
          <%= form_with url: attach_document_tenant_support_ticket_path(@support_ticket), method: :post, local: true, multipart: true, class: "space-y-3 border-t border-gray-200 pt-4" do |f| %>
            <div>
              <%= label_tag "document[title]", "Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= text_field_tag "document[title]", nil, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Document title" %>
            </div>
            <div>
              <%= label_tag "document[file]", "File", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= file_field_tag "document[file]", required: true, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <p class="mt-1 text-xs text-gray-500">PDF, images, or office docs. Max 25MB.</p>
            </div>
            <div class="flex justify-end">
              <%= f.submit "Attach Document", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
