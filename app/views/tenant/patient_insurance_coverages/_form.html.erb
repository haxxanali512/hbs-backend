<%= form_with model: [:tenant, patient_insurance_coverage], local: true, class: "space-y-6" do |f| %>
  <% if patient_insurance_coverage.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(patient_insurance_coverage.errors.count, "error") %> prohibited this coverage from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% patient_insurance_coverage.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Core Information -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-gray-900">Core Information</h3>
      <div>
        <%= f.label :patient_id, "Patient", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :patient_id, 
            options_from_collection_for_select(@patients, :id, :full_name, patient_insurance_coverage.patient_id),
            {},
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
      </div>

      <div>
        <%= f.label :insurance_plan_id, "Insurance Plan", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :insurance_plan_id, 
            options_from_collection_for_select(@insurance_plans, :id, :name, patient_insurance_coverage.insurance_plan_id),
            {},
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
      </div>

      <div>
        <%= f.label :member_id, "Member ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :member_id, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 font-mono focus:outline-none focus:ring-2 focus:ring-blue-500", 
            placeholder: "ABC12345",
            required: true %>
        <p class="text-xs text-gray-500 mt-1">1-30 characters, alphanumeric and dashes only</p>
      </div>

      <div>
        <%= f.label :coverage_order, "Coverage Order", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :coverage_order, 
            options_for_select(PatientInsuranceCoverage.coverage_orders.keys.map { |k| [k.humanize, k] }, patient_insurance_coverage.coverage_order),
            {},
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
      </div>

      <div>
        <%= f.label :relationship_to_subscriber, "Relationship to Subscriber", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :relationship_to_subscriber, 
            options_for_select(PatientInsuranceCoverage.relationship_to_subscribers.keys.map { |k| [k.humanize, k] }, patient_insurance_coverage.relationship_to_subscriber),
            {},
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
      </div>
    </div>

    <!-- Additional Information -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-gray-900">Additional Information</h3>
      
      <div>
        <%= f.label :subscriber_name, "Subscriber Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :subscriber_name, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            required: true %>
      </div>

      <div>
        <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, 
            options_for_select(PatientInsuranceCoverage.statuses.keys.map { |k| [k.humanize, k] }, patient_insurance_coverage.status),
            {},
            { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", required: true } %>
      </div>

      <div>
        <%= f.label :effective_date, "Effective Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :effective_date, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :termination_date, "Termination Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :termination_date, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Subscriber Address -->
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Subscriber Address</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="md:col-span-2">
        <%= f.label :subscriber_address_line1, "Address Line 1", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_line1]", 
            patient_insurance_coverage.subscriber_address&.dig("line1"), 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            required: true %>
      </div>
      <div class="md:col-span-2">
        <%= f.label :subscriber_address_line2, "Address Line 2", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_line2]", 
            patient_insurance_coverage.subscriber_address&.dig("line2"), 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= f.label :subscriber_address_city, "City", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_city]", 
            patient_insurance_coverage.subscriber_address&.dig("city"), 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            required: true %>
      </div>
      <div>
        <%= f.label :subscriber_address_state, "State", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_state]", 
            patient_insurance_coverage.subscriber_address&.dig("state"), 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500", 
            maxlength: 2, 
            placeholder: "CA",
            required: true %>
      </div>
      <div>
        <%= f.label :subscriber_address_postal, "Postal Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_postal]", 
            patient_insurance_coverage.subscriber_address&.dig("postal"), 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            required: true %>
      </div>
      <div>
        <%= f.label :subscriber_address_country, "Country", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag "patient_insurance_coverage[subscriber_address_country]", 
            patient_insurance_coverage.subscriber_address&.dig("country") || "US", 
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            required: true %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", patient_insurance_coverage.persisted? ? tenant_patient_insurance_coverage_path(patient_insurance_coverage) : tenant_patient_insurance_coverages_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors" %>
    <%= f.submit patient_insurance_coverage.persisted? ? "Update Coverage" : "Create Coverage", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
  </div>
<% end %>

