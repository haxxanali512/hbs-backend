<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Invoices</h1>
          <p class="mt-2 text-gray-600">View your organization's invoices</p>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <% 
      # Merge status and past due into one filter
      @status_options = [
        ["All", ""],
        ["Issued", "issued"],
        ["Partially Paid", "partially_paid"],
        ["Paid", "paid"],
        ["Voided", "voided"],
        ["Past Due", "past_due"]
      ]
      @service_month_options = [] # Add service month options if needed
    %>
    <%= render "shared/filters" %>

    <!-- Invoices Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @invoices.each do |invoice| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to invoice.invoice_number, tenant_invoice_path(invoice), 
                        class: "text-blue-600 hover:text-blue-800" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= format_in_organization_tz(invoice.created_at, "%b %d, %Y") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= invoice.invoice_type.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_colors = {
                    "draft" => "bg-gray-100 text-gray-800",
                    "issued" => "bg-yellow-100 text-yellow-800",
                    "partially_paid" => "bg-blue-100 text-blue-800",
                    "paid" => "bg-green-100 text-green-800",
                    "voided" => "bg-red-100 text-red-800"
                  } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[invoice.status] %>">
                    <%= invoice.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <div class="font-medium">$<%= number_with_precision(invoice.total, precision: 2) %></div>
                  <% if invoice.amount_due > 0 %>
                    <div class="text-red-600">Due: $<%= number_with_precision(invoice.amount_due, precision: 2) %></div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= invoice.due_date&.strftime("%b %d, %Y") || "â€”" %>
                  <% if invoice.past_due? %>
                    <div class="text-red-600 text-xs">Past Due</div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right">
                  <div class="flex justify-end space-x-2">
                    <%= link_to "View", tenant_invoice_path(invoice), 
                        class: "text-primary-blue hover:text-primary-green" %>
                    
                    <% if (invoice.issued? || invoice.partially_paid?) && invoice.amount_due > 0 %>
                      <%= link_to "Pay", pay_tenant_invoice_path(invoice), 
                          class: "text-primary-green hover:text-primary-green-50" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @invoices.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No invoices found</div>
          <div class="text-gray-400 text-sm mt-2">Invoices will appear here once they are issued</div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
