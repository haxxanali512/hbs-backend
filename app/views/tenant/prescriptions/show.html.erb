<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Prescription Details</h1>
          <p class="mt-2 text-gray-600">View and manage prescription information</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Prescriptions", tenant_prescriptions_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Back to Patient", tenant_patient_path(@prescription.patient), class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_tenant_prescription_path(@prescription), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Prescription Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Prescription Information</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Patient</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @prescription.patient.full_name, tenant_patient_path(@prescription.patient), class: "text-blue-600 hover:text-blue-800 font-bold underline" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Title</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @prescription.title %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Date Written</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @prescription.date_written&.strftime("%B %d, %Y") || "—" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Expires On</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @prescription.expires_on&.strftime("%B %d, %Y") || "—" %>
                <% if @prescription.expired? %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Expired
                  </span>
                <% end %>
              </dd>
            </div>
            <% if @prescription.specialty.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Specialty</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= @prescription.specialty.name %>
                  </span>
                </dd>
              </div>
            <% end %>
            <% if @prescription.procedure_code.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Procedure Code</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= @prescription.procedure_code.code %> - <%= @prescription.procedure_code.description %>
                  </span>
                </dd>
              </div>
            <% end %>
            <% if @prescription.provider.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Provider</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @prescription.provider.full_name %></dd>
              </div>
            <% end %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <% if @prescription.archived? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Archived
                  </span>
                <% elsif @prescription.expired? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Expired
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Diagnosis Codes -->
        <% if @prescription.diagnosis_codes.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Diagnosis Codes</h2>
            <div class="flex flex-wrap gap-2">
              <% @prescription.diagnosis_codes.each do |dc| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= dc.code %> - <%= truncate(dc.description.to_s, length: 40) %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Documents -->
        <% if @prescription.documents.attached? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Documents</h2>
            <div class="space-y-2">
              <% @prescription.documents.each do |attachment| %>
                <div class="flex items-center justify-between p-2 border border-gray-200 rounded-md hover:bg-gray-50">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= attachment.filename %></p>
                    <p class="text-xs text-gray-500"><%= number_to_human_size(attachment.byte_size) %> · <%= attachment.content_type %></p>
                  </div>
                  <%= link_to "View", rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "ml-2 text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
          <div class="space-y-2">
            <% if @prescription.can_be_archived? %>
              <%= button_to "Archive", archive_tenant_prescription_path(@prescription), method: :post, 
                  class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white text-sm font-medium px-4 py-2 rounded-md",
                  data: { confirm: "Are you sure you want to archive this prescription?" } %>
            <% elsif @prescription.can_be_unarchived? %>
              <%= button_to "Unarchive", unarchive_tenant_prescription_path(@prescription), method: :post, 
                  class: "w-full bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-4 py-2 rounded-md" %>
            <% end %>
            <%= button_to "Delete", tenant_prescription_path(@prescription), method: :delete,
                class: "w-full bg-red-600 hover:bg-red-700 text-white text-sm font-medium px-4 py-2 rounded-md",
                data: { confirm: "Are you sure you want to delete this prescription? This action cannot be undone." } %>
          </div>
        </div>

        <!-- Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Information</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">Created</label>
              <p class="text-sm text-gray-900"><%= @prescription.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @prescription.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <% if @prescription.archived? && @prescription.archived_at.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Archived</label>
                <p class="text-sm text-gray-900"><%= @prescription.archived_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

