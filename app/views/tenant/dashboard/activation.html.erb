<div class="min-h-screen bg-gray-50">
  <!-- Header without sidebar -->
  <div class="bg-white shadow">
    <div class="px-6 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-semibold text-gray-900">Organization Setup</h1>
        <div class="flex items-center">
          <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          <span class="ml-2 text-sm font-medium text-gray-700"><%= current_user.email %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Organization Setup</h1>
    <div class="space-y-6">
      <!-- Progress steps -->
      <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
        <h3 class="text-base font-semibold text-gray-900 mb-6">Activation Progress</h3>
        <div class="flex items-center justify-between">
          <% @steps.each_with_index do |step, index| %>
            <div class="flex items-center">
              <div class="flex items-center justify-center w-10 h-10 rounded-full <%= step[:completed] ? 'bg-green-500 text-white' : step[:current] ? 'bg-indigo-500 text-white' : 'bg-gray-200 text-gray-500' %>">
                <% if step[:completed] %>
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                <% else %>
                  <span class="text-sm font-medium"><%= index + 1 %></span>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium <%= step[:completed] ? 'text-green-600' : step[:current] ? 'text-indigo-600' : 'text-gray-500' %>">
                  <%= step[:name] %>
                </p>
              </div>
            </div>
            <% unless index == @steps.length - 1 %>
              <div class="flex-1 mx-4">
                <div class="h-0.5 bg-gray-200"></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Current step content -->
      <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
        <h3 class="text-base font-semibold text-gray-900 mb-6">Current Step</h3>
        <% if @current_organization.pending? %>
          <!-- Billing Setup Step -->
          <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-indigo-100">
              <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Billing Setup Required</h3>
            <p class="mt-2 text-sm text-gray-500">
              Please set up your billing information to continue with the organization activation process.
            </p>
            <div class="mt-6">
              <%= link_to "Set Up Billing", tenant_activation_billing_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% elsif @current_organization.billing_setup? %>
          <!-- Compliance Setup Step -->
          <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Billing Setup Complete</h3>
            <p class="mt-2 text-sm text-gray-500">
              Great! Your billing information has been set up. Now let's move on to compliance verification.
            </p>
            <div class="mt-6">
              <%= link_to "Continue to Compliance", tenant_activation_compliance_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% elsif @current_organization.compliance_setup? %>
          <!-- Document Signing Step -->
          <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Compliance Verified</h3>
            <p class="mt-2 text-sm text-gray-500">
              Excellent! Your compliance information has been verified. Now let's complete the document signing process.
            </p>
            <div class="mt-6">
              <%= link_to "Sign Documents", tenant_activation_documents_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% elsif @current_organization.document_signing? %>
          <!-- Activation Complete Step -->
          <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">Documents Signed</h3>
            <p class="mt-2 text-sm text-gray-500">
              Perfect! All documents have been signed. You're almost ready to activate your organization.
            </p>
            <div class="mt-6">
              <%= link_to "Complete Activation", tenant_activation_complete_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Help section -->
      <div class="rounded-2xl border border-indigo-200 bg-indigo-50 p-6 shadow-sm">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-indigo-800">Need Help?</h3>
            <div class="mt-2 text-sm text-indigo-700">
              <p>If you have any questions about the activation process, please contact our support team at support@example.com or call (555) 123-4567.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
