<div class="min-h-screen bg-gray-50">
  <!-- Header without sidebar -->
  <div class="bg-white shadow">
    <div class="px-6 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-semibold text-gray-900">Compliance Setup</h1>
        <div class="flex items-center">
          <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          <span class="ml-2 text-sm font-medium text-gray-700"><%= current_user.email %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="max-w-2xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-8">
        <div class="mb-6">
          <h2 class="text-lg font-medium text-gray-900">Compliance Verification</h2>
          <p class="mt-1 text-sm text-gray-500">Please provide the required compliance information to continue with the activation process.</p>
        </div>

        <%= form_with model: [@organization, @compliance], url: tenant_activation_compliance_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <% if @compliance.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @compliance.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <!-- GSA Agreement -->
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900">GSA Agreement</h3>
                    <p class="text-sm text-gray-500">Government Services Administration agreement</p>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <div id="gsa-status" class="text-sm">
                    <span id="gsa-status-text" class="px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Not Started</span>
                  </div>
                  <button type="button" id="send-gsa-btn" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                    </svg>
                    <span id="gsa-button-text">Send for Signature</span>
                    <span id="gsa-button-spinner" class="hidden">
                      <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      Sending...
                    </span>
                  </button>
                </div>
              </div>
            </div>

            <!-- BAA Agreement -->
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900">Business Associate Agreement (BAA)</h3>
                    <p class="text-sm text-gray-500">HIPAA compliance and data protection agreement</p>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <div id="baa-status" class="text-sm">
                    <span id="baa-status-text" class="px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Not Started</span>
                  </div>
                  <button type="button" id="send-baa-btn" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                    </svg>
                    <span id="baa-button-text">Send for Signature</span>
                    <span id="baa-button-spinner" class="hidden">
                      <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      Sending...
                    </span>
                  </button>
                </div>
              </div>
            </div>

            <!-- Data Security -->
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900">Data Security & Retention</h3>
                    <p class="text-sm text-gray-500">Automatically configured based on compliance settings</p>
                  </div>
                </div>
                <div class="text-sm">
                  <span class="px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Auto-configured</span>
                </div>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <%= link_to "Back to Dashboard", tenant_root_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            
            <div class="flex space-x-3">
              <%= form.submit "Save Compliance Information", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help section -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Compliance Requirements</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Please ensure all required compliance documents are properly signed and dated. Contact our compliance team if you need assistance with any of these requirements.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // DocuSign integration
  const sendGsaBtn = document.getElementById('send-gsa-btn');
  const sendBaaBtn = document.getElementById('send-baa-btn');
  
  // Load existing status on page load
  loadDocuSignStatus();
  
  // Set up GSA button
  if (sendGsaBtn) {
    sendGsaBtn.addEventListener('click', function() {
      sendDocument('gsa', this);
    });
  }
  
  // Set up BAA button
  if (sendBaaBtn) {
    sendBaaBtn.addEventListener('click', function() {
      sendDocument('baa', this);
    });
  }
  
  function sendDocument(type, button) {
    const buttonText = button.querySelector(`#${type}-button-text`);
    const buttonSpinner = button.querySelector(`#${type}-button-spinner`);
    const statusText = document.getElementById(`${type}-status-text`);
    
    // Set loading state
    button.disabled = true;
    buttonText.classList.add('hidden');
    buttonSpinner.classList.remove('hidden');
    statusText.textContent = 'Sending...';
    statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800';
    
    const endpoint = type === 'gsa' ? '/tenant/activation/send_gsa_agreement' : '/tenant/activation/send_baa_agreement';
    
    fetch(endpoint, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        statusText.textContent = 'Sent for Signature';
        statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800';
        
        // Update the envelope ID field
        const envelopeField = document.querySelector(`input[name*="${type}_envelope_id"]`);
        if (envelopeField) {
          envelopeField.value = data.envelope_id;
        }
        
        // Update button
        buttonText.textContent = 'Resend';
        button.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        button.classList.add('bg-gray-600', 'hover:bg-gray-700');
        
        alert(data.message);
      } else {
        statusText.textContent = 'Error';
        statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800';
        alert('Error: ' + data.error);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      statusText.textContent = 'Error';
      statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800';
      alert('An error occurred. Please try again.');
    })
    .finally(() => {
      button.disabled = false;
      buttonText.classList.remove('hidden');
      buttonSpinner.classList.add('hidden');
    });
  }
  
  function loadDocuSignStatus() {
    fetch('/tenant/activation/docusign_status', {
      method: 'GET',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success && data.results) {
        // Update GSA status
        if (data.results.gsa) {
          updateDocumentStatus('gsa', data.results.gsa);
        }
        
        // Update BAA status
        if (data.results.baa) {
          updateDocumentStatus('baa', data.results.baa);
        }
      }
    })
    .catch(error => {
      console.error('Error loading DocuSign status:', error);
    });
  }
  
  function updateDocumentStatus(type, result) {
    const statusText = document.getElementById(`${type}-status-text`);
    const button = document.getElementById(`send-${type}-btn`);
    const buttonText = button.querySelector(`#${type}-button-text`);
    
    if (result.success) {
      const status = result.status;
      const envelopeId = result.envelope_id;
      
      // Update status display
      if (status === 'completed') {
        statusText.textContent = 'Completed';
        statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800';
        buttonText.textContent = 'Completed';
        button.disabled = true;
        button.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        button.classList.add('bg-green-600', 'hover:bg-green-700');
      } else if (status === 'sent') {
        statusText.textContent = 'Sent for Signature';
        statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800';
        buttonText.textContent = 'Resend';
        button.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        button.classList.add('bg-gray-600', 'hover:bg-gray-700');
      } else if (status === 'delivered') {
        statusText.textContent = 'Delivered';
        statusText.className = 'px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800';
        buttonText.textContent = 'Resend';
        button.classList.remove('bg-blue-600', 'hover:bg-blue-700');
        button.classList.add('bg-gray-600', 'hover:bg-gray-700');
      }
      
      // Update envelope ID field
      const envelopeField = document.querySelector(`input[name*="${type}_envelope_id"]`);
      if (envelopeField) {
        envelopeField.value = envelopeId;
      }
    }
  }
  
  // Poll for status updates every 30 seconds
  setInterval(loadDocuSignStatus, 30000);
});
</script>
