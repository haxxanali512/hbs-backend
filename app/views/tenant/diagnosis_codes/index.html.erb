<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Diagnosis Codes</h1>
</div>

<div class="mb-4">
  <%= form_with url: tenant_diagnosis_codes_path, method: :get, local: true do |f| %>
    <div class="flex space-x-2">
      <%= text_field_tag :search, params[:search], placeholder: "Search code or description", class: "w-full border rounded px-3 py-2" %>
      <%= submit_tag "Search", class: "bg-gray-100 px-3 py-2 rounded" %>
    </div>
  <% end %>
  <p class="text-sm text-gray-500 mt-2">Showing active codes only</p>
  </div>

<div class="bg-white shadow rounded-md overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @diagnosis_codes.each do |dx| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= dx.code %></td>
          <td class="px-6 py-4"><%= dx.description %></td>
          <td class="px-6 py-4 text-right">
            <%= link_to "View", tenant_diagnosis_code_path(dx), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


