<% if params[:add_prescription] == 'true' %>
  <%= render "shared/add_prescription_modal" %>
<% end %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @patient.full_name %></h1>
          <p class="mt-2 text-gray-600">Patient Details</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Patients", tenant_patients_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_tenant_patient_path(@patient), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" if @patient.can_edit_demographics? %>
        </div>
      </div>
    </div>

    <!-- Status Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Current Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @patient.status_badge_color %>">
            <%= @patient.status.humanize %>
          </span>
        </div>

        <div class="flex space-x-2">
          <% if @patient.inactive? %>
            <%= link_to "Activate", activate_tenant_patient_path(@patient), method: :post,
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            <%= link_to "Reactivate", reactivate_tenant_patient_path(@patient), method: :post,
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <% end %>
          
          <% if @patient.active? %>
            <%= link_to "Inactivate", inactivate_tenant_patient_path(@patient), method: :post,
                class: "bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure? Future appointments and encounters must be cancelled first." } %>
          <% end %>
          
          <% unless @patient.is_deceased? %>
            <%= link_to "Mark Deceased", mark_deceased_tenant_patient_path(@patient), method: :post,
                class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "This action is irreversible. Continue?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Patient Information -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Personal Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">First Name</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.first_name %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Last Name</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.last_name %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Date of Birth</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.formatted_dob || "Not provided" %></p>
              <% if @patient.age.present? %>
                <p class="text-sm text-gray-500">Age: <%= @patient.age %> years</p>
              <% end %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Sex at Birth</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.sex_at_birth || "Not provided" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">MRN</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.mrn || "-" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">External ID</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.external_id || "-" %></p>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.email || "Not provided" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Phone</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.phone_number || "Not provided" %></p>
            </div>
          </div>
        </div>

        <!-- Address -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Address</h2>
          <div>
            <label class="block text-sm font-medium text-gray-700">Address</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @patient.full_address || "Not provided" %>
            </p>
          </div>
        </div>

        <!-- Insurance Coverage -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Insurance Coverage</h2>
            <%= link_to "Manage Insurance", edit_tenant_patient_path(@patient, anchor: 'insurance'), class: "text-sm text-blue-600 hover:text-blue-800" if @patient.can_edit_demographics? %>
          </div>
          
          <% if @patient.patient_insurance_coverages.any? %>
            <div class="space-y-4">
              <% @patient.patient_insurance_coverages.order(coverage_order: :asc).each do |coverage| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <h3 class="text-sm font-semibold text-gray-900">
                          <%= coverage.insurance_plan&.name || "Unknown Plan" %>
                        </h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= coverage.coverage_order == 'primary' ? 'bg-blue-100 text-blue-800' : coverage.coverage_order == 'secondary' ? 'bg-green-100 text-green-800' : 'bg-purple-100 text-purple-800' %>">
                          <%= coverage.coverage_order.humanize %>
                        </span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= coverage.status_badge_class %>">
                          <%= coverage.status.humanize %>
                        </span>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                          <span class="text-gray-500">Member ID:</span>
                          <span class="ml-2 font-mono text-gray-900"><%= coverage.member_id %></span>
                        </div>
                        <div>
                          <span class="text-gray-500">Subscriber:</span>
                          <span class="ml-2 text-gray-900"><%= coverage.subscriber_name %></span>
                        </div>
                        <div>
                          <span class="text-gray-500">Relationship:</span>
                          <span class="ml-2 text-gray-900"><%= coverage.relationship_to_subscriber.humanize %></span>
                        </div>
                        <% if coverage.effective_date.present? || coverage.termination_date.present? %>
                          <div>
                            <span class="text-gray-500">Dates:</span>
                            <span class="ml-2 text-gray-900">
                              <%= coverage.effective_date&.strftime("%m/%d/%Y") || "—" %>
                              <% if coverage.termination_date.present? %>
                                - <%= coverage.termination_date.strftime("%m/%d/%Y") %>
                              <% end %>
                            </span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="ml-4">
                      <%= link_to "View Details", tenant_patient_insurance_coverage_path(coverage), class: "text-sm text-blue-600 hover:text-blue-800" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No insurance coverage on file.</p>
          <% end %>
        </div>

        <!-- Check eligibility (Fuse) -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Check eligibility</h2>
          </div>
          <p class="text-sm text-gray-500 mb-4">
            Run an eligibility check for an encounter that has insurance. Results will be delivered soon.
          </p>
          <% if @eligibility_encounters.any? %>
            <div class="space-y-3">
              <% @eligibility_encounters.each do |encounter| %>
                <% plan = encounter.patient_insurance_coverage&.insurance_plan %>
                <% payer = plan&.payer %>
                <div class="flex items-center justify-between border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900">
                      <%= encounter.date_of_service&.strftime("%b %d, %Y") %> —
                      <%= plan&.name || "Unknown plan" %>
                      <% if payer.present? %>
                        <span class="text-gray-500">(<%= payer.name %>)</span>
                      <% end %>
                    </p>
                    <p class="text-xs text-gray-500 mt-0.5">
                      <%= encounter.provider&.full_name %> · <%= encounter.specialty&.name %> · <%= encounter.status.humanize %>
                    </p>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <%= button_to "Check eligibility",
                          check_eligibility_tenant_patient_path(@patient),
                          method: :post,
                          params: { encounter_id: encounter.id },
                          class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-3 rounded-md transition-colors",
                          data: { confirm: "Submit eligibility check for this encounter?" } %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No encounters with insurance on file. Create an encounter with an insurance coverage selected to check eligibility.</p>
          <% end %>
        </div>

        <!-- Visit Count by Year and Service Type -->
        <% 
          visit_counts = @patient.visit_count_by_year_and_specialty
          specialties_map = Specialty.where(id: visit_counts.values.flat_map(&:keys).uniq).index_by(&:id)
        %>
        <% if visit_counts.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Visit Count by Calendar Year & Service Type</h2>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                    <% visit_counts.values.flat_map(&:keys).uniq.sort.each do |specialty_id| %>
                      <% specialty = specialties_map[specialty_id] %>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <%= specialty&.name || "Specialty #{specialty_id}" %>
                      </th>
                    <% end %>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% visit_counts.keys.sort.reverse.each do |year| %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                        <%= year %>
                      </td>
                      <% visit_counts.values.flat_map(&:keys).uniq.sort.each do |specialty_id| %>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 text-center">
                          <%= visit_counts[year]&.dig(specialty_id) || 0 %>
                        </td>
                      <% end %>
                      <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-center">
                        <%= @patient.total_visits_for_year(year) %>
                      </td>
                    </tr>
                  <% end %>
                  <!-- Total Row -->
                  <tr class="bg-gray-50 font-semibold">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                      Total (All Years)
                    </td>
                    <% visit_counts.values.flat_map(&:keys).uniq.sort.each do |specialty_id| %>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 text-center">
                        <%= @patient.total_visits_for_specialty(specialty_id) %>
                      </td>
                    <% end %>
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-center">
                      <%= @patient.encounters.kept.where(status: [:ready_for_review, :reviewed, :ready_to_submit, :completed_confirmed, :sent]).count %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <p class="mt-4 text-xs text-gray-500">
              * Visit counts include encounters with status: Ready for Review, Reviewed, Ready to Submit, Completed/Confirmed, or Sent
            </p>
          </div>
        <% end %>

        <!-- Notes -->
        <% if @patient.notes_nonphi.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Notes</h2>
            <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= @patient.notes_nonphi %></p>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-2">
            <%#= link_to "New Appointment", new_tenant_appointment_path(patient_id: @patient.id), class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
            <%= link_to "New Encounter", workflow_tenant_encounters_path(patient_id: @patient.id), class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
          </div>
        </div>

        <!-- Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Information</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">Created</label>
              <p class="text-sm text-gray-900"><%= format_in_organization_tz(@patient.created_at) %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Last Updated</label>
              <p class="text-sm text-gray-900"><%= format_in_organization_tz(@patient.updated_at) %></p>
            </div>
            
            <% if @patient.is_deceased? && @patient.deceased_at.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Deceased</label>
                <p class="text-sm text-gray-900"><%= format_in_organization_tz(@patient.deceased_at, "%B %d, %Y") %></p>
              </div>
            <% end %>

          </div>
        </div>

        <!-- Prescriptions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Prescriptions</h3>
            <%= link_to "New Prescription", new_tenant_prescription_path(patient_id: @patient.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>

          <% if @patient.prescriptions.kept.any? %>
            <div class="space-y-3">
              <% @patient.prescriptions.kept.order(created_at: :desc).each do |prescription| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <h4 class="text-sm font-semibold text-gray-900">
                          <%= link_to prescription.title, tenant_prescription_path(prescription), class: "text-blue-600 hover:text-blue-800" %>
                        </h4>
                        <% if prescription.archived? %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Archived
                          </span>
                        <% elsif prescription.expired? %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            Expired
                          </span>
                        <% else %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Active
                          </span>
                        <% end %>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                          <span class="text-gray-500">Date Written:</span>
                          <span class="ml-2 text-gray-900"><%= prescription.date_written&.strftime("%m/%d/%Y") || "—" %></span>
                        </div>
                        <div>
                          <span class="text-gray-500">Expires:</span>
                          <span class="ml-2 text-gray-900"><%= prescription.expires_on&.strftime("%m/%d/%Y") || "—" %></span>
                        </div>
                        <% if prescription.specialty.present? %>
                          <div>
                            <span class="text-gray-500">Specialty:</span>
                            <span class="ml-2">
                              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                <%= prescription.specialty.name %>
                              </span>
                            </span>
                          </div>
                        <% end %>
                        <% if prescription.procedure_code.present? %>
                          <div>
                            <span class="text-gray-500">Procedure:</span>
                            <span class="ml-2">
                              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                <%= prescription.procedure_code.code %>
                              </span>
                            </span>
                          </div>
                        <% end %>
                        <% if prescription.diagnosis_codes.any? %>
                          <div class="md:col-span-2">
                            <span class="text-gray-500">Diagnosis Codes:</span>
                            <div class="mt-1 flex flex-wrap gap-1">
                              <% prescription.diagnosis_codes.each do |dc| %>
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
                                  <%= dc.code %>
                                </span>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="ml-4">
                      <%= link_to "View", tenant_prescription_path(prescription), class: "text-sm text-blue-600 hover:text-blue-800" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="mt-4">
              <%= link_to "View All Prescriptions", tenant_prescriptions_path(patient_id: @patient.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No prescriptions on file.</p>
            <%= link_to "Create Prescription", new_tenant_prescription_path(patient_id: @patient.id), class: "mt-2 inline-block text-sm text-blue-600 hover:text-blue-800" %>
          <% end %>
        </div>

        <!-- Activity Summary -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Summary</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Appointments</span>
              <span class="text-sm font-semibold text-gray-900"><%= @patient.appointments.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Encounters</span>
              <span class="text-sm font-semibold text-gray-900"><%= @patient.encounters.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

