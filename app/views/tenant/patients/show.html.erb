<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @patient.full_name %></h1>
          <p class="mt-2 text-gray-600">Patient Details</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Patients", tenant_patients_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_tenant_patient_path(@patient), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" if @patient.can_edit_demographics? %>
        </div>
      </div>
    </div>

    <!-- Status Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-sm font-medium text-gray-700">Current Status:</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @patient.status_badge_color %>">
            <%= @patient.status.humanize %>
          </span>
        </div>

        <div class="flex space-x-2">
          <% if @patient.inactive? %>
            <%= link_to "Activate", activate_tenant_patient_path(@patient), method: :post,
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            <%= link_to "Reactivate", reactivate_tenant_patient_path(@patient), method: :post,
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <% end %>
          
          <% if @patient.active? %>
            <%= link_to "Inactivate", inactivate_tenant_patient_path(@patient), method: :post,
                class: "bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "Are you sure? Future appointments and encounters must be cancelled first." } %>
          <% end %>
          
          <% unless @patient.is_deceased? %>
            <%= link_to "Mark Deceased", mark_deceased_tenant_patient_path(@patient), method: :post,
                class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                data: { confirm: "This action is irreversible. Continue?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Patient Information -->
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Personal Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">First Name</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.first_name %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Last Name</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.last_name %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Date of Birth</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.formatted_dob || "Not provided" %></p>
              <% if @patient.age.present? %>
                <p class="text-sm text-gray-500">Age: <%= @patient.age %> years</p>
              <% end %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Sex at Birth</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.sex_at_birth || "Not provided" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">MRN</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.mrn || "-" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">External ID</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.external_id || "-" %></p>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.email || "Not provided" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700">Phone</label>
              <p class="mt-1 text-sm text-gray-900"><%= @patient.phone_number || "Not provided" %></p>
            </div>
          </div>
        </div>

        <!-- Address -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Address</h2>
          <div>
            <label class="block text-sm font-medium text-gray-700">Address</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= @patient.full_address || "Not provided" %>
            </p>
          </div>
        </div>

        <!-- Insurance Coverage -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Insurance Coverage</h2>
            <%= link_to "Manage Insurance", edit_tenant_patient_path(@patient, anchor: 'insurance'), class: "text-sm text-blue-600 hover:text-blue-800" if @patient.can_edit_demographics? %>
          </div>
          
          <% if @patient.patient_insurance_coverages.any? %>
            <div class="space-y-4">
              <% @patient.patient_insurance_coverages.order(coverage_order: :asc).each do |coverage| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <h3 class="text-sm font-semibold text-gray-900">
                          <%= coverage.insurance_plan&.name || "Unknown Plan" %>
                        </h3>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= coverage.coverage_order == 'primary' ? 'bg-blue-100 text-blue-800' : coverage.coverage_order == 'secondary' ? 'bg-green-100 text-green-800' : 'bg-purple-100 text-purple-800' %>">
                          <%= coverage.coverage_order.humanize %>
                        </span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= coverage.status_badge_class %>">
                          <%= coverage.status.humanize %>
                        </span>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                          <span class="text-gray-500">Member ID:</span>
                          <span class="ml-2 font-mono text-gray-900"><%= coverage.member_id %></span>
                        </div>
                        <div>
                          <span class="text-gray-500">Subscriber:</span>
                          <span class="ml-2 text-gray-900"><%= coverage.subscriber_name %></span>
                        </div>
                        <div>
                          <span class="text-gray-500">Relationship:</span>
                          <span class="ml-2 text-gray-900"><%= coverage.relationship_to_subscriber.humanize %></span>
                        </div>
                        <% if coverage.effective_date.present? || coverage.termination_date.present? %>
                          <div>
                            <span class="text-gray-500">Dates:</span>
                            <span class="ml-2 text-gray-900">
                              <%= coverage.effective_date&.strftime("%m/%d/%Y") || "—" %>
                              <% if coverage.termination_date.present? %>
                                - <%= coverage.termination_date.strftime("%m/%d/%Y") %>
                              <% end %>
                            </span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="ml-4">
                      <%= link_to "View Details", tenant_patient_insurance_coverage_path(coverage), class: "text-sm text-blue-600 hover:text-blue-800" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No insurance coverage on file.</p>
          <% end %>
        </div>

        <!-- Notes -->
        <% if @patient.notes_nonphi.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Notes</h2>
            <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= @patient.notes_nonphi %></p>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-2">
            <%= link_to "New Appointment", new_tenant_appointment_path(patient_id: @patient.id), class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
            <%= link_to "New Encounter", workflow_tenant_encounters_path(patient_id: @patient.id), class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
            <% if @current_organization&.organization_setting&.ezclaim_enabled? %>
              <%= button_to "Push To EZClaim", push_to_ezclaim_tenant_patient_path(@patient), method: :post, class: "block w-full text-center bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
            <% end %>
          </div>
        </div>

        <!-- Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Information</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">Created</label>
              <p class="text-sm text-gray-900"><%= @patient.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @patient.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            
            <% if @patient.is_deceased? && @patient.deceased_at.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Deceased</label>
                <p class="text-sm text-gray-900"><%= @patient.deceased_at.strftime("%B %d, %Y") %></p>
              </div>
            <% end %>

            <% if @patient.prescription.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Prescription Expiry</label>
                <p class="text-sm text-gray-900">
                  <%= @patient.prescription.expires_on&.strftime("%B %d, %Y") || "Not set" %>
                  <% if @patient.prescription.expired? %>
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Expired
                    </span>
                  <% end %>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Prescription Document -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Prescription Document</h3>

          <% if @patient.prescription&.documents&.attached? %>
            <div class="space-y-2">
              <% @patient.prescription.documents.each do |attachment| %>
                <div class="flex items-center justify-between p-2 border border-gray-200 rounded-md hover:bg-gray-50">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= attachment.filename %></p>
                    <p class="text-xs text-gray-500"><%= number_to_human_size(attachment.byte_size) %> · <%= attachment.content_type %></p>
                  </div>
                  <%= link_to "View", rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "ml-2 text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No prescription document attached.</p>
          <% end %>
        </div>

        <!-- Activity Summary -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Summary</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Appointments</span>
              <span class="text-sm font-semibold text-gray-900"><%= @patient.appointments.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Encounters</span>
              <span class="text-sm font-semibold text-gray-900"><%= @patient.encounters.count %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

