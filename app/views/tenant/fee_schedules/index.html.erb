<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Fee Schedule</h1>
          <p class="mt-2 text-gray-600">
            Manage rates for: <strong><%= @fee_schedule.name %></strong>
            (Organization-wide)
          </p>
          <p class="mt-1 text-sm text-gray-500">
            Procedure codes are automatically added when specialties are assigned to your organization.
          </p>
          <% if @missing_rate_count.positive? %>
            <div class="mt-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              <%= @missing_rate_count %> code(s) need a rate. Please fill the empty rates below.
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <% 
      @search_placeholder = "Procedure code, description..."
      @status_options = [["All Items", ""], ["Active", "true"], ["Inactive", "false"]]
      @organization_options = [] # Not needed for tenant
      @service_month_options = [] # Not applicable for fee schedule items
      @show_past_due = false
    %>
    <%= render "shared/filters" %>

    <!-- Fee Schedule Items Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pricing Rule</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rate per Unit</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @fee_schedule_items.each do |item| %>
              <tr class="hover:bg-gray-50" data-item-id="<%= item.id %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= item.procedure_code.code %></div>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% @current_organization.specialties_for_procedure_code(item.procedure_code_id).each do |specialty| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                        <%= specialty.name %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= item.procedure_code.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <select 
                    data-item-id="<%= item.id %>"
                    data-update-url="<%= tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, item) %>"
                    class="inline-edit-pricing-rule px-3 py-2 w-40 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                    data-original-value="<%= item.pricing_rule %>"
                  >
                    <option value="price_per_unit" <%= 'selected' if item.pricing_rule == 'price_per_unit' %>>Price per Unit</option>
                    <option value="flat" <%= 'selected' if item.pricing_rule == 'flat' %>>Flat</option>
                  </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500 sm:text-sm">$</span>
                      </div>
                      <input 
                        type="number" 
                        step="0.01" 
                        min="0"
                        value="<%= item.unit_price || '' %>"
                        data-item-id="<%= item.id %>"
                        data-update-url="<%= tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, item) %>"
                        class="inline-edit-rate pl-7 pr-3 py-2 w-32 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                        placeholder="Enter rate"
                        data-original-value="<%= item.unit_price || '' %>"
                      />
                    </div>
                    <span class="text-xs text-gray-500 saving-indicator hidden" data-item-id="<%= item.id %>">Saving...</span>
                    <span class="text-xs text-green-600 saved-indicator hidden" data-item-id="<%= item.id %>">âœ“ Saved</span>
                    <span class="text-xs text-red-600 error-indicator hidden" data-item-id="<%= item.id %>"></span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <button
                    type="button"
                    data-item-id="<%= item.id %>"
                    data-update-url="<%= tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, item) %>"
                    class="save-item-btn hidden inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                  >
                    Save
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @fee_schedule_items.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No procedure codes unlocked yet</div>
          <div class="text-gray-400 text-sm mt-2">Assign providers with specialties to unlock procedure codes</div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Track changes for each item
    function checkForChanges(itemId) {
      const rateInput = document.querySelector(`.inline-edit-rate[data-item-id="${itemId}"]`);
      const pricingRuleSelect = document.querySelector(`.inline-edit-pricing-rule[data-item-id="${itemId}"]`);
      const saveButton = document.querySelector(`.save-item-btn[data-item-id="${itemId}"]`);
      
      if (!rateInput || !pricingRuleSelect || !saveButton) return;
      
      const rateChanged = (parseFloat(rateInput.value) || null) != (rateInput.dataset.originalValue || '');
      const pricingRuleChanged = pricingRuleSelect.value != pricingRuleSelect.dataset.originalValue;
      
      if (rateChanged || pricingRuleChanged) {
        saveButton.classList.remove('hidden');
      } else {
        saveButton.classList.add('hidden');
      }
    }
    
    // Handle inline rate editing
    document.querySelectorAll('.inline-edit-rate').forEach(function(input) {
      input.addEventListener('input', function() {
        const itemId = this.dataset.itemId;
        checkForChanges(itemId);
      });
    });
    
    // Handle pricing rule changes
    document.querySelectorAll('.inline-edit-pricing-rule').forEach(function(select) {
      select.addEventListener('change', function() {
        const itemId = this.dataset.itemId;
        checkForChanges(itemId);
      });
    });
    
    // Handle save button clicks
    document.querySelectorAll('.save-item-btn').forEach(function(button) {
      button.addEventListener('click', function() {
        const itemId = this.dataset.itemId;
        const updateUrl = this.dataset.updateUrl;
        const rateInput = document.querySelector(`.inline-edit-rate[data-item-id="${itemId}"]`);
        const pricingRuleSelect = document.querySelector(`.inline-edit-pricing-rule[data-item-id="${itemId}"]`);
        
        const rateValue = parseFloat(rateInput.value) || null;
        const pricingRuleValue = pricingRuleSelect.value;
        
        updateItem(itemId, updateUrl, rateValue, pricingRuleValue);
      });
    });
    
    function updateItem(itemId, updateUrl, rateValue, pricingRuleValue) {
      const savingIndicator = document.querySelector(`.saving-indicator[data-item-id="${itemId}"]`);
      const savedIndicator = document.querySelector(`.saved-indicator[data-item-id="${itemId}"]`);
      const errorIndicator = document.querySelector(`.error-indicator[data-item-id="${itemId}"]`);
      const saveButton = document.querySelector(`.save-item-btn[data-item-id="${itemId}"]`);
      const rateInput = document.querySelector(`.inline-edit-rate[data-item-id="${itemId}"]`);
      const pricingRuleSelect = document.querySelector(`.inline-edit-pricing-rule[data-item-id="${itemId}"]`);
      
      // Hide save button and show saving indicator
      saveButton.classList.add('hidden');
      savingIndicator.classList.remove('hidden');
      savedIndicator.classList.add('hidden');
      errorIndicator.classList.add('hidden');
      
      // Prepare form data
      const formData = new FormData();
      formData.append('organization_fee_schedule_item[unit_price]', rateValue || '');
      formData.append('organization_fee_schedule_item[pricing_rule]', pricingRuleValue);
      
      // Send update request
      fetch(updateUrl, {
        method: 'PATCH',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Accept': 'application/json'
        },
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        savingIndicator.classList.add('hidden');
        
        if (data.success) {
          // Update original values
          rateInput.dataset.originalValue = rateValue || '';
          pricingRuleSelect.dataset.originalValue = pricingRuleValue;
          
          // Show saved indicator
          savedIndicator.classList.remove('hidden');
          setTimeout(() => {
            savedIndicator.classList.add('hidden');
          }, 2000);
        } else {
          // Show error
          errorIndicator.textContent = data.errors ? data.errors.join(', ') : 'Error saving changes';
          errorIndicator.classList.remove('hidden');
          
          // Revert to original values
          rateInput.value = rateInput.dataset.originalValue || '';
          pricingRuleSelect.value = pricingRuleSelect.dataset.originalValue;
          
          // Check if changes still exist after revert
          checkForChanges(itemId);
        }
      })
      .catch(error => {
        savingIndicator.classList.add('hidden');
        errorIndicator.textContent = 'Error saving changes';
        errorIndicator.classList.remove('hidden');
        
        // Revert to original values
        rateInput.value = rateInput.dataset.originalValue || '';
        pricingRuleSelect.value = pricingRuleSelect.dataset.originalValue;
        
        // Check if changes still exist after revert
        checkForChanges(itemId);
      });
    }
  });
</script>
