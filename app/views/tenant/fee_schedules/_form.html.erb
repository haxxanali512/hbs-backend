<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <% if @fee_schedule.errors.any? %>
    <div class="mb-6 bg-red-50 border border-red-200 text-red-800 rounded-md p-4">
      <div class="font-semibold mb-2"><%= pluralize(@fee_schedule.errors.count, "error") %> prohibited this fee schedule from being saved:</div>
      <ul class="list-disc ml-6 text-sm">
        <% @fee_schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @fee_schedule, url: (@fee_schedule.persisted? ? tenant_fee_schedule_path(@fee_schedule) : tenant_fee_schedules_path), local: true, class: "space-y-6") do |f| %>
    <div>
      <%= f.label :specialty_ids, "Select Specialties", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-3">Select one or more specialties to unlock procedure codes for your fee schedule</p>
      <div class="space-y-2 max-h-64 overflow-y-auto border border-gray-300 rounded-md p-4">
        <% @specialties.each do |specialty| %>
          <label class="flex items-center space-x-2 cursor-pointer hover:bg-gray-50 p-2 rounded">
            <%= check_box_tag "organization_fee_schedule[specialty_ids][]", 
                specialty.id, 
                @fee_schedule.specialty_ids.include?(specialty.id),
                { class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" } %>
            <span class="text-sm text-gray-700"><%= specialty.name %></span>
            <% if specialty.description.present? %>
              <span class="text-xs text-gray-500">- <%= truncate(specialty.description, length: 50) %></span>
            <% end %>
          </label>
        <% end %>
      </div>
      <%= hidden_field_tag "organization_fee_schedule[specialty_ids][]", "" %>
    </div>

    <div>
      <%= f.label :currency, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :currency, 
          OrganizationFeeSchedule.currencies.map { |k, v| [k.humanize, k] },
          { selected: @fee_schedule.currency || 'usd' },
          { class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "e.g., Standard Fee Schedule" %>
    </div>

    <div>
      <%= f.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :notes, 
          rows: 3,
          class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
          placeholder: "Optional notes about this fee schedule" %>
    </div>

    <% if @fee_schedule.persisted? %>
      <div>
        <%= f.label :locked, class: "flex items-center" do %>
          <%= f.check_box :locked, class: "mr-2" %>
          <span class="text-sm font-medium text-gray-700">Lock this fee schedule</span>
        <% end %>
        <p class="mt-1 text-sm text-gray-500">Locked schedules cannot be edited</p>
      </div>
    <% end %>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", 
          (@fee_schedule.persisted? ? tenant_fee_schedule_path(@fee_schedule) : tenant_fee_schedules_path),
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors" %>
      <%= f.submit (@fee_schedule.persisted? ? "Update Fee Schedule" : "Create Fee Schedule"),
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
