<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Edit Organization Location</h1>
          <p class="mt-2 text-gray-600">Update location details for <%= @organization_location.name %></p>
        </div>
        <div>
          <%= link_to "Back to Location", tenant_organization_location_path(@organization_location), class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <%= render "form", organization_location: @organization_location %>
    </div>
  </div>
</div>
