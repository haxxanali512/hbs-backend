<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Organization Locations</h1>
          <p class="mt-2 text-gray-600">Manage your organization's addresses</p>
        </div>
      </div>
    </div>

    <!-- Servicing Addresses Section -->
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Servicing Addresses</h2>
        <%= link_to "Add New Service Location", new_tenant_organization_location_path(address_type: :servicing), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @servicing_addresses.any? %>
                <% @servicing_addresses.each do |location| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">
                        <%= location.name %>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <% if location.address_line_1.present? %>
                        <div class="max-w-xs">
                          <%= location.address_line_1 %>
                          <% if location.address_line_2.present? %>
                            <br><%= location.address_line_2 %>
                          <% end %>
                          <% if location.city.present? %>
                            <br><%= location.city %>, <%= location.state %> <%= location.postal_code %>
                          <% end %>
                        </div>
                      <% else %>
                        <span class="text-gray-400">No address</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= location.phone_number.presence || "—" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= location.status_badge_color %>">
                        <%= location.status.humanize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-3">
                        <%= link_to "View", tenant_organization_location_path(location), 
                            class: "text-primary-blue hover:text-primary-green" %>
                        <%= link_to "Edit", edit_tenant_organization_location_path(location),
                            class: "text-primary-blue hover:text-primary-green" %>
                        <%= link_to "Delete", tenant_organization_location_path(location),
                            method: :delete,
                            data: { confirm: "Are you sure you want to delete this address?" },
                            class: "text-red-600 hover:text-red-800" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if @servicing_addresses.empty? %>
          <div class="text-center py-12">
            <div class="text-gray-500 text-lg">No servicing addresses found</div>
            <div class="text-gray-400 text-sm mt-2">Create your first servicing address to get started</div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Billing Addresses Section -->
