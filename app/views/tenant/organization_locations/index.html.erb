<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Organization Locations</h1>
          <p class="mt-2 text-gray-600">Manage your organization's locations</p>
        </div>
        <div>
          <%= link_to "New Location", new_tenant_organization_location_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <%
      @search_placeholder = "Name, address, city..."
      @status_options = @statuses
    %>
    <%= render "shared/filters" %>

    <!-- Organization Locations Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">POS Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @organization_locations.any? %>
              <% @organization_locations.each do |location| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                          <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          </svg>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to location.name, tenant_organization_location_path(location), class: "text-blue-600 hover:text-blue-800" %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <% if location.is_virtual? %>
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                              Virtual
                            </span>
                          <% else %>
                            Physical Location
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <% if location.address_line_1.present? %>
                      <div class="max-w-xs truncate">
                        <%= location.address_line_1 %>
                        <% if location.address_line_2.present? %>
                          <br><%= location.address_line_2 %>
                        <% end %>
                        <% if location.city.present? %>
                          <br><%= location.city %>, <%= location.state %> <%= location.postal_code %>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-gray-400">No address</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= location.place_of_service_code %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= location.status_badge_color %>">
                      <%= location.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= location.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", tenant_organization_location_path(location), class: "text-blue-600 hover:text-blue-800" %>
                      <%= link_to "Edit", edit_tenant_organization_location_path(location), class: "text-indigo-600 hover:text-indigo-800" %>
                      
                      <% if location.can_be_activated? %>
                        <%= link_to "Activate", activate_tenant_organization_location_path(location), method: :post,
                            class: "text-green-600 hover:text-green-800",
                            data: { confirm: "Are you sure you want to activate this location?" } %>
                      <% end %>
                      
                      <% if location.can_be_inactivated? %>
                        <%= link_to "Inactivate", inactivate_tenant_organization_location_path(location), method: :post,
                            class: "text-yellow-600 hover:text-yellow-800",
                            data: { confirm: "Are you sure you want to inactivate this location?" } %>
                      <% end %>

                      <% if location.can_be_reactivated? %>
                        <%= link_to "Reactivate", reactivate_tenant_organization_location_path(location), method: :post,
                            class: "text-green-600 hover:text-green-800",
                            data: { confirm: "Are you sure you want to reactivate this location?" } %>
                      <% end %>

                      <%= link_to "Delete", tenant_organization_location_path(location), method: :delete,
                          class: "text-red-600 hover:text-red-800",
                          data: { confirm: "Are you sure you want to delete this location?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">No organization locations found.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <div class="mt-6">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
