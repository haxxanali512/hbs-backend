<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= [@provider.first_name, @provider.last_name].compact.join(" ") %></h1>
          <p class="mt-2 text-gray-600">Provider Details</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Providers", tenant_providers_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_tenant_provider_path(@provider), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-500">First Name</label>
              <p class="text-sm text-gray-900"><%= @provider.first_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Last Name</label>
              <p class="text-sm text-gray-900"><%= @provider.last_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">NPI</label>
              <p class="text-sm text-gray-900"><%= @provider.npi.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Status</label>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @provider.status_badge_color %>">
                  <%= @provider.status.humanize %>
                </span>
              </p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Specialties</label>
              <p class="text-sm text-gray-900"><%= @provider.specialties.pluck(:name).join(", ").presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License Number</label>
              <p class="text-sm text-gray-900"><%= @provider.license_number.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License State</label>
              <p class="text-sm text-gray-900"><%= @provider.license_state.presence || "—" %></p>
            </div>
          </div>
        </div>


        <% if @provider.metadata.present? && @provider.metadata.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Additional Information</h2>
            <div class="text-sm text-gray-900">
              <pre class="whitespace-pre-wrap font-mono text-xs bg-gray-50 p-3 rounded"><%= JSON.pretty_generate(@provider.metadata) %></pre>
            </div>
          </div>
        <% end %>
      </div>

      <div class="space-y-6">
        <!-- Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
          <div class="space-y-2">
            <% if @provider.drafted? || @provider.pending? %>
              <%= button_to "Send Approval Reminder",
                            remind_approval_tenant_provider_path(@provider),
                            method: :post,
                            class: "w-full bg-green-600 hover:bg-green-700 text-white text-sm font-medium px-4 py-2 rounded-md cursor-pointer",
                            data: { turbo_confirm: "Send a reminder to HBS to review and approve this provider?" } %>
              <p class="text-xs text-gray-500">
                This sends a reminder to HBS to review this provider and complete enrollment.
              </p>
            <% else %>
              <p class="text-xs text-gray-500">
                This provider has already been reviewed by HBS; no action is required.
              </p>
            <% end %>
          </div>
        </div>

        <!-- System Information -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">System Information</h2>
          <div class="space-y-2 text-sm text-gray-900">
            <div class="flex justify-between">
              <span class="text-gray-600">Provider ID</span>
              <span class="font-mono"><%= @provider.id %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Created At</span>
              <span><%= @provider.created_at.strftime('%b %d, %Y %I:%M %p') %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Updated At</span>
              <span><%= @provider.updated_at.strftime('%b %d, %Y %I:%M %p') %></span>
            </div>
          </div>
        </div>

        <% if @provider.documents.attached? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Documents</h2>
            <div class="space-y-2">
              <% @provider.documents.attachments.each do |attachment| %>
                <div class="text-sm text-gray-900">
                  <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "inline"), target: "_blank", class: "text-primary-blue hover:text-primary-green" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


