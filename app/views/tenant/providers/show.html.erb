<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= [@provider.first_name, @provider.last_name].compact.join(" ") %></h1>
          <p class="mt-2 text-gray-600">Provider Details</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Back to Providers", tenant_providers_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <%= link_to "Edit", edit_tenant_provider_path(@provider), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-500">First Name</label>
              <p class="text-sm text-gray-900"><%= @provider.first_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Last Name</label>
              <p class="text-sm text-gray-900"><%= @provider.last_name %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">NPI</label>
              <p class="text-sm text-gray-900"><%= @provider.npi.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Status</label>
              <% status_colors = { "draft" => "bg-gray-100 text-gray-800", "pending" => "bg-yellow-100 text-yellow-800", "approved" => "bg-green-100 text-green-800", "rejected" => "bg-red-100 text-red-800", "suspended" => "bg-orange-100 text-orange-800" } %>
              <p class="text-sm">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[@provider.status] || 'bg-gray-100 text-gray-800' %>">
                  <%= @provider.status.humanize %>
                </span>
              </p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Specialty</label>
              <p class="text-sm text-gray-900"><%= @provider.specialty&.name || @provider.specialty_id || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License Number</label>
              <p class="text-sm text-gray-900"><%= @provider.license_number.presence || "—" %></p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">License State</label>
              <p class="text-sm text-gray-900"><%= @provider.license_state.presence || "—" %></p>
            </div>
          </div>
        </div>

        <% if @provider.user.present? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">User Account</h2>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="text-sm font-medium text-gray-500">Email</label>
                <p class="text-sm text-gray-900"><%= @provider.user.email.presence || "—" %></p>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-500">Phone</label>
                <p class="text-sm text-gray-900"><%= @provider.user.phone.presence || "—" %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if @provider.metadata.present? && @provider.metadata.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Additional Information</h2>
            <div class="text-sm text-gray-900">
              <pre class="whitespace-pre-wrap font-mono text-xs bg-gray-50 p-3 rounded"><%= JSON.pretty_generate(@provider.metadata) %></pre>
            </div>
          </div>
        <% end %>
      </div>

      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">System Information</h2>
          <div class="space-y-2 text-sm text-gray-900">
            <div class="flex justify-between"><span class="text-gray-600">Provider ID</span><span class="font-mono"><%= @provider.id %></span></div>
            <div class="flex justify-between"><span class="text-gray-600">User ID</span><span class="font-mono"><%= @provider.user_id || "—" %></span></div>
            <div class="flex justify-between"><span class="text-gray-600">Specialty ID</span><span class="font-mono"><%= @provider.specialty_id %></span></div>
            <div class="flex justify-between"><span class="text-gray-600">Organizations</span><span><%= @provider.organizations.count %></span></div>
            <div class="flex justify-between"><span class="text-gray-600">Created At</span><span><%= @provider.created_at.strftime('%b %d, %Y %I:%M %p') %></span></div>
            <div class="flex justify-between"><span class="text-gray-600">Updated At</span><span><%= @provider.updated_at.strftime('%b %d, %Y %I:%M %p') %></span></div>
          </div>
        </div>

        <% if @provider.organizations.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Organizations</h2>
            <div class="space-y-2">
              <% @provider.organizations.each do |org| %>
                <div class="text-sm text-gray-900">
                  <%= org.name %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


