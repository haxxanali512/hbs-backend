<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Providers</h1>
          <p class="mt-2 text-gray-600">Manage your organization's providers</p>
        </div>
        <div>
          <%= link_to "New Provider", new_tenant_provider_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specialty</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @providers.any? %>
            <% @providers.each do |provider| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to [provider.first_name, provider.last_name].compact.join(" "), tenant_provider_path(provider), class: "text-blue-600 hover:text-blue-800" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= provider.email.presence || "—" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= provider.phone.presence || "—" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= provider.specialty_id.presence || "—" %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_colors = { "draft" => "bg-gray-100 text-gray-800", "active" => "bg-green-100 text-green-800", "inactive" => "bg-yellow-100 text-yellow-800" } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[provider.status] %>">
                    <%= provider.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-3">
                    <%= link_to "View", tenant_provider_path(provider), class: "text-blue-600 hover:text-blue-800" %>
                    <%= link_to "Edit", edit_tenant_provider_path(provider), class: "text-gray-600 hover:text-gray-800" %>
                    <%= link_to "Delete", tenant_provider_path(provider), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
                  </div>
                </td>
              </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @providers.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No providers found</div>
          <div class="text-gray-400 text-sm mt-2">Create your first provider to get started</div>
        </div>
      <% end %>
    </div>
  </div>
</div>


