<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 space-y-8">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Encounter Workflow</h1>
        <p class="mt-1 text-sm text-gray-600">
          Prepare encounters for billing submission.
        </p>
      </div>
      <div>
        <%= link_to "Back to Encounters",
                    tenant_encounters_path,
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>

    <!-- Prepare Encounter -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-medium text-gray-900">Prepare Encounter</h2>
        <p class="mt-1 text-sm text-gray-500">
          Fill out the encounter details and save for submission. Encounters ready to submit will appear in the table below.
        </p>
      </div>

      <turbo-frame id="prepare_encounter_frame">
        <%= render "workflow_form",
                   encounter: @encounter,
                   patients: @patients,
                   providers: @providers,
                   specialties: @specialties,
                   locations: @locations,
                   appointments: @appointments,
                   diagnosis_codes: @diagnosis_codes %>
      </turbo-frame>
    </div>

    <!-- Queued Encounters -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200" data-controller="workflow-queued">
      <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
        <div>
          <h2 class="text-lg font-medium text-gray-900">Ready to Submit</h2>
          <p class="mt-1 text-sm text-gray-500">
            Encounters that have been reviewed and are ready to be sent to billing.
          </p>
        </div>
        <div>
          <%= form_with url: submit_queued_tenant_encounters_path,
                        method: :post,
                        data: { turbo_stream: true },
                        id: "submit-queued-form",
                        class: "inline" do |f| %>
            <%= f.hidden_field :encounter_ids, value: "", id: "encounter_ids_input" %>
            <%= hidden_field_tag :from_workflow, "1" %>
            <%= f.submit "Send for Billing",
                        id: "submit_queued_button",
                        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed",
                        disabled: true,
                        data: { "workflow-queued-target": "submitButton" } %>
          <% end %>
        </div>
      </div>

      <turbo-frame id="queued_encounters_frame">
        <%= render "queued_table", queued_encounters: @queued_encounters %>
      </turbo-frame>
    </div>
  </div>
</div>
<script>
(function() {
  var delegationBound = false;

  function getTableBody() {
    var frame = document.getElementById('queued_encounters_frame');
    if (frame) {
      var tbody = frame.querySelector('tbody');
      if (tbody) return tbody;
    }
    return document.querySelector('[data-workflow-queued-target="tableBody"]') || null;
  }

  function updateSubmitState() {
    var tableBody = getTableBody();
    var submitButton = document.getElementById('submit_queued_button');
    var encounterIdsInput = document.getElementById('encounter_ids_input');
    if (!tableBody) {
      if (submitButton) submitButton.disabled = true;
      return;
    }
    var checkboxes = tableBody.querySelectorAll('input.queued-encounter-checkbox');
    var checked = tableBody.querySelectorAll('input.queued-encounter-checkbox:checked');
    var hasSelections = checked.length > 0;
    if (submitButton) submitButton.disabled = !hasSelections;
    if (encounterIdsInput) {
      var ids = [];
      for (var i = 0; i < checked.length; i++) ids.push(checked[i].value);
      encounterIdsInput.value = ids.join(',');
    }
    var selectAll = document.getElementById('select_all_queued');
    if (selectAll && checkboxes.length > 0) {
      selectAll.checked = checked.length === checkboxes.length;
      selectAll.indeterminate = checked.length > 0 && checked.length < checkboxes.length;
    }
  }

  function toggleAll(ev) {
    var tableBody = getTableBody();
    if (!tableBody) return;
    var checkboxes = tableBody.querySelectorAll('input.queued-encounter-checkbox');
    var checked = ev.target.checked;
    for (var i = 0; i < checkboxes.length; i++) checkboxes[i].checked = checked;
    updateSubmitState();
  }

  function bindDelegation() {
    if (delegationBound) return;
    delegationBound = true;
    document.addEventListener('change', function(ev) {
      var el = ev.target;
      if (!el || el.type !== 'checkbox') return;
      if (el.id === 'select_all_queued') {
        toggleAll(ev);
      } else {
        var tableBody = getTableBody();
        if (tableBody && tableBody.contains(el)) updateSubmitState();
      }
    });
  }

  function bindSubmitForm() {
    var form = document.getElementById('submit-queued-form');
    if (!form || form.getAttribute('data-workflow-queued-bound') === 'true') return;
    form.setAttribute('data-workflow-queued-bound', 'true');
    form.addEventListener('submit', function(ev) {
      var tableBody = getTableBody();
      var encounterIdsInput = document.getElementById('encounter_ids_input');
      if (encounterIdsInput && tableBody) {
        var checked = tableBody.querySelectorAll('input.queued-encounter-checkbox:checked');
        var ids = [];
        for (var i = 0; i < checked.length; i++) ids.push(checked[i].value);
        encounterIdsInput.value = ids.join(',');
      }
      if (!encounterIdsInput || !encounterIdsInput.value) ev.preventDefault();
    });
  }

  function init() {
    if (!document.getElementById('submit-queued-form')) return;
    bindDelegation();
    bindSubmitForm();
    updateSubmitState();
  }

  window.handleRowClick = function(event, encounterId) {
    if (event.target.tagName === 'INPUT' || event.target.tagName === 'A' || event.target.tagName === 'BUTTON' || event.target.closest('a') || event.target.closest('button')) return;
    var base = window.location.pathname.replace(/\/workflow\/?$/, '') || '/tenant/encounters';
    window.location.href = base + '/' + encounterId + '/edit';
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
  document.addEventListener('turbo:load', init);
  document.addEventListener('turbo:after-stream-render', function() {
    setTimeout(init, 50);
  });
  document.addEventListener('turbo:frame-load', function(ev) {
    if (ev.target.id === 'queued_encounters_frame') setTimeout(init, 50);
  });
})();
</script>

