<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Specialties</h1>
          <p class="mt-2 text-gray-600">Available medical specialties and their allowed procedures</p>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <% 
      @search_placeholder = "Specialty name, description..."
    %>
    <%= render "shared/filters" %>

    <!-- Specialties Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specialty</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CPT Codes</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Providers</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @specialties.each do |specialty| %>
              <% 
                # Skip any accidentally blank specialties so we don't render an empty row
                next if specialty.name.blank?

                is_enabled = @enabled_specialty_ids.include?(specialty.id)
                provider_count = specialty.provider_count_for_organization(@current_organization)
              %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <input type="checkbox"
                         name="specialty_ids[]"
                         value="<%= specialty.id %>"
                         class="h-4 w-4 text-blue-600 border-gray-300 rounded specialty-checkbox"
                         <%= is_enabled ? 'checked disabled' : '' %>>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= specialty.name %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if is_enabled %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Enabled
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Locked
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= specialty.procedure_code_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= provider_count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "View", tenant_specialty_path(specialty), 
                      class: "text-primary-blue hover:text-primary-green" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @specialties.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No specialties found</div>
          <div class="text-gray-400 text-sm mt-2">Try adjusting your search terms</div>
        </div>
      <% end %>
    </div>

    <!-- Add Selected Specialties Button -->
    <div class="mt-4 flex justify-end">
      <button type="button" 
              id="add-selected-btn"
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
        Add Selected Specialties
      </button>
    </div>

    <!-- Confirmation Modal (matches shared modal pattern) -->
    <div id="confirm-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="confirm-modal-title" role="dialog" aria-modal="true">
      <div class="relative flex min-h-full items-center justify-center p-4">
        <div id="confirm-modal-overlay" class="absolute inset-0 bg-black/40 transition-opacity duration-300 ease-in-out"></div>
        <div id="confirm-modal-content" class="relative z-10 w-full max-w-md rounded-lg bg-white shadow-xl">
          <div class="px-8 py-8">
            <div class="flex items-center gap-3 mb-4">
              <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-amber-100">
                <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900" id="confirm-modal-title">Confirm Action</h3>
            </div>
            <p class="text-sm text-gray-600 mb-8">
              Are you sure you want to add the selected specialties? Once added, specialties cannot be removed.
            </p>
            <%= form_with url: add_selected_tenant_specialties_path, method: :post, id: "add-specialties-form", local: true, data: { turbo: false } do |f| %>
              <div class="flex items-center justify-end gap-3 pt-1">
                <button type="button"
                        id="cancel-btn"
                        class="rounded-md border border-gray-200 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                  Cancel
                </button>
                <button type="submit"
                        id="confirm-btn"
                        class="rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                  Confirm
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script>
      function initAddSelectedSpecialties() {
        const addBtn = document.getElementById('add-selected-btn');
        const modal = document.getElementById('confirm-modal');
        const cancelBtn = document.getElementById('cancel-btn');
        const form = document.getElementById('add-specialties-form');
        const checkboxes = document.querySelectorAll('.specialty-checkbox:not(:disabled)');

        if (!addBtn || !form) return;

        function updateButtonState() {
          const hasSelection = Array.from(checkboxes).some(cb => cb.checked);
          if (hasSelection) {
            addBtn.disabled = false;
            addBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            addBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
            addBtn.classList.remove('bg-gray-400', 'hover:bg-gray-500');
          } else {
            addBtn.disabled = true;
            addBtn.classList.add('opacity-50', 'cursor-not-allowed');
            addBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
            addBtn.classList.add('bg-gray-400', 'hover:bg-gray-500');
          }
        }

        // Update button state on checkbox change
        checkboxes.forEach(checkbox => {
          checkbox.addEventListener('change', updateButtonState);
        });

        // Initial state
        updateButtonState();

        addBtn.addEventListener('click', function(e) {
          e.preventDefault();

          // Re-query checkboxes in case DOM was updated
          const currentCheckboxes = document.querySelectorAll('.specialty-checkbox:not(:disabled)');
          const selectedIds = Array.from(currentCheckboxes)
            .filter(cb => cb.checked && !cb.disabled)
            .map(cb => cb.value);

          if (selectedIds.length === 0) {
            alert('Please select at least one specialty to add.');
            return;
          }

          // Clear only our specialty_ids[] hidden inputs (leave authenticity_token etc.)
          form.querySelectorAll('input[name="specialty_ids[]"]').forEach(input => input.remove());

          // Add hidden inputs for selected specialties
          selectedIds.forEach(id => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'specialty_ids[]';
            input.value = id;
            form.appendChild(input);
          });

          // Show modal
          modal.classList.remove('hidden');
        });

        // Cancel button handler
        cancelBtn.addEventListener('click', function() {
          modal.classList.add('hidden');
        });

        // Close modal on overlay click
        const overlay = document.getElementById('confirm-modal-overlay');
        if (overlay) {
          overlay.addEventListener('click', function() {
            modal.classList.add('hidden');
          });
        }

        // Close modal on outside click (backdrop)
        modal.addEventListener('click', function(e) {
          if (e.target === modal) {
            modal.classList.add('hidden');
          }
        });
      }

      // Use turbo:load so this runs on both initial load and Turbo Drive navigations
      document.addEventListener('turbo:load', initAddSelectedSpecialties);
    </script>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>
