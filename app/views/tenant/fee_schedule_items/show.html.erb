<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= link_to tenant_fee_schedule_fee_schedule_items_path(@fee_schedule), class: "text-gray-400 hover:text-gray-600 mr-4" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            <% end %>
            <div>
              <h1 class="text-3xl font-bold text-gray-900">
                <%= @fee_schedule_item.procedure_code.code %> - <%= @fee_schedule_item.procedure_code.description %>
              </h1>
              <p class="mt-2 text-gray-600">
                Item in: <strong><%= @fee_schedule.name %></strong>
              </p>
            </div>
          </div>
          
          <div class="flex space-x-3">
            <%= link_to "Back to Items", tenant_fee_schedule_fee_schedule_items_path(@fee_schedule),
                class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            
            <% if @fee_schedule_item.can_be_edited? %>
              <%= link_to "Edit", edit_tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item),
                  class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
            <% end %>
            
            <% if @fee_schedule_item.can_be_activated? %>
              <%= link_to "Activate", activate_tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item),
                  method: :post,
                  class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                  data: { confirm: "Are you sure you want to activate this item?" } %>
            <% elsif @fee_schedule_item.can_be_deactivated? %>
              <%= link_to "Deactivate", deactivate_tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, @fee_schedule_item),
                  method: :post,
                  class: "bg-orange-600 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded-lg transition-colors",
                  data: { confirm: "Are you sure you want to deactivate this item?" } %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Item Details -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Item Info -->
        <div>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Item Details</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Procedure Code</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @fee_schedule_item.procedure_code.code %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @fee_schedule_item.procedure_code.description %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Unit Price</dt>
                <dd class="mt-1 text-2xl font-semibold text-gray-900">
                  $<%= number_with_precision(@fee_schedule_item.unit_price, precision: 2) %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Pricing Rule</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @fee_schedule_item.pricing_rule.humanize %></dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Status & Actions -->
        <div>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Status & Actions</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <% if @fee_schedule_item.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Active
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Inactive
                    </span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Locked</dt>
                <dd class="mt-1">
                  <% if @fee_schedule_item.locked? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Locked
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Unlocked
                    </span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @fee_schedule_item.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @fee_schedule_item.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <!-- Pricing Snapshot -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Pricing Snapshot</h3>
        <p class="text-sm text-gray-600 mb-4">
          This is how this item will appear in pricing calculations and claim processing.
        </p>
        <div class="bg-gray-50 rounded-lg p-4">
          <pre class="text-sm text-gray-800"><%= JSON.pretty_generate(@fee_schedule_item.pricing_snapshot) %></pre>
        </div>
      </div>
    </div>
  </div>
</div>
