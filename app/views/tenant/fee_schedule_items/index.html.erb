<div class="min-h-screen bg-gray-50 py-8">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Fee Schedule</h1>
          <p class="mt-2 text-gray-600">
            Manage rates for: <strong><%= @fee_schedule.name %></strong>
            (Organization-wide)
          </p>
          <p class="mt-1 text-sm text-gray-500">
            Procedure codes are automatically added when specialties are assigned to your organization.
          </p>
        </div>
      </div>
    </div>

    <!-- Fee Schedule Items Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rate per Unit</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @fee_schedule_items.each do |item| %>
              <tr class="hover:bg-gray-50" data-item-id="<%= item.id %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= item.procedure_code.code %></div>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% @current_organization.specialties_for_procedure_code(item.procedure_code_id).each do |specialty| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                        <%= specialty.name %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= item.procedure_code.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500 sm:text-sm">$</span>
                      </div>
                      <input 
                        type="number" 
                        step="0.01" 
                        min="0"
                        value="<%= item.unit_price || '' %>"
                        data-item-id="<%= item.id %>"
                        data-update-url="<%= tenant_fee_schedule_fee_schedule_item_path(@fee_schedule, item) %>"
                        class="inline-edit-rate pl-7 pr-3 py-2 w-32 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                        placeholder="Enter rate"
                        data-original-value="<%= item.unit_price || '' %>"
                      />
                    </div>
                    <span class="text-xs text-gray-500 saving-indicator hidden" data-item-id="<%= item.id %>">Saving...</span>
                    <span class="text-xs text-green-600 saved-indicator hidden" data-item-id="<%= item.id %>">âœ“ Saved</span>
                    <span class="text-xs text-red-600 error-indicator hidden" data-item-id="<%= item.id %>"></span>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @fee_schedule_items.empty? %>
        <div class="text-center py-12">
          <div class="text-gray-500 text-lg">No procedure codes unlocked yet</div>
          <div class="text-gray-400 text-sm mt-2">Assign providers with specialties to unlock procedure codes</div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
          <%= pagination_info(@pagy) %>
        </div>
        <div>
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  (function() {
    function updateRate(itemId, updateUrl, value) {
      const savingIndicator = document.querySelector('.saving-indicator[data-item-id="' + itemId + '"]');
      const savedIndicator = document.querySelector('.saved-indicator[data-item-id="' + itemId + '"]');
      const errorIndicator = document.querySelector('.error-indicator[data-item-id="' + itemId + '"]');
      const input = document.querySelector('.inline-edit-rate[data-item-id="' + itemId + '"]');
      if (!input) return;

      if (savingIndicator) savingIndicator.classList.remove('hidden');
      if (savedIndicator) savedIndicator.classList.add('hidden');
      if (errorIndicator) { errorIndicator.classList.add('hidden'); errorIndicator.textContent = ''; }

      const formData = new FormData();
      formData.append('organization_fee_schedule_item[unit_price]', value !== null && value !== undefined ? value : '');

      const csrf = document.querySelector('meta[name="csrf-token"]');
      fetch(updateUrl, {
        method: 'PATCH',
        headers: {
          'X-CSRF-Token': csrf ? csrf.content : '',
          'Accept': 'application/json'
        },
        body: formData
      })
      .then(function(response) { return response.json(); })
      .then(function(data) {
        if (savingIndicator) savingIndicator.classList.add('hidden');
        if (data.success) {
          input.dataset.originalValue = value !== null && value !== undefined ? value : '';
          if (savedIndicator) {
            savedIndicator.classList.remove('hidden');
            setTimeout(function() { savedIndicator.classList.add('hidden'); }, 2000);
          }
        } else {
          if (errorIndicator) {
            errorIndicator.textContent = data.errors ? data.errors.join(', ') : 'Error saving rate';
            errorIndicator.classList.remove('hidden');
          }
          input.value = input.dataset.originalValue || '';
        }
      })
      .catch(function() {
        if (savingIndicator) savingIndicator.classList.add('hidden');
        if (errorIndicator) {
          errorIndicator.textContent = 'Error saving rate';
          errorIndicator.classList.remove('hidden');
        }
        input.value = input.dataset.originalValue || '';
      });
    }

    function initInlineRateEditing() {
      document.querySelectorAll('.inline-edit-rate').forEach(function(input) {
        if (input.dataset.rateHandlersAttached) return;
        input.dataset.rateHandlersAttached = 'true';

        input.addEventListener('blur', function() {
          const itemId = this.dataset.itemId;
          const updateUrl = this.dataset.updateUrl;
          const newValue = this.value === '' ? null : parseFloat(this.value);
          const originalValue = this.dataset.originalValue;
          if (String(newValue) !== String(originalValue)) {
            updateRate(itemId, updateUrl, newValue);
          }
        });

        input.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') this.blur();
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initInlineRateEditing);
    } else {
      initInlineRateEditing();
    }
    document.addEventListener('turbo:load', initInlineRateEditing);
  })();
</script>
