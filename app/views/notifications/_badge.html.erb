<% if unread_count > 0 %>
  <span
    id="notifications_badge"
    class="absolute top-0 right-0 flex h-4 w-4 items-center justify-center rounded-full bg-indigo-600 text-[10px] font-semibold text-white"
  >
    <%= unread_count > 9 ? '9+' : unread_count %>
  </span>
<% else %>
  <span id="notifications_badge"></span>
<% end %>

