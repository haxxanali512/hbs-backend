<% content_for :title, "Two-Factor Verification" %>

<div class="min-h-screen flex flex-col lg:flex-row">
  <!-- Left Side - OTP Form -->
  <div class="w-full lg:w-1/2 flex items-center justify-center bg-white">
    <div class="w-full max-w-md px-8 sm:px-12 lg:px-16">
      <div class="mb-8">
        <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-indigo-100 mb-4">
          <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Two-Factor Authentication</h1>
        <p class="text-sm text-gray-600">
          Enter the 6-digit code from your authenticator app to complete sign in.
        </p>
      </div>

      <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 rounded-md p-3 mb-4">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm text-red-800"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>

      <%= form_with url: users_mfa_authenticate_path, method: :post, local: true, class: "space-y-6" do %>
        <div>
          <label for="otp_code" class="block text-sm font-medium text-gray-700 mb-2">Verification Code</label>
          <input type="text" 
                 name="otp_code" 
                 id="otp_code" 
                 required
                 autocomplete="one-time-code"
                 inputmode="numeric"
                 pattern="[0-9]{6}"
                 maxlength="6"
                 class="w-full border border-gray-300 rounded-md px-4 py-3 text-xl font-mono tracking-[0.5em] text-center focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                 placeholder="000000"
                 autofocus>
          <p class="mt-2 text-xs text-gray-500">Open your authenticator app to view your code</p>
        </div>

        <div class="pt-2">
          <button type="submit" 
                  class="w-full flex justify-center py-2.5 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
            Verify & Sign In
          </button>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <p class="text-center text-sm text-gray-500 mb-4">
          Having trouble with your code?
        </p>
        <div class="space-y-3">
          <p class="text-xs text-gray-500 text-center">
            Make sure the time on your phone is correct. Codes expire every 30 seconds.
          </p>
          <%= link_to new_user_session_path, class: "flex items-center justify-center gap-2 text-sm text-gray-600 hover:text-gray-900" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to sign in
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Branding -->
  <div class="lg:flex lg:w-1/2 bg-gradient-to-br from-indigo-600 to-indigo-800 relative overflow-hidden">
    <div class="flex flex-col items-center justify-center text-center z-10 px-8 w-full h-full py-16">
      <div class="mb-10">
        <%= image_tag "HBS-logo-scaled (1).png",
            alt: "Holistic Business Solution",
            class: "h-28 w-auto mx-auto" %>
      </div>
      <div class="mb-6">
        <svg class="h-16 w-16 text-white/80 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-white mb-3">Secure Access</h2>
      <p class="text-indigo-100 text-base max-w-xs">
        Your account is protected with two-factor authentication for enhanced security
      </p>
    </div>
  </div>
</div>
