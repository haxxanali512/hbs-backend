<% content_for :title, "Setup Two-Factor Authentication" %>

<div class="w-full mx-auto py-8 px-4 sm:px-6 lg:px-8 max-w-2xl">
  <div class="rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden">
    <!-- Header -->
    <div class="px-5 py-4 sm:px-6 sm:py-5 border-b border-gray-100">
      <div class="flex items-center gap-3">
        <div class="flex-shrink-0 h-10 w-10 flex items-center justify-center rounded-full bg-indigo-100">
          <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <h1 class="text-base font-medium text-gray-800">Setup Authenticator App</h1>
          <p class="text-sm text-gray-500">Step 2 of 2: Verify your authenticator</p>
        </div>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if flash[:alert] %>
      <div class="mx-5 mt-4 sm:mx-6 rounded-lg border border-red-200 bg-red-50 p-4">
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm text-red-800"><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <!-- Content -->
    <div class="p-5 sm:p-6">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- QR Code Section -->
        <div class="text-center">
          <h3 class="text-sm font-medium text-gray-800 mb-4">Scan this QR code</h3>
          <div class="inline-block p-4 bg-white border-2 border-gray-200 rounded-lg shadow-sm">
            <%= raw @qr_code_svg %>
          </div>
          <p class="mt-4 text-xs text-gray-500">
            Scan with Google Authenticator, Authy, or Microsoft Authenticator
          </p>
        </div>

        <!-- Manual Entry Section -->
        <div>
          <h3 class="text-sm font-medium text-gray-800 mb-2">Can't scan the code?</h3>
          <p class="text-sm text-gray-600 mb-3">Enter this secret key manually in your authenticator app:</p>
          <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
            <code class="text-sm font-mono text-gray-800 break-all select-all"><%= @otp_secret %></code>
          </div>
          <button type="button" 
                  onclick="navigator.clipboard.writeText('<%= @otp_secret %>'); this.textContent = 'Copied!';"
                  class="mt-2 text-sm text-indigo-600 hover:text-indigo-700 font-medium">
            Copy to clipboard
          </button>
        </div>
      </div>

      <!-- Verification Form -->
      <div class="mt-8 pt-6 border-t border-gray-100">
        <h3 class="text-sm font-medium text-gray-800 mb-2">Verify your setup</h3>
        <p class="text-sm text-gray-600 mb-4">
          Enter the 6-digit code from your authenticator app to complete setup.
        </p>

        <%= form_with url: verify_users_mfa_path, method: :post, data: { turbo: false }, class: "space-y-4" do %>
          <div>
            <label for="otp_code" class="block text-sm font-medium text-gray-700 mb-1">Verification Code</label>
            <input type="text" 
                   name="otp_code" 
                   id="otp_code" 
                   required
                   autocomplete="one-time-code"
                   inputmode="numeric"
                   pattern="[0-9]{6}"
                   maxlength="6"
                   class="block w-full max-w-xs h-12 rounded-lg border border-gray-300 px-4 py-3 text-lg font-mono tracking-widest text-center focus:ring-3 focus:outline-hidden shadow-sm focus:border-indigo-300 focus:ring-indigo-500/10"
                   placeholder="000000"
                   autofocus>
            <p class="mt-1 text-xs text-gray-500">Enter the 6-digit code from your authenticator app</p>
          </div>

          <div class="flex items-center gap-4">
            <button type="submit" 
                    class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-indigo-700">
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Verify and Enable
            </button>
            <%= link_to "Cancel", users_mfa_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help Section -->
    <div class="px-5 py-4 sm:px-6 bg-indigo-50 border-t border-indigo-100">
      <div class="flex items-start gap-3">
        <svg class="h-5 w-5 text-indigo-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="text-sm text-indigo-800">
          <p class="font-medium">Recommended Authenticator Apps:</p>
          <ul class="mt-1 list-disc list-inside text-indigo-700">
            <li>Google Authenticator (iOS / Android)</li>
            <li>Microsoft Authenticator (iOS / Android)</li>
            <li>Authy (iOS / Android / Desktop)</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
